  <ThingDef Name="OEC_TurretGun_Big" ParentName="BaseWeaponTurret">
    <defName>OEC_TurretGun_Big</defName>
    <label>Judgement Turret</label>
    <description>Reconstructed OEC Sniper Rifle for turrets. Extremely armor-piercing.</description>
    <graphicData>
      <texPath>Things/Building/Security/OEC/TurretBig_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <AccuracyTouch>0.55</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>3.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>15</Mass>
    </statBases>
    <verbs>

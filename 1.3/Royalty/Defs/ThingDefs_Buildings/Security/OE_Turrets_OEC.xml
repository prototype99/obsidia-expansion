<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OEC ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>OEC_Turret_Small</defName>
    <label>OEC Peacemaker Turret</label>
    <description>An automatic OEC Revolver-equipped turret. Requires syntherius as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/OE_TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/OEC/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Obsidian>70</OE_Obsidian>
      <OE_Mythril>40</OE_Mythril>
	  <OE_Platinum>15</OE_Platinum>
	  <OE_Syntherius>25</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>1350</MarketValue>
    </statBases>
    <building>
      <combatPower>100</combatPower> 
	  <turretGunDef>OEC_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>0.7</turretBurstCooldownTime>
    </building>
    <researchPrerequisites>
      <li>OEDefence</li>
	  <li>OECWeapons</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>100</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>2.86</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs syntherius</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductPlant/Syntherius/Syntherius_c</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>

  <ThingDef Name="OEC_TurretGun_Small" ParentName="BaseWeaponTurret">
    <defName>OEC_TurretGun_Small</defName>
    <label>Peacemaker Turret</label>
    <description>Reconstructed OEC Revolver for turrets. Extremely armor-piercing.</description>
    <graphicData>
      <texPath>Things/Building/Security/OEC/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <statBases>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>1.75</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OEC_TurretBullet_Small</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>25.9</range>
        <burstShotCount>2</burstShotCount>
		<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>OEC_TurretBullet_Small</defName>
    <label>peacemaker turret bullet</label>
    <graphicData>
      <texPath>Things/Projectile/OEC_BulletSmall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
	  <armorPenetrationBase>0.3</armorPenetrationBase>
      <stoppingPower>1.5</stoppingPower>
      <speed>75</speed>
    </projectile>
  </ThingDef>
  

<Defs>
<!--=============== Monosword ====================-->
  <RecipeDef>
    <defName>OE_Bond_Monosword</defName>
    <label>Persona bond Monosword</label>
    <description>Persona bond an Monosword.</description>
    <jobString>Persona bonding a Monosword.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MeleeWeapon_MonoSword</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_PersonaKit</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>MeleeWeapon_MonoSword</li>
		<li>OE_PersonaKit</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <MeleeWeapon_MonoSwordBladelink>1</MeleeWeapon_MonoSwordBladelink>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


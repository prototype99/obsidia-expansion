<!--=============== CAC - Scythe ====================-->
<!--=============== Persona ====================-->
  <ThingDef ParentName="CACScytheBase">
    <defName>CAC_Scythe_P</defName>
    <label>Persona Souldrinker</label>
    <description>Persona Scythe used by CAC Cultists. Specially modified weapon with increased power but difficult to handle.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/CAC/Scythe_P</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<weaponTags>
	  <li>Bladelink</li>
    </weaponTags>
    <thingSetMakerTags>
      <li>WeaponBladelink</li>
    </thingSetMakerTags>
	<statBases>
      <MarketValue>3675</MarketValue>
    </statBases>
	<recipeMaker>
      <recipeUsers>
        <li>OE_PersonaTable</li>
      </recipeUsers>
	  <researchPrerequisite>CACGearAdv</researchPrerequisite>	
    </recipeMaker>
    <costList>
      <CAC_Scythe>1</CAC_Scythe>
	  <OE_PersonaKit>1</OE_PersonaKit>
    </costList>
	<comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_BladelinkWeapon">
        <biocodeOnEquip>true</biocodeOnEquip>
      </li>
      <li Class="CompProperties_GeneratedName">
        <nameMaker>NamerWeaponBladelink</nameMaker>
      </li>
    </comps>
  </ThingDef>


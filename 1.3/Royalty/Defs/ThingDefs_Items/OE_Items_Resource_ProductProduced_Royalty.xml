    <graphicData>
      <texPath>Things/Item/Resource/ProductProduced/OE_PersonaKit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>

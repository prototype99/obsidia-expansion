			  <textureWest>Things/Pawn/Humanlike/HeadAttachments/Bionic/OE_BionicEye_east</textureWest>
			  <flipWest>true</flipWest>
			  <flipOnWoundAnchorTag>LeftEye</flipOnWoundAnchorTag>
			  <flipOnRotation>South</flipOnRotation>
			  <scale>1.05</scale>
			</li>
		  </wounds>
		</li>
    </value>
</Operation>

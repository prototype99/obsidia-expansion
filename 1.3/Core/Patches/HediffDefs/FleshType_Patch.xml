<!--=============== Prosthetic - Normal ====================-->
<Operation Class="PatchOperationAdd">
    <xpath>/Defs/FleshTypeDef[defName="Normal"]/hediffWounds</xpath>
    <value>
        <li>
		  <hediff>OE_ProstheticEye</hediff>
		  <wounds>
		    <li>
			  <textureSouth>Things/Pawn/Humanlike/HeadAttachments/Bionic/OE_BionicEye_south</textureSouth>
			  <textureNorth>Things/Pawn/Humanlike/HeadAttachments/Bionic/OE_BionicEye_south</textureNorth>

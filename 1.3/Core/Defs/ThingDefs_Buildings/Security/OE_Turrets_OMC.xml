<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OMC ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>OMC_Turret_Small</defName>
    <label>OMC Doom Turret</label>
    <description>An automatic OMC Auto Shotgun-equipped turret. Requires syntherius as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/OE_TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/OMC/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Obsidian>75</OE_Obsidian>
      <OE_Mythril>25</OE_Mythril>
	  <OE_Platinum>15</OE_Platinum>
	  <OE_Syntherius>25</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>1100</MarketValue>
    </statBases>
    <building>
      <combatPower>100</combatPower> 
	  <turretGunDef>OMC_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>1.25</turretBurstCooldownTime>
    </building>
    <researchPrerequisites>
      <li>OEDefence</li>
	  <li>OMCWeapons</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>200</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>5.75</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs syntherius</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductPlant/Syntherius/Syntherius_c</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>

  <ThingDef Name="OMC_TurretGun_Small" ParentName="BaseWeaponTurret">
    <defName>OMC_TurretGun_Small</defName>
    <label>Doom Turret</label>
    <description>Reconstructed OMC Auto Shotgun for turrets. Rapid-fire and multiple-charge weapons with reduced damage.</description>
    <graphicData>
      <texPath>Things/Building/Security/OMC/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <statBases>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OMC_TurretBullet_Small</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>15.9</range>
        <burstShotCount>4</burstShotCount>
		<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>OMC_TurretBullet_Small</defName>
    <label>doom turret blast</label>
    <graphicData>
      <texPath>Things/Projectile/OMC_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>23</damageAmountBase>
	  <stoppingPower>3.0</stoppingPower>
	  <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>70</speed>
    </projectile>
  </ThingDef>
  

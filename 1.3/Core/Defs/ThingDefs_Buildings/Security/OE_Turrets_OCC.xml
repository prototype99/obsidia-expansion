  <ThingDef Name="OCC_TurretGun_Big" ParentName="BaseWeaponTurret">
    <defName>OCC_TurretGun_Big</defName>
    <label>Behemoth Turret</label>
    <description>Reconstructed OCC Rocket Launcher for turrets. Slow weapon are designed to use blast bullets.</description>
    <graphicData>
      <texPath>Things/Building/Security/OCC/TurretBig_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <RangedWeapon_Cooldown>10.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>15</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OCC_TurretBullet_Big</defaultProjectile>
        <forcedMissRadius>4.9</forcedMissRadius>
		<warmupTime>0</warmupTime>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <minRange>7.9</minRange>
		<range>44.9</range>
        <burstShotCount>8</burstShotCount>
		<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>OCC_TurretBullet_Big</defName>
    <label>behemoth turret rocket</label>
    <graphicData>
      <texPath>Things/Projectile/OCC_Rocket</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.5</drawSize>
    </graphicData>
	<thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>OCCBlast</damageDef>
      <damageAmountBase>50</damageAmountBase>
	  <explosionRadius>4.9</explosionRadius>
      <speed>45</speed>
    </projectile>
  </ThingDef>

</Defs>
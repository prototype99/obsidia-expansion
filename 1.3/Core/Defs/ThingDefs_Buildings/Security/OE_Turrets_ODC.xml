<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== ODC ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>ODC_Turret_Small</defName>
    <label>ODC Thoughtless Turret</label>
    <description>An automatic ODC Assault Rifle-equipped turret. Requires syntherius as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/ODC/TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/ODC/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Obsidian>70</OE_Obsidian>
      <OE_Mythril>20</OE_Mythril>
	  <OE_Platinum>30</OE_Platinum>
	  <OE_Syntherius>20</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>1100</MarketValue>
    </statBases>
    <building>
      <combatPower>75</combatPower> 
	  <turretGunDef>ODC_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>1.15</turretBurstCooldownTime>
    </building>
    <researchPrerequisites>
      <li>OEDefence</li>
	  <li>ODCGear</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>300</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>12</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs syntherius</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductPlant/Syntherius/Syntherius_c</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>

  <ThingDef Name="ODC_TurretGun_Small" ParentName="BaseWeaponTurret">
    <defName>ODC_TurretGun_Small</defName>
    <label>Thoughtless Turret</label>
    <description>Reconstructed ODC Assault Rifle for turrets. Specially modified weapon with non-lethal bullets.</description>
    <graphicData>
      <texPath>Things/Building/Security/ODC/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_SMG</soundInteract>
    <statBases>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.60</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ODC_TurretBullet_Small</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>25.9</range>
        <burstShotCount>6</burstShotCount>
		<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Shot_MachinePistol</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>ODC_TurretBullet_Small</defName>
    <label>thoughtless turret bullet</label>
    <graphicData>
      <texPath>Things/Projectile/ODC_BulletSmall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Stun</damageDef>
      <damageAmountBase>10</damageAmountBase>
	  <stoppingPower>1.0</stoppingPower>
	  <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>85</speed>
    </projectile>
  </ThingDef>
  
<!--=============== Big ====================-->

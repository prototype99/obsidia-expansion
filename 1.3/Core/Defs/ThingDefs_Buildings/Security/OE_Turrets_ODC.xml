    </graphicData>
    <uiIconPath>Things/Building/Security/ODC/TurretBig_Icon</uiIconPath>
	<statBases>
      <MaxHitPoints>350</MaxHitPoints>
	  <MarketValue>4925</MarketValue>
    </statBases>
    <building>
      <turretTopDrawSize>6</turretTopDrawSize>
	  <turretTopOffset>(0, 1.2)</turretTopOffset>

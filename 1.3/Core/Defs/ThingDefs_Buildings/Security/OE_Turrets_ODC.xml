  <ThingDef Name="ODC_TurretGun_Big" ParentName="BaseWeaponTurret">
    <defName>ODC_TurretGun_Big</defName>
    <label>N.A.C.J.A.C.</label>
    <description>Neo Armstrong Cyclone Jet Armstrong Cannon prohibited but legendary weapons of Obsidia.</description>
    <graphicData>
      <texPath>Things/Building/Security/ODC/TurretBig_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <statBases>
      <RangedWeapon_Cooldown>10.0</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>15</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ODC_TurretBullet_Big</defaultProjectile>
        <forcedMissRadius>2.9</forcedMissRadius>
        <warmupTime>0.0</warmupTime>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <minRange>9.9</minRange>
		<range>54.9</range>
		<burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>ODC_TurretBullet_Big</defName>
    <label>N.A.C.J.A.C. charge</label>
    <graphicData>
      <texPath>Things/Projectile/ODC_NACJAC_Charge</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	  <drawSize>2.0</drawSize>
    </graphicData>
	<thingClass>Projectile_DoomsdayRocket</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
	  <explosionRadius>9.9</explosionRadius>
      <speed>65</speed>
    </projectile>
  </ThingDef>

</Defs>
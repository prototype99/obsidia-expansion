  <ThingDef Name="OTC_TurretGun_Small_Acid" ParentName="BaseWeaponTurret">
    <defName>OTC_TurretGun_Small_Acid</defName>
    <label>Equalizer Turret(Acid)</label>
    <description>Reconstructed OTC SMG for turrets. Balanced weapon with Acid charges.</description>
    <graphicData>
      <texPath>Things/Building/Security/OTC/Acid/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OTC_TurretBullet_Small_Acid</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>15.9</range>
        <burstShotCount>6</burstShotCount>
		<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeBlaster</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">

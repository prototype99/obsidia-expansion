<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Obsidian ====================-->
  <ThingDef ParentName="RockBase">
    <defName>MineableOEObsidian</defName>
    <label>Obsidian ore</label>
    <description>Rock containing bits of obsidian.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(33,29,46)</color>
      <colorTwo>(22,18,35)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>10000</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>OE_Obsidian</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.05</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>2~6</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>


<Defs>
<!--=============== Pearlapple ====================-->
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>OE_Pearlapple_Fruit</defName>
    <label>pearlapple fruit</label>
    <description>Obsidias juicy crystal fruit that can be used as a meat substitute.</description>
	<soundInteract>Grain_Drop</soundInteract>
    <soundDrop>Grain_Drop</soundDrop>
    <graphicData>
      <texPath>Things/Item/Resource/ProductPlant/Pearlapple/Pearlapple</texPath>
    </graphicData>
    <statBases>
      <MarketValue>2.0</MarketValue>
      <Mass>0.05</Mass>
    </statBases>
	<thingCategories>
      <li>MeatRaw</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>30</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <tasteThought></tasteThought>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>


<Defs>
<!--=============== Obsidia Civilians ====================-->
  <PawnKindDef Name="OEPawnC" Abstract="True">
    <race>Human</race>
    <defaultFactionType>ObsidiaEmpire</defaultFactionType>
	<maxGenerationAge>65</maxGenerationAge>
	<baseRecruitDifficulty>0.35</baseRecruitDifficulty>
    <chemicalAddictionChance>0.15</chemicalAddictionChance>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <gearHealthRange>1~1</gearHealthRange>
	<invNutrition>2.55</invNutrition>
	<initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>10~15</initialResistanceRange>
    <biocodeWeaponChance>0.05</biocodeWeaponChance>
	<techHediffsDisallowTags>
      <li>OEBionics_NonBattle</li>
    </techHediffsDisallowTags>
	<disallowedTraits>
      <li>Nudist</li>
    </disallowedTraits>
	<specificApparelRequirements>
      <li>
		<requiredTag>OEWorker</requiredTag>
      </li>
    </specificApparelRequirements>
  </PawnKindDef>

<!--=============== Obsidia Fighters ====================-->
  <PawnKindDef Name="OEPawnF" Abstract="True">
    <race>Human</race>
    <defaultFactionType>ObsidiaEmpire</defaultFactionType>
	<isFighter>true</isFighter>
	<maxGenerationAge>40</maxGenerationAge>
	<baseRecruitDifficulty>0.75</baseRecruitDifficulty>
    <backstoryCryptosleepCommonality>0.05</backstoryCryptosleepCommonality>
    <biocodeWeaponChance>0.15</biocodeWeaponChance>
	<chemicalAddictionChance>0.20</chemicalAddictionChance>
    <combatEnhancingDrugsChance>0.25</combatEnhancingDrugsChance>
    <combatEnhancingDrugsCount>0~3</combatEnhancingDrugsCount>
	<apparelAllowHeadgearChance>0.85</apparelAllowHeadgearChance>
	<gearHealthRange>1~1</gearHealthRange>
    <invNutrition>2.55</invNutrition>
	<initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>10~15</initialResistanceRange>
    <apparelTags>
	  <li>OEModuleB</li>
	  <li>OEModuleI</li>
    </apparelTags>
	<techHediffsRequired>
      <li>DeathAcidifier</li>
    </techHediffsRequired>
	<techHediffsDisallowTags>
      <li>OEBionics_NonBattle</li>
    </techHediffsDisallowTags>
	<disallowedTraits>
      <li>Nudist</li>
	  <li>Brawler</li>
	  <li>BodyPurist</li>
    </disallowedTraits>
	<requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
	<specificApparelRequirements>
      <li>
		<requiredTag>OEMilitary</requiredTag>
      </li>
    </specificApparelRequirements>
	<inventoryOptions>
      <skipChance>0.35</skipChance>
      <subOptionsChooseOne>
        <li>
          <thingDef>OE_Blue_TionantJelly</thingDef>
          <countRange>1~2</countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
	<skills>
      <li>
        <skill>Shooting</skill>
        <range>3~4</range>
      </li>
	  <li>
        <skill>Melee</skill>
        <range>3~4</range>
      </li>
    </skills>
  </PawnKindDef>


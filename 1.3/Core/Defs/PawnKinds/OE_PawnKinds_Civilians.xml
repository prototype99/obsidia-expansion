<!--=============== Colonist ====================-->
  <PawnKindDef ParentName="OEPawnC">
	<defName>OE_Colonist</defName>
	<label>Obsidia colonist</label>
	<itemQuality>Normal</itemQuality>
	<isFighter>false</isFighter>
	<apparelMoney>1500~2500</apparelMoney>
	<apparelTags>
      <li>OEModuleI</li>
	  <li>OEModuleW</li>
    </apparelTags>
	<weaponMoney>3500~5500</weaponMoney>

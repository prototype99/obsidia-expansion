<Defs>
<!--=============== Arms ====================-->
<!--=============== Prosthetic - Normal ====================-->
  <HediffDef ParentName="OEAddBodyParts">
    <defName>OE_ProstheticArm</defName>
    <label>bionic arm</label>
    <labelNoun>a bionic arm</labelNoun>
    <description>An installed bionic arm.</description>
    <descriptionHyperlinks><ThingDef>OE_ProstheticArm</ThingDef></descriptionHyperlinks>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
        <tools>
          <li>
            <label>fist</label>
            <capacities>
              <li>Blunt</li>
            </capacities>
            <power>15</power>
			<armorPenetration>0.2</armorPenetration>
            <cooldownTime>1.5</cooldownTime>
            <soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
            <soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
          </li>
        </tools>
      </li>
    </comps>
    <spawnThingOnRemoved>OE_ProstheticArm</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.35</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
	<stages>
	  <li>
		<hungerRateFactorOffset>0.05</hungerRateFactorOffset>
		<statOffsets>
          <MeleeDoorDamageFactor MayRequire="Ludeon.Rimworld.Biotech">1.25</MeleeDoorDamageFactor>
        </statOffsets>
	  </li>
	</stages>
  </HediffDef>

  <ThingDef ParentName="OEBodyParts">
    <defName>OE_ProstheticArm</defName>
    <label>bionic arm</label>
    <description>Obsidia bionic arm. It is better than a biological arm in almost every way. Even if it is harmed, it repairs itself over time. The use of this prosthesis puts a small strain on the body.</description>
    <descriptionHyperlinks><RecipeDef>OE_InstallProstheticArm</RecipeDef></descriptionHyperlinks>
	<graphicData>
      <texPath>Things/Item/Health/Prosthetic/OE_Arm</texPath>
    </graphicData>
    <costList>
      <OE_DragonianWoodLog>35</OE_DragonianWoodLog>
	  <OE_Platinum>10</OE_Platinum>
      <OE_Syntherius>20</OE_Syntherius>
    </costList>
	<butcherProducts>
	  <OE_DragonianWoodLog>25</OE_DragonianWoodLog>
	  <OE_Platinum>5</OE_Platinum>
      <OE_Syntherius>10</OE_Syntherius>
	</butcherProducts>
    <statBases>
      <Mass>7.5</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="OESurgeryInstallBodyPartBase">
    <defName>OE_InstallProstheticArm</defName>
    <label>install bionic arm</label>
    <description>Install a bionic arm.</description>
    <descriptionHyperlinks>
      <ThingDef>OE_ProstheticArm</ThingDef>
      <HediffDef>OE_ProstheticArm</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing bionic arm.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OE_ProstheticArm</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OE_ProstheticArm</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Shoulder</li>
    </appliedOnFixedBodyParts>
    <addsHediff>OE_ProstheticArm</addsHediff>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>OE_RemoveProstheticArm</defName>
    <label>remove bionic arm</label>
    <description>Remove a bionic arm.</description>
    <jobString>Removing bionic arm.</jobString>
    <removesHediff>OE_ProstheticArm</removesHediff>
  </RecipeDef>

<!--=============== Implant - Slave ====================-->
  <HediffDef ParentName="OEImplantBodyParts">
    <defName>OE_ImplantBrain_Slave</defName>
    <label>brain implant - Sacrifice</label>
    <labelNoun>a brain implant - Sacrifice</labelNoun>
    <description>An installed brain implant - Sacrifice.</description>
    <descriptionHyperlinks><ThingDef>OE_ImplantBrain_Slave</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>OE_ImplantBrain_Slave</spawnThingOnRemoved>
	<stages>
	  <li>
		<painFactor>-0.65</painFactor>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0</postFactor>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <postFactor>0</postFactor>
          </li>
		  <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
	  </li>
	</stages>
  </HediffDef>


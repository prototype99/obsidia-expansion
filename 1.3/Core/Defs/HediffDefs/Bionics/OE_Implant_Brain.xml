<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Brain ====================-->
<!--=============== Implant - Psydeaf ====================-->
  <HediffDef ParentName="OEImplantBodyParts">
    <defName>OE_ImplantBrain_Psydeaf</defName>
    <label>brain implant - Psychically deaf</label>
    <labelNoun>a brain implant - Psychically deaf</labelNoun>
    <description>An installed brain implant - Psychically deaf.</description>
    <descriptionHyperlinks><ThingDef>OE_ImplantBrain_Psydeaf</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>OE_ImplantBrain_Psydeaf</spawnThingOnRemoved>
	<stages>
	  <li>
		<statOffsets>
          <PsychicSensitivity>-2</PsychicSensitivity>
        </statOffsets>
	  </li>
	</stages>
  </HediffDef>

  <ThingDef ParentName="OEBodyParts">
    <defName>OE_ImplantBrain_Psydeaf</defName>
    <label>brain implant - Psychically deaf</label>
    <description>Obsidia psychically deaf brain implant was designed to suppress psy-sensitivity.</description>
    <descriptionHyperlinks><RecipeDef>OE_InstallImplantBrain_Psydeaf</RecipeDef></descriptionHyperlinks>
	<graphicData>
      <texPath>Things/Item/Health/Implant/OE_Brain</texPath>
	  <drawSize>0.80</drawSize>
    </graphicData>
	<techHediffsTags>
      <li>OEBionics_NonBattle</li>
    </techHediffsTags>
    <costList>
      <OE_PlatinumSynthweave>35</OE_PlatinumSynthweave>
	  <OE_Obsidian>10</OE_Obsidian>
      <OE_Syntherius>20</OE_Syntherius>
    </costList>
	<butcherProducts>
	  <OE_PlatinumSynthweave>25</OE_PlatinumSynthweave>
	  <OE_Obsidian>5</OE_Obsidian>
      <OE_Syntherius>10</OE_Syntherius>
	</butcherProducts>
    <statBases>
      <Mass>1.0</Mass>
    </statBases>
  </ThingDef>

  <RecipeDef ParentName="OESurgeryInstalImplantBase">
    <defName>OE_InstallImplantBrain_Psydeaf</defName>
    <label>install brain implant - Psychically deaf</label>
    <description>Install a brain implant - Psychically deaf.</description>
    <descriptionHyperlinks>
      <ThingDef>OE_ImplantBrain_Psydeaf</ThingDef>
      <HediffDef>OE_ImplantBrain_Psydeaf</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing brain implant - Psychically deaf.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OE_ImplantBrain_Psydeaf</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OE_ImplantBrain_Psydeaf</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>OE_ImplantBrain_Psydeaf</addsHediff>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>OE_RemoveImplantBrain_Psydeaf</defName>
    <label>remove brain implant - Psychically deaf</label>
    <description>Remove a brain implant - Psychically deaf.</description>
    <jobString>Removing brain implant - Psychically deaf.</jobString>
    <removesHediff>OE_ImplantBrain_Psydeaf</removesHediff>
  </RecipeDef>
<!--=============== Implant - Prisoner ====================-->
  <HediffDef ParentName="OEImplantBodyParts">
    <defName>OE_ImplantBrain_Prisoner</defName>
    <label>brain implant - Suppression</label>
    <labelNoun>a brain implant - Suppression</labelNoun>
    <description>An installed brain implant - Suppression.</description>
    <descriptionHyperlinks><ThingDef>OE_ImplantBrain_Prisoner</ThingDef></descriptionHyperlinks>
    <spawnThingOnRemoved>OE_ImplantBrain_Prisoner</spawnThingOnRemoved>
	<stages>
	  <li>
		<statOffsets>
          <SlaveSuppressionFallRate MayRequire="Ludeon.Rimworld.Ideology">-0.5</SlaveSuppressionFallRate>
		  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.5</SlaveSuppressionOffset>
        </statOffsets>
		<restFallFactorOffset>-0.25</restFallFactorOffset>
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
	  </li>
	</stages>
	<comps>
      <li Class="HediffCompProperties_ReactOnDamage">
        <damageDefIncoming>EMP</damageDefIncoming>
        <createHediff>BrainShock</createHediff>
      </li>
    </comps>
  </HediffDef>


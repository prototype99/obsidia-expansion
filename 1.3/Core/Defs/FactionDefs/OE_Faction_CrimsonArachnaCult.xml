<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Crimson Arachna Cult - Faction ====================-->
  <FactionDef ParentName="FactionBase">
    <defName>ObsidiaCrimsonArachnaCult</defName>
    <label>Crimson Arachna Cult</label>
	<categoryTag>ObsidiaCult</categoryTag>
    <description>The ancient and dangerous cult of Obsidia, worshiping Arachnas as deities, was completely exterminated many centuries ago... But Crimson Arachna Cult survived, the surviving followers hid in the dark depths and shadows of the streets, step by step putting down the roots of their influence on Obsidia and its colonies. Having absorbed enough influence, power and technology, the cult again revealed itself to the world in order to exterminate all the infidels!\n\nThe cult completely rejects any relationship, other than hostility, with other factions.</description>
    <colorSpectrum>
	  <li>(0.74, 0.20, 0.23)</li>
	  <li>(0.70, 0.09, 0.09)</li>
    </colorSpectrum>
	<pawnSingular>cultist</pawnSingular>
    <pawnsPlural>cultists</pawnsPlural>
    <listOrderPriority>104</listOrderPriority>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
	<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
    <leaderTitle>vizier</leaderTitle>
	<leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
    <factionIconPath>World/WorldObjects/Expanding/CrimsonArachnaCult</factionIconPath>
    <fixedName>Crimson Arachna Cult</fixedName>
    <techLevel>Ultra</techLevel>
	<hidden>true</hidden>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>false</canUseAvoidGrid>
	<permanentEnemy>true</permanentEnemy>
    <hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
	<earliestRaidDays>95</earliestRaidDays>
	<allowedCultures>
	  <li>Rustican</li>
	  <li>Kriminul</li>
	  <li MayRequire="Ludeon.RimWorld.Royalty">Sophian</li>
	</allowedCultures>
	<requiredMemes>
	  <li MayRequire="VanillaExpanded.VMemesE">VME_ViolentConversion</li>
	</requiredMemes>
	<allowedMemes>
	  <li MayRequire="Ludeon.RimWorld.Ideology">Guilty</li>
	  <li MayRequire="Ludeon.RimWorld.Ideology">PainIsVirtue</li>
	  <li MayRequire="Ludeon.RimWorld.Ideology">Proselytizer</li>
	  <li MayRequire="VanillaExpanded.VMemesE">VME_InsectoidSupremacy</li>
	  <li MayRequire="VanillaExpanded.VMemesE">VME_MechanoidSupremacy</li>
	  <li MayRequire="VanillaExpanded.VMemesE">VME_BloodCourt</li>
	  <li MayRequire="VanillaExpanded.VMemesE">VME_ExaltedPriesthood</li>
	</allowedMemes>
	<structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>ImperialCommon</li>
		  <li>ImperialFighter</li>
        </categories>
        <commonality>0.3</commonality>
      </li>
	  <li>
        <categories>
          <li>Outlander</li>
		  <li>Offworld</li>
        </categories>
        <commonality>0.3</commonality>
      </li>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
        <commonality>0.3</commonality>
      </li>
    </backstoryFilters>
	<apparelStuffFilter>
      <thingDefs>
        <li>OE_Obsidian</li>
		<li>OE_ObsidianSynthweave</li>
        <li>OE_Mythril</li>
		<li>OE_MythrilSynthweave</li>
		<li>OE_Platinum</li>
		<li>OE_PlatinumSynthweave</li>
		<li>OE_Empyrium</li>
		<li>OE_EmpyriumSynthweave</li>
		<li>OE_Orichalcum</li>
		<li>OE_OrichalcumSynthweave</li>
      </thingDefs>
      <disallowedThingDefs>
        <li>Cloth</li>
		<li>Uranium</li>
      </disallowedThingDefs>
    </apparelStuffFilter>
	<fixedLeaderKinds>
      <li>CAC_Vizier</li>
    </fixedLeaderKinds>
    <allowedArrivalTemperatureRange>-100~200</allowedArrivalTemperatureRange>
    <raidLootMaker>ObsidiaEmpireRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
		<li>(1500, 150)</li>
        <li>(3000, 300)</li>
        <li>(5000, 500)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
	<raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
    <pawnGroupMakers>
	  <li>
        <kindDef>Combat</kindDef>
        <options>
		  <CAC_Acolyte>25</CAC_Acolyte>
		  <CAC_Apostle>25</CAC_Apostle>
		  <CAC_Disciple>25</CAC_Disciple>
		  <CAC_Prefect>25</CAC_Prefect>
		  <CAC_Confessor>25</CAC_Confessor>
		  <CAC_Deacon>25</CAC_Deacon>
		  <CAC_Pontifex>25</CAC_Pontifex>
		  <CAC_Acolyte_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Acolyte_Prestige>
		  <CAC_Apostle_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Apostle_Prestige>
		  <CAC_Disciple_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Disciple_Prestige>
		  <CAC_Prefect_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Prefect_Prestige>
		  <CAC_Confessor_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Confessor_Prestige>
		  <CAC_Deacon_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Deacon_Prestige>
		  <CAC_Pontifex_Prestige MayRequire="Ludeon.RimWorld.Royalty">15</CAC_Pontifex_Prestige>
		  <CAC_Mech_Arachna>20</CAC_Mech_Arachna>
		  <CAC_Vizier>5</CAC_Vizier>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/Expanding/Colony</settlementTexturePath>
  </FactionDef>

</Defs>
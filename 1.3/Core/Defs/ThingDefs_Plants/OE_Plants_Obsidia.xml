<Defs>
<!--=============== OE - Tree Pearlapple ====================-->
  <ThingDef ParentName="TreeBase">
    <defName>Plant_OE_TreePearlapple</defName>
    <label>Pearlapple tree</label>
    <description>Obsidias long-growing crystal tree bearing pearlapples. Pearlapple fruits used as a meat substitute.</description>
    <statBases>
		<Beauty>5</Beauty>
		<BeautyOutdoors>5</BeautyOutdoors>
		<Flammability>0.2</Flammability>
	</statBases>
    <graphicData>
      <texPath>Things/Plant/Pearlapple</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
		<volume>(0.15, 0.3, 0.15)</volume>
		<offset>(0,0,-0.38)</offset>
	  </shadowData>
    </graphicData>
    <selectable>true</selectable>
	<pathCost>14</pathCost>
    <plant>
		<dieIfLeafless>false</dieIfLeafless>
		<sowMinSkill>10</sowMinSkill>
		<growDays>35</growDays>
		<sowWork>5000</sowWork>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>OE_Pearlapple_Fruit</harvestedThingDef>
		<harvestYield>50</harvestYield>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<sowResearchPrerequisites>
			<li>OEFarm</li>
		</sowResearchPrerequisites>
		<topWindExposure>0</topWindExposure>
		<visualSizeRange>0.8~2.0</visualSizeRange>
		<fertilityMin>0.7</fertilityMin>
		<mustBeWildToSow>false</mustBeWildToSow>
		<immatureGraphicPath>Things/Plant/Pearlapple/Pearlapple_Immature</immatureGraphicPath>
		<leaflessGraphicPath>Things/Plant/Pearlapple/Pearlapple_Leafless</leaflessGraphicPath>
		<harvestWork>1250</harvestWork>
		<harvestFailable>true</harvestFailable>
		<harvestAfterGrowth>0.20</harvestAfterGrowth>
    </plant>
  </ThingDef>

<!--=============== OE - Tree Syntherius ====================-->

<!--=============== Smoker ====================-->
  <ThingDef ParentName="OMCArmorMod">
	<defName>OMC_Armor_M_Smoker</defName>
    <label>OMC Officer Armor(Fogler)</label>
    <description>Medium power armor, perfectly protects the owner with little mobility restriction. Designed and modified for use by OMC Regular Officers.\n\nModified with the addition of a Smokepop pack.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Armor/OMC/Smoker/OMCArmor_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
	  <MarketValue>3775</MarketValue>
	  <SmokepopBeltRadius>6.9</SmokepopBeltRadius>
    </statBases>
    <costList Inherit="False">
      <OMC_Armor_M>1</OMC_Armor_M>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Armor/OMC/Smoker/OMCArmor_M</wornGraphicPath>
	  <tags>
		<li>OMCOfficer_Smoker</li>
      </tags>
    </apparel>
	<comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>5</maxCharges>
        <ammoDef>OE_Syntherius</ammoDef>
        <ammoCountPerCharge>1</ammoCountPerCharge>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>smokepop</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
		<verbClass>Verb_Smokepop</verbClass>
		<commandIcon>UI/Abilities/Armor/Smoker</commandIcon>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
      </li>
    </verbs>
  </ThingDef>


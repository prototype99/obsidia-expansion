<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OMCArmorBase">
	<defName>OMC_Armor</defName>
    <label>OMC Soldier Armor</label>
    <description>Medium power armor, perfectly protects the owner with little mobility restriction. Designed for use by regular OMC soldiers.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Armor/OMC/OMCArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeTags>
      <li>OMCSoldier</li>
    </tradeTags>
    <statBases>
	  <MarketValue>3325</MarketValue>
	  <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>25</Insulation_Cold>
      <Insulation_Heat>35</Insulation_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>200</OE_Obsidian>
	  <OE_Mythril>50</OE_Mythril>
	  <OE_Mooncloth>50</OE_Mooncloth>
	  <OE_Syntherius>10</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Armor/OMC/OMCArmor</wornGraphicPath>
	  <tags>
		<li>OMCSoldier</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OMCArmor</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


<Defs>
<!--=============== Melee ====================-->
<!--=============== Chainsword ====================-->
  <ThingDef Name="OMCTrophyChainswordBase" ParentName="OEMeleeBaseNC" Abstract="True">
	<uiIconScale>1.2</uiIconScale>
	<statBases>
      <Mass>2.0</Mass>
    </statBases>
	<equippedStatOffsets>
      <PainShockThreshold>0.5</PainShockThreshold>
	  <MeleeDodgeChance>10.0</MeleeDodgeChance>
	  <MeleeHitChance>2</MeleeHitChance>
	  <MoveSpeed>0.1</MoveSpeed>
    </equippedStatOffsets>
	<tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
		<armorPenetration>0.25</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>chain</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>30</power>
		<armorPenetration>0.5</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OMCTrophyChainswordBase">
    <defName>OMC_Trophy_Chainsword</defName>
    <label>Empress's Blessing</label>
    <description>The good old chainsword is designed to destroy the enemies of Obsidia Empire.\n\nThis is a rare trophy weapon.\n\nFeature: a built-in module that improves combat performance.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/OMC/Trophy_ChainSword</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<weaponTags>
	  <li>OMCTrophyMelee</li>
    </weaponTags>
	<tradeTags>
      <li>OETrophyWeapons</li>
    </tradeTags>
	<statBases>
      <MarketValue>1550</MarketValue>
    </statBases>
  </ThingDef>

<!--=============== Ranged ====================-->
<!--=============== Pistol ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OMCTrophyPistolBase" ParentName="OERangedBaseNC" Abstract="True">
	<uiIconScale>1.2</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
	<weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
	<statBases>
	  <Mass>1.5</Mass>
	  <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.65</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_OMC_Trophy_P</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>21.9</range>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>


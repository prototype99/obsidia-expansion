<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Astrinx Base ====================-->
  <ThingDef Name="OEBaseAstrinx" ParentName="AnimalThingBase" Abstract="True">
    <devNote>obsidia</devNote>
    <statBases>
      <MoveSpeed>5.5</MoveSpeed>
      <MarketValue>1000</MarketValue>
      <ComfyTemperatureMin>-30</ComfyTemperatureMin>
	  <ComfyTemperatureMax>55</ComfyTemperatureMax>
      <FilthRate>2</FilthRate>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.25</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>7</power>
        <cooldownTime>1.25</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.50</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.50</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <predator>true</predator>
	  <packAnimal>false</packAnimal>
      <maxPreyBodySize>1.1</maxPreyBodySize>
      <petness>0.1</petness>
      <baseBodySize>1.2</baseBodySize>
      <baseHungerRate>0.1</baseHungerRate>
      <baseHealthScale>1.05</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>OE_Leather_Astrinx</leatherDef>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0.85</wildness>
      <manhunterOnTameFailChance>0.30</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.90</manhunterOnDamageChance>
      <gestationPeriodDays>9</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(2.5, 0.7)</li>
          <li>(3, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>45</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Cougar_Injured</soundWounded>
          <soundDeath>Pawn_Cougar_Death</soundDeath>
          <soundAngry>Pawn_Cougar_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>OEAnimal</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="OEKindBaseAstrinx" Abstract="True">
    <combatPower>175</combatPower>
    <ecoSystemWeight>0.3</ecoSystemWeight>
  </PawnKindDef>

<!--=============== Astrinx ====================-->
  <ThingDef ParentName="OEBaseAstrinx">
    <defName>OE_Astrinx</defName>
    <label>astrinx</label>
    <description>Obsidia Astrinx resembles a large domestic cat, that's what they can be. But it's very hard to tame them, because they are very fast and strong hunters.</description>
    <race>
      <meatLabel>Astrinx meat</meatLabel>
    </race>
  </ThingDef>


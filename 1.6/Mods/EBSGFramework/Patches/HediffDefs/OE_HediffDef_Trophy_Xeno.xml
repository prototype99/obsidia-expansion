<!--=============== Chaos Blade - Effect ====================-->
  <HediffDef>
    <defName>OE_Trophy_Xeno_RandomGiver_Hediff</defName>
    <label>Random Buff Giver</label>
    <description>You shouldn't be able to read this outside devmode.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <initialSeverity>1.0</initialSeverity>
	<maxSeverity>1.0</maxSeverity>
	<stages>
	  <li>
        <becomeVisible>false</becomeVisible>
      </li>
	</stages>
    <comps>
      <li Class="EBSGFramework.HediffCompProperties_GiveOtherHediffPeriodically">
	    <hediff>OE_Trophy_Xeno_RandomBuff_Hediff</hediff>
		<severity>0.1~1.0</severity>
		<severityCondition>Positive</severityCondition>
		<interval>60000</interval>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>OE_Trophy_Xeno_RandomBuff_Hediff</defName>
    <label>echo of chaos</label>
    <description>A lingering fragment of Rimuru Tempest’s unpredictable craft, pulsing with unstable energy. Once per day, the wielder receives a random positive effect.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <initialSeverity>0.05</initialSeverity>
	<maxSeverity>1.0</maxSeverity>
	<stages Inherit="False">
	  <li>
        <label>body</label>
		<minSeverity>0.1</minSeverity>
		<capMods>
		  <li>
		    <capacity>Consciousness</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
		    <capacity>Hearing</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
		    <capacity>Sight</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
		    <capacity>Talking</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
		    <capacity>Manipulation</capacity>
			<offset>0.1</offset>
		  </li>
		  <li>
		    <capacity>Moving</capacity>
			<offset>0.1</offset>
		  </li>
        </capMods>
	  </li>
	  <li>
        <label>hunger</label>
		<minSeverity>0.2</minSeverity>

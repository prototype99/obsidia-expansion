        </statOffsets>
      </li>
	  <li>
        <label>insulation</label>
		<minSeverity>0.6</minSeverity>
        <statOffsets>
          <ComfyTemperatureMin>-15</ComfyTemperatureMin>
          <ComfyTemperatureMax>15</ComfyTemperatureMax>
        </statOffsets>
      </li>
	  <li>
        <label>armor</label>
		<minSeverity>0.7</minSeverity>

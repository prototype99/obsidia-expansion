<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vanilla Expanded Framework</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
		  <li Class="PatchOperationAdd">
		    <xpath>/Defs</xpath>
			<value>
<!--=============== Moonveil Twins / Silver Eclipse - Effect ====================-->
  <HediffDef>
    <defName>OE_Trophy_Xeno_NightHunter_Hediff</defName>
    <label>Night Hunt</label>
    <description>The shadows awaken primal instincts, heightening speed and combat focus under cover of night.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <initialSeverity>1.0</initialSeverity>
	<maxSeverity>1.0</maxSeverity>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
	  <li>
        <minSeverity>1</minSeverity>
		<statOffsets>
	      <AimingDelayFactor>-0.5</AimingDelayFactor>
		  <ShootingAccuracyPawn>10</ShootingAccuracyPawn>
		  <MeleeHitChance>10</MeleeHitChance>
	      <MeleeDodgeChance>10</MeleeDodgeChance>
		  <MoveSpeed>0.25</MoveSpeed>
	    </statOffsets>
      </li>
    </stages>
    <comps>
      <li Class="EBSGFramework.HediffCompProperties_SeverityByLightLevel">
	    <lightToSeverityCurve>
		  <points>
		    <li>(0, 1)</li>
			<li>(0.6, 0.9)</li>
		  </points>
		</lightToSeverityCurve>
		<timeToSeverityCurve>
		  <points>
		    <li>(0, 1)</li>
			<li>(0.35, 0.9)</li>
			<li>(0.65, 0.9)</li>
			<li>(1, 1)</li>
		  </points>
		</timeToSeverityCurve>
      </li>
    </comps>
  </HediffDef>

<!--=============== Tyrant’s Edge - Effect ====================-->
  <HediffDef>
    <defName>ODC_Trophy_Xeno_BattleFury_Hediff</defName>
    <label>Battle Fury</label>
    <description>You shouldn't be able to read this outside devmode.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <initialSeverity>0.001</initialSeverity>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
    </stages>
    <comps>
      <li Class="EBSGFramework.HediffCompProperties_HediffOnKill">
        <hediff>ODC_Trophy_Xeno_BattleFury_BuffHediff</hediff>
        <severityForFirstKill>0.125</severityForFirstKill>
        <severityPerExtraKill>0.125</severityPerExtraKill>
        <allowHumanoids>True</allowHumanoids>
		<allowMechanoids>True</allowMechanoids>
        <allowAnimals>True</allowAnimals>
        <allowInsects>True</allowInsects>
		<allowDryads MayRequire="Ludeon.RimWorld.Ideology">True</allowDryads>
		<allowEntities MayRequire="Ludeon.RimWorld.Anomaly">True</allowEntities>
      </li>
    </comps>
  </HediffDef>

  <HediffDef>
    <defName>ODC_Trophy_Xeno_BattleFury_BuffHediff</defName>
    <label>battle fury</label>
    <description>A surge of primal rage fuels each strike, turning battle into a frenzy of motion and steel.\n\nEffect: Increases Move Speed and Melee Damage after scoring a kill with Tyrant’s Edge.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <minSeverity>0.001</minSeverity>
    <maxSeverity>1</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.2</severityPerDay>
      </li>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>50000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <label>First Blood</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.05</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.10</MoveSpeed>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.20</minSeverity>
        <label>Double Strike</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.10</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.20</MoveSpeed>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.35</minSeverity>
        <label>Killing Spree</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.15</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.30</MoveSpeed>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.50</minSeverity>
        <label>Rampage</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.20</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.40</MoveSpeed>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.65</minSeverity>
        <label>Unstoppable</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.25</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.50</MoveSpeed>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.80</minSeverity>
        <label>Godlike</label>
        <statOffsets>
		  <MeleeWeapon_DamageMultiplier>0.30</MeleeWeapon_DamageMultiplier>
		  <MoveSpeed>0.60</MoveSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>


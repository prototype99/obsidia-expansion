<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
	  <li>Royalty</li>
	</mods>
	<match Class="PatchOperationSequence">
	  <operations>
	    <li Class="PatchOperationAdd">
		  <xpath>/Defs</xpath>
		  <value>
<!--=============== Psy-Mutalisk ====================-->
  <ThingDef ParentName="BaseInsect" >
    <defName>OE_Mutalisk_Psy</defName>
    <label>psy-mutalisk</label>
    <description>Obsidia mutalisk is a genetically-engineered giant insectoid. This is not a combat unit. Designed as a support unit that emits an aura that weakens opponents.\n\nThe aura increases psy-sensitivity but reduces the rest of the psy potential.</description>
	<descriptionHyperlinks>
	  <HediffDef>OE_AuraMutalisk_Psy</HediffDef>
	</descriptionHyperlinks>
	<devNote>obsidia</devNote>
	<statBases>
      <MoveSpeed>2.5</MoveSpeed>
      <MarketValue>450</MarketValue>
	  <ComfyTemperatureMin>-25</ComfyTemperatureMin>
      <LeatherAmount>13</LeatherAmount>
	  <Wildness>0.65</Wildness>
    </statBases>
	<uiIconScale>1.15</uiIconScale>
    <tools>
      <li>
        <label>head claw</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>10</power>
        <cooldownTime>3.5</cooldownTime>
        <linkedBodyPartsGroup>HeadClaw</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>BeetleLikeWithClaw</body>
      <baseHungerRate>0.65</baseHungerRate>
	  <baseBodySize>2.0</baseBodySize>
      <baseHealthScale>1.75</baseHealthScale>
      <useMeatFrom>Megaspider</useMeatFrom>
      <trainability>Intermediate</trainability>
	  <leatherDef MayRequire="OskarPotocki.VFE.Insectoid2">VFEI2_Chitin</leatherDef>
      <lifeExpectancy>15</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>EusocialInsectLarva</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>EusocialInsectJuvenile</def>
          <minAge>0.05</minAge>
        </li>
        <li>
          <def>EusocialInsectAdult</def>
          <minAge>0.25</minAge>
          <soundWounded>Pawn_Spelopede_Pain</soundWounded>
          <soundDeath>Pawn_Spelopede_Death</soundDeath>
          <soundCall>Pawn_Spelopede_Call</soundCall>
          <soundAngry>Pawn_Spelopede_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundEating>Insectoid_Eat</soundEating>
	  <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
	<comps>
	  <li Class="VEF.AnimalBehaviours.CompProperties_HediffEffecter">
	    <hediff>OE_AuraMutalisk_Psy</hediff>
		<radius>45</radius>
		<severity>1</severity>
		<tickInterval>250</tickInterval>
	  </li>
	</comps>
  </ThingDef>

  <HediffDef>
    <defName>OE_AuraMutalisk_Psy</defName>
    <label>psy-disturbance</label>
    <description>Strong waves of psychic energy increase psychic sensitivity but reduce it's recovery rate.\n\nTo remove this effect, you need to track down and eliminate the psy-mutalisk.</description>
	<descriptionHyperlinks>
	  <ThingDef>OE_Mutalisk_Psy</ThingDef>
	</descriptionHyperlinks>
	<defaultLabelColor>(0.8, 0, 0)</defaultLabelColor>
	<scenarioCanAdd>false</scenarioCanAdd>
    <hediffClass>HediffWithComps</hediffClass>
	<maxSeverity>1.0</maxSeverity>
	<stages>
	  <li>
	    <statOffsets>
	      <PsychicSensitivity>0.5</PsychicSensitivity>
		  <MeditationFocusGain>-0.25</MeditationFocusGain>
		  <PsychicEntropyRecoveryRate>-0.091</PsychicEntropyRecoveryRate>
		</statOffsets>  
	  </li>
	</stages>
	<isBad>true</isBad>
	<comps>
	  <li Class="HediffCompProperties_SeverityPerDay">
	    <severityPerDay>-1</severityPerDay>
	  </li>
	</comps>
  </HediffDef>

  <PawnKindDef ParentName="AnimalKindBase">
    <defName>OE_Mutalisk_Psy</defName>
    <label>psy-mutalisk</label>
    <race>OE_Mutalisk_Psy</race>
	<combatPower>250</combatPower>
    <ecoSystemWeight>0.25</ecoSystemWeight>
	<canArriveManhunter>false</canArriveManhunter>
	<lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Mutalisk_Psy</texPath>
          <drawSize>1.0</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Dessicated_Mutalisk_east</texPath>
          <drawSize>1.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Mutalisk_Psy</texPath>
          <drawSize>1.5</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Dessicated_Mutalisk_east</texPath>
          <drawSize>1.5</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Mutalisk_Psy</texPath>
          <drawSize>2.25</drawSize>
          <shadowData>
            <volume>(0.4, 0.5, 0.37)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Mutalisk/Dessicated_Mutalisk_east</texPath>
          <drawSize>2.25</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

		  </value>
	    </li>	  
	  </operations>	  
	</match>
</Operation>

</Patch>

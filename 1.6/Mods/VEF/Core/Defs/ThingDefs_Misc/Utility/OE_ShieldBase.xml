		<li>Soldier</li>
	  </defaultOutfitTags>
	  <bodyPartGroups>
        <li>LeftHand</li>
		<li>Arms</li>
      </bodyPartGroups>
      <layers>
        <li>VFEC_OuterShell</li>
      </layers>
    </apparel>
  </ThingDef>


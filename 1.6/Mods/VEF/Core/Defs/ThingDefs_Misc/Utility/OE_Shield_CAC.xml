	  <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
	  <MoveSpeed>-0.25</MoveSpeed>
    </equippedStatOffsets>
	<comps>
      <li Class="VEF.Apparels.CompProperties_Shield">
        <shieldTags>
          <li>CACShield</li>
        </shieldTags>
        <useDeflectMetalEffect>true</useDeflectMetalEffect>
        <coveredBodyPartGroups>
          <li>Neck</li>
          <li>Torso</li>
          <li>Arms</li>
          <li>Hands</li>
          <li>Legs</li>
        </coveredBodyPartGroups>
        <offHandGraphicData>
          <texPath>Things/Item/Equipment/Utility/Shield/CAC/CACShield</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <drawSize>1.1</drawSize>
        </offHandGraphicData>
        <offHandHoldOffset>
          <northDefault>
            <offset>(-0.15, 0, 0.05)</offset>
            <behind>true</behind>
          </northDefault>
          <east>
            <offset>(0.05, 0, 0.05)</offset>
            <behind>true</behind>
          </east>
          <south>
            <offset>(0.15, -0.04, 0.05)</offset>
          </south>
          <west>
            <offset>(-0.05, -0.04, 0.05)</offset>
          </west>
        </offHandHoldOffset>
      </li>
    </comps>
	<tools>
      <li>
        <label>base</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
	  <li>
        <label>centre</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
	<recipeMaker>
      <researchPrerequisite>CACGear</researchPrerequisite>
	  <recipeUsers>
        <li>OE_ArmorStation</li>
		<li>OE_WeaponWorkbench</li>
      </recipeUsers>
	  <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_CAC_Utility</li>
    </thingCategories>
  </ThingDef>


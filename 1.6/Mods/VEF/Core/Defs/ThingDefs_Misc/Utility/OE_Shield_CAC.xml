<Defs>
<!--=============== CAC - Shields ====================-->
<!--=============== Big ====================-->
  <ThingDef ParentName="OEShieldBase">
    <defName>CAC_Shield_Big</defName>
    <label>Cursed Bulwark</label>
	<description>Regular big Shield used by CAC Cultists.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Shield/CAC/CACShield</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
	<tradeTags>
      <li>CACGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <MarketValue>1575</MarketValue>
	  <MaxHitPoints>250</MaxHitPoints>
      <ArmorRating_Sharp>1.70</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.95</ArmorRating_Blunt>
      <ArmorRating_Heat>0.80</ArmorRating_Heat>
      <WorkToMake>100000</WorkToMake>
      <Mass>5.0</Mass>
    </statBases>
	<costList>
      <OE_Obsidian>100</OE_Obsidian>
	  <OE_Mythril>30</OE_Mythril>
	  <OE_CultistKit>1</OE_CultistKit>
	  <OE_Syntherius>15</OE_Syntherius>

<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Boots ====================-->
<!--=============== Military ====================-->
  <ThingDef ParentName="OEUniformExtraBase">
    <defName>OE_Footwear_Military</defName>
    <label>obsidia military boots</label>
	<description>Military boots, perfectly protects and providing advanced skin sense feedback to the wearer. Designed for use by all Obsidia Empire militaries.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Uniform/Military/OEBoots</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
	<costList>
      <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.50</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.35</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.35</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <MoveSpeed>0.10</MoveSpeed>
	  <PainShockThreshold>0.10</PainShockThreshold>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.1</VacuumResistance>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
		<li>Feet</li>
	  </bodyPartGroups>
	  <layers>
		<li>Middle</li>
	  </layers>
	  <tags>
        <li>OEMilitaryFootwear</li>
      </tags>
	  <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>OEConstruction</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


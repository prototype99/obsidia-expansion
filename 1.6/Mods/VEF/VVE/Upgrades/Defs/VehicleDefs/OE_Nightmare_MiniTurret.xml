<Defs>
<!--=============== Vehicles Turret Base ====================-->
  <Vehicles.VehicleTurretDef Name="OEVehicleMiniTurretBase" ParentName="OEVehicleTurretBase" Abstract="True">
	<reloadSound>VVE_BulldogReloadSound</reloadSound>
	<autoSnapTargeting>true</autoSnapTargeting>
	<projectileOffset>1.0</projectileOffset>
	<reloadTimer>3.0</reloadTimer>
	<projectileShifting>
	  <li>0.0</li>
	  <li>-0.75</li>
	</projectileShifting>
	<ammunition>
	  <thingDefs>
		<li>OE_AmmoKit</li>
	  </thingDefs>
	</ammunition>
  </Vehicles.VehicleTurretDef>

<!--=============== OMC ====================--> 
  <Vehicles.VehicleTurretDef ParentName="OEVehicleMiniTurretBase">
	<defName>OMC_Nightmare_MiniTurret</defName>
	<label>Sutherland mini-turret</label>
	<description>A small mounted Auto Pistol turret used by OMC nightmare.</description>
	<graphicData>
	  <texPath>Things/Vehicles/Nightmare/MiniTurret/OE_Nightmare_MiniTurret</texPath>
	  <graphicClass>Vehicles.Graphic_Turret</graphicClass>
	  <shaderType>CutoutComplexPattern</shaderType>
	  <drawSize>(2, 2)</drawSize>
	</graphicData>
	<shotSound>Shot_Autopistol</shotSound>
	<magazineCapacity>85</magazineCapacity>
	<chargePerAmmoCount>0.315</chargePerAmmoCount>
	<warmUpTimer>0.75</warmUpTimer>
	<maxRange>20.9</maxRange>
	<projectile>Bullet_OMC_P_M</projectile>
	<fireModes>
	  <li>
		<shotsPerBurst>5</shotsPerBurst>
		<ticksBetweenShots>4</ticksBetweenShots>
		<ticksBetweenBursts>200</ticksBetweenBursts>
		<label>Burst</label>
		<texPath>UI/Gizmos/FireRate_Burst</texPath>
	  </li>
	</fireModes>
  </Vehicles.VehicleTurretDef>


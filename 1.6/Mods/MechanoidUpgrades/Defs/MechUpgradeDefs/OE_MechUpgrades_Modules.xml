<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Overcharged Module Base ====================-->
  <ThingDef ParentName="MU_MechModuleItemBase" Name="OEOverchargedModuleItemBase" Abstract="True">
    <statBases>
      <Flammability>0</Flammability>
	  <WorkToMake>25000</WorkToMake>
    </statBases>
	<costList>
      <OE_Empyrium>15</OE_Empyrium>
      <OE_Orichalcum>10</OE_Orichalcum>
	  <OE_Syntherius>10</OE_Syntherius>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
	<recipeMaker>
      <displayPriority>245</displayPriority>
	  <unfinishedThingDef>OE_UnfinishedMods</unfinishedThingDef>
	  <researchPrerequisite Inherit="false" />
	  <researchPrerequisites>
	    <li>OEMechtechAdv</li>
		<li>MU_AdvancedModules</li>
	  </researchPrerequisites>
	  <recipeUsers Inherit="False">
        <li>MU_AdvancedUpgradesAssembler</li>
      </recipeUsers>
    </recipeMaker>
	<thingSetMakerTags>
      <li>MU_AdvancedUpgrades</li>
	  <li>MU_AdvancedModules</li>
    </thingSetMakerTags>
	<techLevel>Ultra</techLevel>
	<tradeTags>
	  <li>MU_AdvancedUpgrade</li>
    </tradeTags>
  </ThingDef>

<!--=============== Repair ====================-->
  <ThingDef ParentName="OEOverchargedModuleItemBase">
    <defName>OE_MechUpgrade_Module_Repair_O</defName>
    <label>overcharged repair module</label>
	<description>Overcharged module, that can be installed into mechanoid repair system, making it more efficient.\n\nThis Obsidia modification has improved efficiency but increases power consumption.</description>
	<uiIconPath>Things/Item/MechanoidUpgrade/Modules/OE_Overcharged_Module_Repair</uiIconPath>
	<graphicData>
      <texPath>Things/Item/MechanoidUpgrade/Modules/OE_Overcharged_Module_Repair</texPath>
    </graphicData>
	<comps>
      <li Class="MU.CompProperties_MechUpgrade">
        <upgradeDef>OE_MechUpgrade_Module_Repair_O</upgradeDef>
      </li>
    </comps>
  </ThingDef>
  
  <MU.MechUpgradeDef ParentName="MU_RepairModuleBase">
    <defName>OE_MechUpgrade_Module_Repair_O</defName>
    <label>overcharged repair module</label>
	<description>Overcharged module, that can be installed into mechanoid repair system, making it more efficient.\n\nThis Obsidia modification has improved efficiency but increases power consumption.</description>
	<uiIconPath>Things/Item/MechanoidUpgrade/Modules/OE_Overcharged_Module_Repair</uiIconPath>
    <statFactors>
	  <MechEnergyLossPerHP>0.25</MechEnergyLossPerHP>
	  <MechEnergyUsageFactor>1.10</MechEnergyUsageFactor>
	</statFactors>
	<linkedThingDef>OE_MechUpgrade_Module_Repair_O</linkedThingDef>
  </MU.MechUpgradeDef>


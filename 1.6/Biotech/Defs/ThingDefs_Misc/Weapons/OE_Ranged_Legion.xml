<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Legion Beam Turret ====================-->
  <ThingDef ParentName="BaseWeaponTurret">
    <defName>OE_LegionBeamTurret</defName>
    <label>Legion beam turret</label>
    <description>A small charge blaster turret designed for use on a the Fallen Legion.</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Drone/NullWeapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
	  <Mass>5.0</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
	  <RangedWeapon_Cooldown>25.0</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_ShootBeam</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0.15</warmupTime>
        <range>14.9</range>
        <minRange>2.9</minRange>
        <beamFullWidthRange>6.9</beamFullWidthRange>
        <burstShotCount>5</burstShotCount>
        <showBurstShotStats>false</showBurstShotStats>
        <beamWidth>6</beamWidth>
        <ticksBetweenBurstShots>40</ticksBetweenBurstShots>
        <beamDamageDef>Beam</beamDamageDef>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundCastBeam>BeamGraser_Shooting</soundCastBeam>
        <beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
        <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
        <beamMaxDeviation>1.5</beamMaxDeviation>
        <beamCurvature>0.6</beamCurvature>
        <beamMoteDef>OES_Mote_GraserBeamBase</beamMoteDef>
        <beamEndEffecterDef>GraserBeam_End</beamEndEffecterDef>
        <beamChanceToStartFire>0.85</beamChanceToStartFire>
        <beamChanceToAttachFire>0.85</beamChanceToAttachFire>
        <beamFireSizeRange>0.55~0.85</beamFireSizeRange>
        <beamLineFleckDef>OES_Fleck_BeamSpark</beamLineFleckDef>
        <beamStartOffset>0.8</beamStartOffset>
        <beamLineFleckChanceCurve>
          <points>
            <li>(0, 0)</li>
            <li>(0.65, 0.4)</li>
            <li>(1, 0.75)</li>
          </points>
        </beamLineFleckChanceCurve>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

<!--=============== Legion Spear ====================-->
  <ThingDef ParentName="OEMeleeBaseNQ">
    <defName>OE_LegionSpearTurret</defName>
    <label>Fallen Legion Spear</label>
    <description>An incredibly powerful gun-spear designed for the Fallen Legion. Specially modified weapon charged with Fire and EMP damages.\n\nCan be used in both melee and ranged combat.</description>
	<descriptionHyperlinks>
      <ThingDef>OE_Mech_FallenLegion</ThingDef>
    </descriptionHyperlinks>
	<graphicData>
      <texPath>Things/Item/Equipment/Weapons/OES/Mechanoid_LegionSpearTurret</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>4.0</drawSize>
    </graphicData>
	<uiIconScale>0.28</uiIconScale>
	<equippedAngleOffset>45</equippedAngleOffset>
	<tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
	<statBases>
	  <MarketValue>2000</MarketValue>
	  <Mass>25.0</Mass>
	  <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>1.30</AccuracyShort>
      <AccuracyMedium>1.50</AccuracyMedium>
      <AccuracyLong>1.10</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
	<weaponTags>
	  <li>OESLegionSpear</li>
    </weaponTags>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_OE_LST</defaultProjectile>
        <warmupTime>2.5</warmupTime>
        <range>24.9</range>
		<burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
        <soundCast>ThumpCannon_Fire</soundCast>
		<soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>55</power>
		<armorPenetration>1.10</armorPenetration>
        <cooldownTime>2.5</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>20</amount>
          </li>
		  <li>
            <def>EMP</def>
            <amount>20</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_OE_LST</defName>
	<label>Fallen Legion Guard Spear energy bullet</label>
	<graphicData>
	  <texPath>Things/Projectile/OE_Trophy_EnergyBlast</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>MoteGlow</shaderType>
	  <drawSize>1.20</drawSize>
    </graphicData>
	<projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>55</damageAmountBase>
	  <armorPenetrationBase>0.90</armorPenetrationBase>
	  <stoppingPower>1.5</stoppingPower>
      <speed>100</speed>
	  <extraDamages>
		<li>
         <def>Flame</def>
		 <amount>10</amount>
       </li>
	   <li>
         <def>EMP</def>
		 <amount>10</amount>
       </li>
	  </extraDamages>
    </projectile>
  </ThingDef>


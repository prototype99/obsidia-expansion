<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== EGO - GrenadeLauncher ====================-->
  <ThingDef ParentName="OERangedBaseNQE">
    <defName>EGO_GrenadeLauncher</defName>
    <label>Sporothrix</label>
    <description>Amalgam Grenade Launcher used by Undyings. Amalgams are hybrids of EGO seed and Obsidia technology. Specially gestated weapon charged with Cryo and Toxic-Gas damages.\n\nThis modification deprives item's quality levels.</description>
	<tickerType>Normal</tickerType>
	<equippedAngleOffset>60</equippedAngleOffset>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/EGO/GrenadeLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
	<soundInteract>Interact_ChargeLance</soundInteract>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
	<weaponTags>
	  <li>EGOGun</li>
    </weaponTags>
	<tradeTags>
      <li>EGOWeapon</li>
    </tradeTags>
	<equippedStatOffsets>
	  <RestRateMultiplier>-0.35</RestRateMultiplier>
	  <PainShockThreshold>-0.35</PainShockThreshold>
	  <MentalBreakThreshold>0.15</MentalBreakThreshold>
	  <ImmunityGainSpeed>0.35</ImmunityGainSpeed>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.50</ToxicEnvironmentResistance>
	  <PsychicSensitivity MayRequire="Ludeon.RimWorld.Royalty">0.50</PsychicSensitivity>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.083</PsychicEntropyRecoveryRate>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.15</VacuumResistance>
	</equippedStatOffsets>
	<statBases>
      <MarketValue>4945</MarketValue>
	  <Mass>5.5</Mass>
	  <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EGO_GL</defaultProjectile>
        <warmupTime>4.0</warmupTime>
        <range>24.9</range>
		<forcedMissRadius>1.9</forcedMissRadius>
		<burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Pawn_BigInsect_Angry</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>fang</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>20</power>
		<armorPenetration>0.5</armorPenetration>
        <cooldownTime>2.5</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>OTCAcid</def>
            <amount>10</amount>
          </li>
		  <li>
            <def>OTCCryo</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
	<thingCategories Inherit="False">
      <li>OE_Category_Weapons_EGO_Ranged</li>
    </thingCategories>
	<possessionCount>0</possessionCount>
	<comps MayRequire="Ludeon.RimWorld.Odyssey" Inherit="False">
      <li Class="CompProperties_Styleable"/>
	  <li Class="CompProperties_Forbiddable"/>
	  <li Class="CompProperties_EquippableAbilityReloadable"/>
	  <li Class="CompProperties_Biocodable"/>
	  <li MayRequire="Ludeon.RimWorld.Odyssey" Class="CompProperties_UniqueWeapon">
        <weaponCategories>
          <li>Ranged</li>
          <li>Scoped</li>
        </weaponCategories>	
		<namerLabels>
          <li>Sporothrix</li>
        </namerLabels>
      </li>
    </comps>
  </ThingDef>

<!--=============== Bullets ====================-->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_EGO_GL</defName>
    <label>Sporothrix grenade</label>
    <graphicData>
      <texPath>Things/Projectile/EGO_Grenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<thingClass>Projectile_Explosive</thingClass>
	<projectile>
      <damageDef>OTCCryo</damageDef>
      <damageAmountBase>35</damageAmountBase>
	  <explosionRadius>1.9</explosionRadius>
	  <explosionRadiusDisplayPadding>1.1</explosionRadiusDisplayPadding>
	  <armorPenetrationBase>0.30</armorPenetrationBase>
	  <postExplosionGasType>ToxGas</postExplosionGasType>
	  <arcHeightFactor>0.4</arcHeightFactor>
      <ai_IsIncendiary>true</ai_IsIncendiary>
	  <screenShakeFactor>0.25</screenShakeFactor>
      <shadowSize>0.6</shadowSize>
      <speed>50</speed>
    </projectile>
  </ThingDef>


<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Worker Antenna ====================-->
  <ThingDef ParentName="BuildingBase">
    <defName>OE_MechWorkerAntenna</defName>
    <label>mech efficiency obsidia antenna</label>
    <description>A remote mech efficiency device. Any mechanoids in its effect radius will improves working stats.</description>
    <graphicData>
      <texPath>Things/Building/Misc/OE_MechWorkerAntenna</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,4)</drawSize>
	  <drawOffset>(0,0,0.75)</drawOffset>
      <shadowData>
        <volume>(0.8, 0.35, 0.8)</volume>
        <offset>(0, 0, -0.2)</offset>
      </shadowData>
    </graphicData>	
	<uiOrder>2420.666</uiOrder>
	<descriptionHyperlinks>
      <HediffDef>OE_BattlecraftRush</HediffDef>
    </descriptionHyperlinks>
	<costList>
      <OE_Empyrium>15</OE_Empyrium>
	  <OE_Orichalcum>15</OE_Orichalcum>
	  <OE_Syntherius>10</OE_Syntherius>
      <OE_ArachnaCore>1</OE_ArachnaCore>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
	<fillPercent>0.4</fillPercent>
	<minifiedDef>MinifiedThing</minifiedDef>
	<drawerType>RealtimeOnly</drawerType>
	<thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
	<building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
    </building>
	<tickerType>Normal</tickerType>
	<tradeTags>
      <li>OEBuilding</li>
	  <li>OEBuildingSell</li>
    </tradeTags>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
	  <MarketValue>1650</MarketValue>
      <WorkToBuild>8000</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
	<size>(3,3)</size>
    <passability>PassThroughOnly</passability>
	<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <designationCategory>Biotech</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_CauseHediff_AoE">
        <range>29.9</range>
        <onlyTargetMechs>true</onlyTargetMechs>
        <hediff>OE_MechWorkerBoost</hediff>
        <activeSound>MechBooster_Working</activeSound>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <researchPrerequisites>
      <li>OEMechtechAdv</li>
    </researchPrerequisites>
	<placeWorkers>
      <li>PlaceWorker_ShowCauseHediffAoE</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
  </ThingDef>

  <HediffDef>
    <defName>OE_MechWorkerBoost</defName>
    <label>efficiency boost</label>
    <description>This mechanoid's energy efficiency, move and work speed are being enhanced by a nearby mech efficiency antenna.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>30</disappearsAfterTicks>
        <showRemainingTime>false</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
      <li Class="HediffCompProperties_Link">
        <requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <MechEnergyUsageFactor>-0.20</MechEnergyUsageFactor>
		  <MoveSpeed>0.20</MoveSpeed>
          <WorkSpeedGlobal>0.50</WorkSpeedGlobal>
        </statOffsets>
      </li>
    </stages>
    <isBad>false</isBad>
  </HediffDef>


<!--=============== Beacon - Crimson Arachna ====================-->
  <ThingDef ParentName="BuildingBase">
    <defName>OE_Beacon_CrimsonArachna</defName>
    <label>crimson arachna beacon</label>
    <description>Crimson Arachna beacon used to imitate the call signal of the Crimson Arachna Cult mech army. Signal will attract an ultra-heavy Arachna Queen mechanoid with its Arachna escorts, in the worst case, a Crimson Arachna can react to the signal. The signal pulse burns out the transmitter, so this building can only be used once.\n\nMechanitor is required to use this device.</description>
    <graphicData>
      <texPath>Things/Building/Beacon/CrimsonArachnaBeacon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(1.1, 0.75, 1.1</volume>
      </shadowData>
    </graphicData>   
    <rotatable>false</rotatable>
	<altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <minifiedDef>MinifiedThing</minifiedDef>
	<fillPercent>0.3</fillPercent>
	<tradeTags>
      <li>OEBeacons</li>
	  <li>OEExoticBuilding</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
	<thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
	<building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Biotech</li>
      </buildingTags>
    </building>
	<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <designationCategory>Biotech</designationCategory>
    <uiOrder>2460.555</uiOrder>
    <statBases>
      <MarketValue>1250</MarketValue>
	  <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>16000</WorkToBuild>
      <Mass>20</Mass>
      <Flammability>0.05</Flammability>
    </statBases>
    <size>(2,2)</size>
    <costList>
      <OE_Empyrium>20</OE_Empyrium>
      <OE_Orichalcum>20</OE_Orichalcum>
	  <OE_Syntherius>15</OE_Syntherius>
    </costList>
    <killedLeavings>
      <OE_Empyrium>10</OE_Empyrium>
      <OE_Orichalcum>10</OE_Orichalcum>
	  <OE_Syntherius>5</OE_Syntherius>
    </killedLeavings>
    <researchPrerequisites>
      <li>OEMechtech</li>
	  <li>CACGear</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>TriggerObject</useJob>
        <useLabel>Summon Crimson Arachna Cult's mechanoids army</useLabel>
        <useDuration>900</useDuration>
        <floatMenuFactionIcon>ObsidiaCrimsonArachnaCult</floatMenuFactionIcon>
      </li>
      <li Class="CompProperties_Useable_CallBossgroup">
        <bossgroupDef>OE_Beacongroup_CrimsonArachna</bossgroupDef>
        <effecterDef>BurnoutMechlinkBoosterUsed</effecterDef>
        <prepareEffecterDef>MechBandAntennaPrepared</prepareEffecterDef>
        <unlockedLetterLabelKey>LetterLabelBossgroupCallerUnlocked</unlockedLetterLabelKey>
        <unlockedLetterTextKey>LetterBossgroupCallerUnlocked</unlockedLetterTextKey>
        <delayTicks>120</delayTicks>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf">
        <delayTicks>120</delayTicks>
        <spawnKilledLeavings>true</spawnKilledLeavings>
        <effecterDef>MechbandBuildingDestroyed</effecterDef>
      </li>
    </comps>
    <tickerType>Normal</tickerType>
    <filthLeaving>Filth_MachineBits</filthLeaving>
	<tradeability>Sellable</tradeability>
  </ThingDef>


<Defs>
<!--=============== Beacon Base ====================-->
  <ThingDef ParentName="BuildingBase" Name="OEBeaconBase" Abstract="True">
    <label>ancient obsidia beacon</label>
    <description>The Ancient Obsidia Beacon was previously used in the old wars to call for reinforcements. This very old device is running at an unknown frequency and all serial numbers have been erased. So it's impossible to determine who will respond to this beacon.\n\nMechanitor is required to use this device.</description>
    <graphicData>
      <texPath>Things/Building/Beacon/AncientObsidiaBeacon</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
	<costList>
      <OE_Obsidian>50</OE_Obsidian>
      <OE_Mythril>50</OE_Mythril>
	  <OE_Syntherius>75</OE_Syntherius>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
	<blockWind>False</blockWind>
    <fillPercent>0.3</fillPercent>
	<rotatable>false</rotatable>
	<minifiedDef>MinifiedThing</minifiedDef>
	<tradeTags>
      <li>OEBuildingBeacons</li>
	  <li>OEBuildingSell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
	<thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <statBases>
      <MarketValue>665</MarketValue>
	  <MaxHitPoints>100</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>0.25</Flammability>
    </statBases>
    <size>(1,1)</size>
    <killedLeavings>
      <OE_Obsidian>10</OE_Obsidian>
	  <OE_Mythril>5</OE_Mythril>
	  <OE_Syntherius>5</OE_Syntherius>
    </killedLeavings>
    <tickerType>Normal</tickerType>
    <filthLeaving>Filth_MachineBits</filthLeaving>
	<tradeability>Sellable</tradeability>
  </ThingDef>

<!--=============== OMC ====================-->
  <ThingDef ParentName="OEBeaconBase">
    <defName>OE_Beacon_OMC</defName>
	<comps>
      <li Class="CompProperties_Usable">
        <useJob>TriggerObject</useJob>
        <useLabel>Summon /unknown/ obsidia squad</useLabel>
        <useDuration>900</useDuration>
		<floatMenuFactionIcon>ObsidiaEmpire</floatMenuFactionIcon>
      </li>
      <li Class="CompProperties_Useable_CallBossgroup">
        <bossgroupDef>OE_Beacongroup_OMC</bossgroupDef>
        <effecterDef>MechbandDishUsed</effecterDef>
        <prepareEffecterDef>MechBandDishPrepared</prepareEffecterDef>
        <unlockedLetterLabelKey>LetterLabelBossgroupCallerUnlocked</unlockedLetterLabelKey>
        <unlockedLetterTextKey>LetterBossgroupCallerUnlocked</unlockedLetterTextKey>
        <delayTicks>120</delayTicks>
      </li>
      <li Class="CompProperties_UseEffectDestroySelf">
        <delayTicks>120</delayTicks>
        <spawnKilledLeavings>true</spawnKilledLeavings>
        <effecterDef>MechbandBuildingDestroyed</effecterDef>
      </li>
    </comps>
  </ThingDef>


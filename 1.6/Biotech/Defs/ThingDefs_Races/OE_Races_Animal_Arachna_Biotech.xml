<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Waste Arachna ====================-->
  <ThingDef ParentName="OEBaseArachna">
    <defName>OE_Arachna_Tox</defName>
    <label>waste arachna</label>
    <description>Obsidia Arachna are huge arthropod. These strong and fast creatures prefer to form small hunting groups. They are very difficult to tame and almost impossible to train. Also, many are mistaken in thinking that Arachnas produce webs.\n\nWaste Arachna prefers polluted areas.</description>
	<statBases>
	  <ComfyTemperatureMin>-35</ComfyTemperatureMin>
	  <ComfyTemperatureMax>35</ComfyTemperatureMax>
	  <ToxicResistance>1</ToxicResistance>
	  <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
	</statBases>
	<tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.28</armorPenetration>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <chanceFactor>0.75</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>ToxGas</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>	
	</tools>
	<race>
	  <leatherDef>OE_Leather_Bruul</leatherDef>
	  <deathAction>
	    <workerClass>DeathActionWorker_ToxCloud</workerClass>
	  </deathAction>
	</race>
  </ThingDef>


<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Maid ====================-->
  <ThingDef ParentName="LightMechanoid">
    <defName>OE_Mech_Maid</defName>
    <label>Maid</label>
    <description>A mechanoid designed as homemaker. Lacking a ranged weapon, it can make only weak melee attacks. Maid can cleaning, cooking, hauling also rescue the wounded, fight fires, treat the sick, and even perform surgery when a more-qualified human is not available.</description>
    <statBases>
      <MarketValue>950</MarketValue>
      <MoveSpeed>4.4</MoveSpeed>
      <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
      <MechEnergyLossPerHP>0.66</MechEnergyLossPerHP>
	  <CleaningSpeed>0.9</CleaningSpeed>
	  <WorkSpeedGlobal>0.9</WorkSpeedGlobal>
	  <FoodPoisonChance>0.001</FoodPoisonChance>
	  <FilthRate>1</FilthRate>
    </statBases>
	<tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
		<armorPenetration>0.09</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
		<armorPenetration>0.09</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
		<armorPenetration>0.09</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Lancer</body>
      <baseHealthScale>0.55</baseHealthScale>
	  <mechEnabledWorkTypes>
		<li MayRequire="sov.det.surrogatemech">Childcare</li>
		<li>Cleaning</li>
		<li>Cooking</li>
		<li>Hauling</li>
		<li>Doctor</li>
        <li>Firefighter</li>
      </mechEnabledWorkTypes>
      <lifeStageAges Inherit="False">
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Lifter_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Lifter_Death</soundDeath>
          <soundCall>Pawn_Mech_Lifter_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Lifter_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Lifter_Death</soundDeath>
          <soundCall>Pawn_Mech_Lifter_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
	<butcherProducts>
      <OE_Platinum>20</OE_Platinum>
      <OE_Mythril>10</OE_Mythril>
    </butcherProducts>
  </ThingDef>
    
  <PawnKindDef ParentName="NonCombatLightMechanoidKind">
    <defName>OE_Mech_Maid</defName>
    <label>Maid</label>
    <race>OE_Mech_Maid</race>
	<combatPower>11</combatPower>
	<allowInMechClusters>false</allowInMechClusters>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Maid/Maid</texPath>
          <maskPath>Things/Pawn/Mechanoid/Maid/AllegianceOverlays/Mech_Maid</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <drawSize>1.6</drawSize>
        </bodyGraphicData>
      </li>
	  <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Maid/MaidAncient</texPath>
          <maskPath>Things/Pawn/Mechanoid/Maid/AllegianceOverlays/Mech_MaidAncient</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <drawSize>1.6</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>
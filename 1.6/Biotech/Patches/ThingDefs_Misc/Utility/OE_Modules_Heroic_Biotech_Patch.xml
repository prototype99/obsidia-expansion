<?xml version="1.0" encoding="utf-8" ?>

<Patch>
<!--=============== OE - Heroic Modules ====================-->
<Operation Class="PatchOperationSequence">
  <operations>
    <li Class="PatchOperationAdd">
	  <xpath>/Defs/ThingDef[@Name="OEHeroicModuleBase"]</xpath>
	  <value>
	    <recipeMaker>
		  <unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
		  <researchPrerequisite>OESGear</researchPrerequisite>
		  <skillRequirements>
		    <Crafting>12</Crafting>
			<Intellectual>12</Intellectual>
		  </skillRequirements>
		  <recipeUsers>
		    <li>OE_ArmorStation</li>
		  </recipeUsers>
		</recipeMaker>
	  </value>
    </li>
	<li Class="PatchOperationAdd">
	  <xpath>/Defs/ThingDef[@Name="OEHeroicModuleBase"]/statBases</xpath>
	  <value>
	    <WorkToMake>25000</WorkToMake>
	  </value>
    </li>

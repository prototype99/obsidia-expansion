<!--=============== Workers Support ====================-->
  <RoyalTitlePermitDef>
    <defName>OE_LaborerCallTeam</defName>
    <label>call obsidia laborer team</label>
    <description>Call a group of 6 obsidia laborers to assist you for 4 days. These workers can only do general labor tasks. You can control them as though they were your own colonists. You are required to keep them safe.</description>
    <workerClass>RoyalTitlePermitWorker_CallLaborers</workerClass>
    <minTitle>OE_Title_2_Arbiter</minTitle>
    <faction>ObsidiaEmpire</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,4)</uiPosition>
    <royalAid>
      <favorCost>4</favorCost>
      <pawnKindDef>OE_Laborer</pawnKindDef>
      <pawnCount>6</pawnCount>
      <aidDurationDays>4</aidDurationDays>
      <targetingRange>44.9</targetingRange>
      <targetingRequireLOS>false</targetingRequireLOS>
    </royalAid>
    <cooldownDays>60</cooldownDays>
  </RoyalTitlePermitDef>


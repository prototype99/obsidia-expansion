<!--=============== Syntherius Drop ====================-->
  <RoyalTitlePermitDef ParentName="OEDropResourcesBase">
    <defName>OE_SyntheriusDrop</defName>
    <label>syntherius drop</label>
    <description>Call for a drop of 100 syntherius.</description>
    <minTitle>OE_Title_1_Aspirant</minTitle>
    <uiPosition>(0,0)</uiPosition>
    <royalAid>
      <itemsToDrop>
        <OE_Syntherius>100</OE_Syntherius>
      </itemsToDrop>
      <favorCost>4</favorCost>
    </royalAid>
	<cooldownDays>45</cooldownDays>
  </RoyalTitlePermitDef>


  <RoyalTitlePermitDef>
    <defName>OMG_Duo_CallAid</defName>
    <label>call mercenary duo</label>
    <description>Call a group of 2 Mercenary Enforcers to aid you in battle.</description>
    <workerClass>RoyalTitlePermitWorker_CallAid</workerClass>
    <minTitle>OE_Title_1_Visitor</minTitle>
    <faction>ObsidiaMercenaryGangs</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,0)</uiPosition>
    <royalAid>
      <favorCost>4</favorCost>
      <pawnKindDef>OMG_Enforcer</pawnKindDef>
      <pawnCount>2</pawnCount>
      <targetingRange>39.9</targetingRange>

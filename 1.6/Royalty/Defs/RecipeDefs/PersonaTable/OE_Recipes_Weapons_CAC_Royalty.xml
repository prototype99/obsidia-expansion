<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== CAC - Scythe ====================-->
  <RecipeDef>
    <defName>OE_Reset_CAC_Scythe_P</defName>
    <label>Reset Persona Souldrinker</label>
    <description>Reset an Persona Souldrinker.\n\nWarning! Item Quality and Persona traits will be changed.</description>
    <jobString>Resetting a Persona Souldrinker.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CAC_Scythe_P</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CAC_Scythe_P</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CAC_Scythe_P>1</CAC_Scythe_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>CACGearAdv</researchPrerequisite>
  </RecipeDef>


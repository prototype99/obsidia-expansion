<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OMG - Rapier ====================-->
  <RecipeDef>
    <defName>OE_Reset_OMG_Rapier</defName>
    <label>Reset Pulseblade</label>
    <description>Reset a Pulseblade.\n\nWarning! Persona traits will be changed.</description>
    <jobString>Resetting a Pulseblade.</jobString>
	<workAmount>650</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OMG_Rapier</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OMG_Rapier</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OMG_Rapier>1</OMG_Rapier>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


<Defs>
<!--=============== OCC - BigSword ====================-->
  <RecipeDef>
    <defName>OE_Reset_OCC_BigSword_P</defName>
    <label>Reset Persona Reforged Shikigami</label>
    <description>Reset an Persona Reforged Shikigami.\n\nWarning! Item Quality and Persona traits will be changed.</description>
    <jobString>Resetting a Persona Reforged Shikigami.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OCC_BigSword_P</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OCC_BigSword_P</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OCC_BigSword_P>1</OCC_BigSword_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>OCCGearMod</researchPrerequisite>
  </RecipeDef>


<!--=============== OES ====================-->
  <ThingDef ParentName="OEWingsBase">
    <defName>OES_Wings</defName>
    <label>Heroic Eidolon Cyber-Wings</label>
    <description>Heroic Cyber-Wings grant unmatched agility with their sleek, cutting-edge design. Designed for use by Eidolons, once called Heroes! Reveals the full potential of its owner.\n\nThese wings enable the user to perform 5 powerful jumps across vast distances.\n\nCan be reloaded using Syntherius.</description>
	<graphicData>
      <texPath>Things/Item/Equipment/Utility/Wings/OES/OESWings</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeTags>
	  <li>OESGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <MarketValue>4750</MarketValue>
	  <JumpRange>29.9</JumpRange>
    </statBases>
	<equippedStatOffsets>
	  <MeleeHitChance>2</MeleeHitChance>
	  <MeleeDodgeChance>2</MeleeDodgeChance>
	  <MoveSpeed>0.20</MoveSpeed>
	  <TrapSpringChance>-1.0</TrapSpringChance>
    </equippedStatOffsets>
    <costList>
	  <OE_Empyrium>50</OE_Empyrium>
	  <OE_Orichalcum>25</OE_Orichalcum>
	  <OE_Syntherius>35</OE_Syntherius>
    </costList>
	<verbs>
      <li>
        <verbClass>Verb_Jump</verbClass>
		<commandIcon>UI/Abilities/Armor/Jump</commandIcon>
        <label>heroic jump</label>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <onlyManualCast>True</onlyManualCast>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <warmupTime>0.5</warmupTime>
        <warmupEffecter>JumpWarmupEffect</warmupEffecter>
        <requireLineOfSight>true</requireLineOfSight>
        <flightEffecterDef>JumpFlightEffect</flightEffecterDef>
        <soundLanding>JumpPackLand</soundLanding>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
          <canTargetPawns>false</canTargetPawns>
          <canTargetBuildings>false</canTargetBuildings>
        </targetParams>
      </li>
    </verbs>
    <apparel>
	  <wornGraphicPath>Things/Item/Equipment/Utility/Wings/OES/OESWings</wornGraphicPath>
      <tags>
        <li>OESWings</li>
      </tags>
    </apparel>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OES_Utility</li>
    </thingCategories>
	<comps>
      <li Class="CompProperties_ApparelReloadable">
        <maxCharges>5</maxCharges>
        <ammoDef>OE_Syntherius</ammoDef>
        <ammoCountPerCharge>1</ammoCountPerCharge>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>jump</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>


<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OEC Helmet ====================-->
  <ThingDef Name="OECHelmetBase" ParentName="OEHelmetBase" Abstract="True">
	<tradeTags>
      <li>OECGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
	  <WorkToMake>25000</WorkToMake>
	  <Mass>2</Mass>
    </statBases>
	<equippedStatOffsets>
      <PsychicSensitivityOffset>0.4</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.091</PsychicEntropyRecoveryRate>
	  <MeditationFocusGain>0.2</MeditationFocusGain>
    </equippedStatOffsets>
	<recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OEC_Headgear</li>
    </thingCategories>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OECHelmetBase" MayRequire="Ludeon.RimWorld.Royalty">
	<defName>OEC_Helmet</defName>
    <label>OEC Hunter Helmet</label>
    <description>Light power armor Helmet, well protects the owner. Designed for use by Hunters representing the OEC.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OEC/OECHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>980</MarketValue>
	  <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
      <ArmorRating_Heat>0.50</ArmorRating_Heat>
	  <Beauty>1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>50</OE_Obsidian>
	  <OE_Mythril>45</OE_Mythril>
	  <OE_Mooncloth>20</OE_Mooncloth>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OEC/OECHelmet</wornGraphicPath>
	  <tags>
		<li>OECHunter</li>
		<li>RoyalTier2</li>
		<li>RoyalTier5</li>
		<li>RoyalTier6</li>
		<li>RoyalTier7</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OECArmor</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


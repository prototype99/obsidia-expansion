    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OEC/OECHelmet_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1305</MarketValue>
	  <ArmorRating_Sharp>1.15</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
	  <Beauty>3</Beauty>
    </statBases>
    <costList Inherit="False">
      <OEC_Helmet>1</OEC_Helmet>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OEC/OECHelmet_M</wornGraphicPath>
      <tags>
		<li>OECInquisitor</li>
		<li>RoyalTier2</li>
		<li>RoyalTier5</li>
		<li>RoyalTier6</li>
		<li>RoyalTier7</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OECGearMod</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

<!--=============== Spacer ====================-->
  <ThingDef ParentName="OECHelmetMod">
	<defName>OEC_Helmet_M_Spacer</defName>
    <label>OEC Inquisitor Helmet(Space Griffin)</label>
    <description>Light power armor Helmet, well protects the owner. Designed and modified for use by Inquisitors representing the OEC.\n\nPressure-sealed version designed to keep the occupant alive in outer space.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OEC/Spacer/OECHelmet_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1630</MarketValue>
	  <Insulation_Cold>100</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
    </statBases>
	<equippedStatOffsets>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.75</VacuumResistance>
	</equippedStatOffsets>
    <costList Inherit="False">
      <OEC_Helmet_M>1</OEC_Helmet_M>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>
	  <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OEC/Spacer/OECHelmet_M</wornGraphicPath>
      <tags>
		<li>Spacer</li>
		<li>EVA</li>
		<li>RoyalTier2</li>
		<li>RoyalTier5</li>
		<li>RoyalTier6</li>
		<li>RoyalTier7</li>
      </tags>
    </apparel>
  </ThingDef>


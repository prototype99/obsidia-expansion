<Defs>
<!--=============== Chaos Slimes ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OEBaseChaosSlime" ParentName="BasePawn" Abstract="True">
    <statBases>
      <Flammability>1.5</Flammability>
	  <ToxicResistance>0.5</ToxicResistance>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.5</ToxicEnvironmentResistance>
      <MeatAmount>0</MeatAmount>
	  <ComfyTemperatureMin>-75</ComfyTemperatureMin>
      <ComfyTemperatureMax>75</ComfyTemperatureMax> 
	  <InjuryHealingFactor>5</InjuryHealingFactor>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
	  <FilthRate>9</FilthRate>
    </statBases>
    <tradeability>None</tradeability>
    <hiddenWhileUndiscovered>true</hiddenWhileUndiscovered>
    <race>
      <body>OESlimeLike</body>
	  <thinkTreeMain>OE_ChaosSlime</thinkTreeMain>
      <thinkTreeConstant>OE_ChaosSlimeConstant</thinkTreeConstant>
      <intelligence>ToolUser</intelligence>
      <specificMeatDef>Meat_Twisted</specificMeatDef>
      <disableIgniteVerb>true</disableIgniteVerb>
      <canOpenFactionlessDoors>false</canOpenFactionlessDoors>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <foodType>None</foodType>
      <bloodDef>Filth_BloodInsect</bloodDef>
      <bloodSmearDef>Filth_Slime</bloodSmearDef>
      <soundMeleeDodge>Pawn_MeleeDodge</soundMeleeDodge>
      <trainability>None</trainability>
      <fleshType>Fleshbeast</fleshType>
      <isImmuneToInfections>true</isImmuneToInfections>
      <bleedRateFactor>0.5</bleedRateFactor>
      <hediffGiverSets>
        <li>Fleshbeast</li>
      </hediffGiverSets>
      <corpseHiddenWhileUndiscovered>true</corpseHiddenWhileUndiscovered>
    </race>
	<receivesSignals>true</receivesSignals>
    <comps>
      <li Class="CompProperties_CanBeDormant" />
      <li Class="CompProperties_WakeUpDormant">
        <wakeUpOnDamage>true</wakeUpOnDamage>
      </li>
	  <li Class="CompProperties_HoldingPlatformTarget">
        <baseEscapeIntervalMtbDays>75</baseEscapeIntervalMtbDays>
        <getsColdContainmentBonus>true</getsColdContainmentBonus>
      </li>
      <li Class="CompProperties_InspectString">
        <compClass>CompInspectStringEmergence</compClass>
        <inspectString>Emerged from {SOURCEPAWN_labelShort}.</inspectString>
      </li>
    </comps>
  </ThingDef>

  <PawnKindDef Name="OEBaseChaosSlimeKind" Abstract="True">

  <HediffDef ParentName="OESerumHediffBase">
    <defName>OE_JoltixinSerum</defName>
    <label>joltixin serum</label>
    <description>Joltixin Serum in the bloodstream. Boosts ranged combat stats.</description>
    <stages>
      <li>
        <painFactor>0.35</painFactor>
		<capMods>
		  <li>
			<capacity>Moving</capacity>
            <offset>0.65</offset>
		  </li>
		  <li>
			<capacity>Sight</capacity>
            <offset>0.45</offset>
		  </li>
		</capMods>
		<statOffsets>
          <AimingDelayFactor>-0.65</AimingDelayFactor>
          <ShootingAccuracyPawn>12</ShootingAccuracyPawn>

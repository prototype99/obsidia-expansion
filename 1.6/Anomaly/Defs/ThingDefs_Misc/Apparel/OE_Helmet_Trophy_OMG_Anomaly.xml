<!--=============== Bullets ====================-->
  <ThingDef ParentName="BaseBullet">
    <defName>Grenade_OMG_Deadlife</defName>
    <label>deadlife capsule</label>
    <graphicData>
      <texPath>Things/Projectile/OMG_Trophy_Dart</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<uiIconPath>UI/Abilities/Armor/GrenadierNecrobane</uiIconPath>
	<thingClass>Projectile_Explosive</thingClass>
	<projectile>
      <damageDef>DeadlifeDust</damageDef>
      <speed>45</speed>
      <explosionRadius>0.1</explosionRadius>
	  <soundExplode>ToxicShellLanded</soundExplode>
      <postExplosionSpawnThingDef>Shell_OMG_Deadlife</postExplosionSpawnThingDef>
    </projectile>
  </ThingDef>

  <ThingDef>
    <defName>Shell_OMG_Deadlife</defName>
    <label>deadlife capsule</label>
    <selectable>false</selectable>
    <tickerType>Normal</tickerType>
    <thingClass>ThingWithComps</thingClass>
    <useHitPoints>false</useHitPoints>
    <graphicData>
      <texPath>Things/Projectile/OMG_Trophy_DartLanded</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <rotatable>false</rotatable>
    <comps>
      <li Class="CompProperties_ReleaseGas">
        <gasType>DeadlifeDust</gasType>
        <cellsToFill>20</cellsToFill>
        <durationSeconds>10</durationSeconds>
        <effecterReleasing>DeadlifeReleasing</effecterReleasing>
      </li>
      <li Class="CompProperties_DestroyAfterDelay">
        <delayTicks>600</delayTicks>
      </li>
    </comps>
  </ThingDef>

</Defs>
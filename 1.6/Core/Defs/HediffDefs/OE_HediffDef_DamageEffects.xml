<Defs>
<!--=============== Blast - Shredded Armor ====================-->
  <HediffDef>
    <defName>OCC_BlastShreddedArmor</defName>
    <label>shredded armor</label>
    <description>Temporary armor reduction after receiving Blast damage.</description>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 0.8, 0.2)</defaultLabelColor>
	<maxSeverity>1.5</maxSeverity>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-2.25</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages Inherit="False">
      <li>
        <minSeverity>0.005</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.10</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.10</ArmorRating_Sharp>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.10</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.20</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.20</ArmorRating_Sharp>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.20</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.30</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.30</ArmorRating_Sharp>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.30</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.40</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.40</ArmorRating_Sharp>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.40</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.50</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.50</ArmorRating_Sharp>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.50</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.60</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.60</ArmorRating_Sharp>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.60</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.70</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.70</ArmorRating_Sharp>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.70</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.80</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.80</ArmorRating_Sharp>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.80</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-0.90</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-0.90</ArmorRating_Sharp>
        </statOffsets>
      </li>
	  <li>
        <minSeverity>0.90</minSeverity>
        <statOffsets>
          <ArmorRating_Blunt>-1.00</ArmorRating_Blunt>
		  <ArmorRating_Sharp>-1.00</ArmorRating_Sharp>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

<!--=============== Unstable Toxins ====================-->
  <HediffDef>
    <defName>OE_UnstableToxins_Poison</defName>

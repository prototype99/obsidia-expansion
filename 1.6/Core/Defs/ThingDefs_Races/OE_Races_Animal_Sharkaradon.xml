        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.29</armorPenetration>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>right claws</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.29</armorPenetration>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>20</power>
        <cooldownTime>2.5</cooldownTime>
		<armorPenetration>0.29</armorPenetration>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.9</chanceFactor>
		<surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Scratch</def>
              <amount>15</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.29</armorPenetration>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <animalType>Canine</animalType>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <predator>true</predator>
	  <packAnimal>true</packAnimal>
      <maxPreyBodySize>2.5</maxPreyBodySize>
      <petness>0.1</petness>
      <baseBodySize>1.3</baseBodySize>
      <baseHungerRate>0.3</baseHungerRate>
      <baseHealthScale>1.5</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>OE_Leather_Ogren</leatherDef>
	  <useMeatFrom>OE_Bruul_Acid</useMeatFrom>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
	  <specialTrainables>
        <li MayRequire="Ludeon.RimWorld.Odyssey">AttackTarget</li>
      </specialTrainables>
	  <waterCellCost>1</waterCellCost>
      <manhunterOnTameFailChance>0.55</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
	  <canFishForFood>true</canFishForFood>
      <gestationPeriodDays>11</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(2.5, 0.7)</li>
          <li>(3, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>27</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.15</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.35</minAge>
          <soundWounded>Pawn_Iguana_Wounded</soundWounded>
          <soundDeath>Pawn_Iguana_Death</soundDeath>
          <soundCall>Pawn_Iguana_Call</soundCall>
          <soundAngry>Pawn_Iguana_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>OEAnimalExotic</li>
	  <li>OEAnimalSell</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="OEKindBaseSharkaradon" Abstract="True">

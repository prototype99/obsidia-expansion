      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
	  <canFishForFood>true</canFishForFood>
      <gestationPeriodDays>8</gestationPeriodDays>
	  <roamMtbDays>7</roamMtbDays>
      <lifeExpectancy>95</lifeExpectancy>
	  <neverIncludeInQuests>true</neverIncludeInQuests>
	  <canCrossBreedWith>

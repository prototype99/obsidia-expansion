        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>OERaptorLike</body>
      <predator>true</predator>
	  <packAnimal>true</packAnimal>
      <maxPreyBodySize>5.5</maxPreyBodySize>
      <petness>0.1</petness>
      <baseBodySize>2.0</baseBodySize>
      <baseHungerRate>0.25</baseHungerRate>
      <baseHealthScale>10.0</baseHealthScale>
      <foodType>CarnivoreAnimalStrict</foodType>
      <leatherDef>OE_Leather_Raptor</leatherDef>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
	  <specialTrainables>
        <li MayRequire="Ludeon.RimWorld.Odyssey">AttackTarget</li>
		<li MayRequire="Ludeon.RimWorld.Odyssey">OE_ElderJump</li>
		<li MayRequire="Ludeon.RimWorld.Odyssey">OE_ElderPower_Raptor</li>
      </specialTrainables>

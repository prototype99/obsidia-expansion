<Defs>
<!--=============== Arachna Base ====================-->
  <ThingDef Name="OEBaseMechArachna" ParentName="BaseMechanoidWalker" Abstract="True">
    <statBases>
      <MarketValue>1100</MarketValue>
      <MoveSpeed>3.2</MoveSpeed>
	  <PsychicSensitivity>1.0</PsychicSensitivity>
	  <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">2</BandwidthCost>
	  <ControlTakingTime MayRequire="Ludeon.Rimworld.Biotech">18</ControlTakingTime>
	  <FilthRate>1</FilthRate>
    </statBases>
	<tools>
      <li>
        <label>front left leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15.0</power>
		<armorPenetration>0.14</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>front right leg</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15.0</power>
		<armorPenetration>0.14</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.14</armorPenetration>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>OEMechanicalArachna</body>
      <baseBodySize>1.75</baseBodySize>
      <baseHealthScale>1.2</baseHealthScale>
	  <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
      <lifeStageAges Inherit="False">
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Pikeman_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Pikeman_Death</soundDeath>
          <soundCall>Pawn_Mech_Pikeman_Call</soundCall>
        </li>
        <li MayRequire="Ludeon.Rimworld.Biotech">
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Pikeman_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Pikeman_Death</soundDeath>
          <soundCall>Pawn_Mech_Pikeman_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
	<butcherProducts>
      <OE_Empyrium>15</OE_Empyrium>
      <OE_Orichalcum>10</OE_Orichalcum>
    </butcherProducts>
  </ThingDef>

  <PawnKindDef Name="OEKindBaseMechArachna" ParentName="BaseMechanoidKind" Abstract="True">
    <combatPower>125</combatPower>
    <lifeStages>
      <li MayRequire="Ludeon.Rimworld.Biotech"> 
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Arachna/Arachna</texPath>
          <maskPath>Things/Pawn/Mechanoid/Arachna/AllegianceOverlays/Mech_Arachna</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.25</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li> 
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Arachna/ArachnaAncient</texPath>
          <maskPath>Things/Pawn/Mechanoid/Arachna/AllegianceOverlays/Mech_Arachna</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.25</drawSize>
          <shadowData>
            <volume>(0.4, 0.8, 0.4)</volume>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponMoney>9999~9999</weaponMoney>
    <techHediffsChance>1</techHediffsChance>
    <techHediffsMoney>9999~9999</techHediffsMoney>
  </PawnKindDef>


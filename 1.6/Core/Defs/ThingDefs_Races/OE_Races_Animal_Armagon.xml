<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Armagon Base ====================-->
  <ThingDef Name="OEBaseArmagon" ParentName="AnimalThingBase" Abstract="True">
    <devNote>obsidia</devNote>
	<statBases>
      <MoveSpeed>4.5</MoveSpeed>
      <MarketValue>850</MarketValue>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
	  <ComfyTemperatureMax>35</ComfyTemperatureMax>
	  <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
	  <ArmorRating_Heat>0.25</ArmorRating_Heat>
	  <ToxicResistance>0</ToxicResistance>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.8</ToxicEnvironmentResistance>
      <FilthRate>18</FilthRate>
	  <CaravanRidingSpeedFactor>1.5</CaravanRidingSpeedFactor>
	  <Wildness>0.75</Wildness>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">1</VacuumResistance>
    </statBases>
	<uiIconScale>1.5</uiIconScale>
    <tools>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.19</armorPenetration>
        <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
        <chanceFactor>0.9</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>OTCAcid</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
	  <li>
        <label>horn</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.19</armorPenetration>
        <linkedBodyPartsGroup>HornAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
		<armorPenetration>0.19</armorPenetration>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>OEArmagonLike</body>
	  <herdAnimal>true</herdAnimal>
	  <packAnimal>true</packAnimal>
      <baseHungerRate>1.2</baseHungerRate>
	  <baseBodySize>4.5</baseBodySize>
      <baseHealthScale>4.5</baseHealthScale>
	  <roamMtbDays>5</roamMtbDays>
      <foodType>VegetarianRoughAnimal, DendrovoreAnimal</foodType>
	  <leatherDef>OE_Obsidian</leatherDef>
	  <fleshType>Insectoid</fleshType>
	  <bloodDef>Filth_BloodInsect</bloodDef>
      <useMeatFrom>Megaspider</useMeatFrom>
      <trainability>Advanced</trainability>
      <specialTrainables>
        <li MayRequire="Ludeon.RimWorld.Odyssey">Dig</li>
      </specialTrainables>	  
      <manhunterOnDamageChance>0.65</manhunterOnDamageChance>
      <gestationPeriodDays>7</gestationPeriodDays>
      <willNeverEat>
        <li>Plant_OE_EGOTree</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">Plant_TreeAnima</li>
        <li MayRequire="Ludeon.RimWorld.Ideology">Plant_TreeGauranlen</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">Plant_TreePolux</li>
        <li MayRequire="Ludeon.RimWorld.Anomaly">Plant_TreeHarbinger</li>
		<li MayRequire="Ludeon.RimWorld.Odyssey">Plant_TreeArchean</li>
      </willNeverEat>
      <lifeExpectancy>100</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>OEInsectLarva</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>OEInsectJuvenile</def>
          <minAge>0.03</minAge>
        </li>
        <li>
          <def>OEBigInsectAdult</def>
          <minAge>0.2</minAge>
          <soundWounded>Pawn_Spelopede_Pain</soundWounded>
          <soundDeath>Pawn_Spelopede_Death</soundDeath>
          <soundCall>Pawn_Spelopede_Call</soundCall>
          <soundAngry>Pawn_Spelopede_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundEating>Insectoid_Eat</soundEating>
	  <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
	<ingredient>
      <mergeCompatibilityTags>
        <li MayRequire="Ludeon.RimWorld.Ideology">InsectMeat</li>
      </mergeCompatibilityTags>
    </ingredient>
    <tradeTags>
      <li>OEAnimal</li>
	  <li>OEAnimalSell</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="OEKindBaseArmagon" Abstract="True">
    <combatPower>300</combatPower>
    <ecoSystemWeight>2</ecoSystemWeight>
	<wildGroupSize>3~5</wildGroupSize>
	<canArriveManhunter>false</canArriveManhunter>
  </PawnKindDef>

<!--=============== Armagon ====================-->
  <ThingDef ParentName="OEBaseArmagon">
    <defName>OE_Armagon</defName>
    <label>armagon</label>
    <description>Obsidia Armagons are huge insectoids with tough obsidian chitin. These insectoids themselves are very peaceful, but they will be able to protect themselves from any predator or hunter without any problems. Their strength allows them to carry huge loads, which makes them excellent pack animals.</description>
  </ThingDef>


      <Crafting>3</Crafting>
	  <Mining>3</Mining>
	  <Animals>-2</Animals>
      <Social>-2</Social>
    </skillGains>
    <spawnCategories>
      <li>OECivilians</li>
	  <li>ImperialCommon</li>

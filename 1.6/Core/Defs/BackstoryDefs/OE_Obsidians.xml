<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Civilians ====================-->
<!--=============== Colonist ====================-->
  <BackstoryDef>
    <defName>OE_Colonist</defName>
    <title>obsidia colonist</title>
    <titleShort>colonist</titleShort>
    <description>[PAWN_nameDef] completed Obsidia Colonists course. Possesses all the necessary skills to support life in the colony.</description>
    <slot>Adulthood</slot>
    <requiredWorkTags>
      <li>Animals</li>
	  <li>Cooking</li>
	  <li>PlantWork</li>
    </requiredWorkTags>
    <skillGains>
      <Animals>3</Animals>
      <Cooking>3</Cooking>
	  <Plants>3</Plants>
	  <Crafting>-2</Crafting>
      <Intellectual>-2</Intellectual>
    </skillGains>
    <spawnCategories>
      <li>OECivilians</li>
	  <li>ImperialCommon</li>
	  <li>Farmer</li>
    </spawnCategories>
	<forcedTraits>
      <OECivilian>0</OECivilian>
    </forcedTraits>
	<bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
  </BackstoryDef>

<!--=============== Worker ====================-->

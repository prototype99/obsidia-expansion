<Defs>
<!--=============== Special ====================-->
<!--=============== Eidolon ====================-->
  <BackstoryDef>
    <defName>OE_Eidolon</defName>
    <title>obsidia empire eidolon</title>
    <titleShort>eidolon</titleShort>
    <description>[PAWN_nameDef] once considered a great Hero of Obsidia but after some events it became forgotten and abandoned by its own people. Has excellent combat skills and the ability to maintain own reputation.</description>
    <slot>Adulthood</slot>
    <requiredWorkTags>
	  <li>Social</li>
	  <li>Violent</li>
    </requiredWorkTags>
	<workDisables>
	  <li>Cleaning</li>
	  <li>Hauling</li>
    </workDisables>
    <skillGains>
      <Melee>6</Melee>
      <Shooting>6</Shooting>
	  <Social>6</Social>
	  <Medicine>-6</Medicine>
    </skillGains>
    <spawnCategories>
      <li>OESins</li>
	  <li>ImperialCommon</li>
	  <li>Outlander</li>
    </spawnCategories>
	<forcedTraits>
      <Gourmand>0</Gourmand>
	  <OEEidolon>0</OEEidolon>
    </forcedTraits>
	<bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
  </BackstoryDef>


<Defs>
<!--=============== OE - Trophy Modules ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OETrophyModuleBase" ParentName="ApparelNoQualityBase" Abstract="True">
	<techLevel>Spacer</techLevel>
	<smeltable>false</smeltable>
	<thingSetMakerTags>
	  <li>RewardStandardLowFreq</li>
	</thingSetMakerTags>
	<tradeTags>
      <li>OEGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <MarketValue>2350</MarketValue>
	  <Mass>0.2</Mass>
	  <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.5</Flammability>
	  <EquipDelay>4</EquipDelay>
	  <Beauty>0</Beauty>
	  <RangedWeapon_Cooldown>7.5</RangedWeapon_Cooldown>
    </statBases>
	<tickerType>Normal</tickerType>
	<apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
	  <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_Modules</li>
    </thingCategories>
  </ThingDef>

<!--=============== Psychic ====================-->
  <ThingDef ParentName="OETrophyModuleBase">
    <defName>OE_Module_Shock</defName>
    <label>Psychic Module - Shock</label>
	<description>The module provides the owner with power of Psychic shock lance. Unique designed on the basis of Archotech technologies.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Modules/T_Shock</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
	<apparel>
	  <tags>
		<li>OEModuleT</li>
      </tags>
	  <defaultOutfitTags>
		<li>Trophy</li>
      </defaultOutfitTags>
	</apparel>
	<verbs>
      <li>
		<verbClass>Verb_CastTargetEffect</verbClass>
		<commandIcon>UI/Abilities/Armor/Shock</commandIcon>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>true</targetable>
        <onlyManualCast>True</onlyManualCast>
        <range>19.9</range>
        <warmupTime>2.5</warmupTime>
        <targetParams>
          <canTargetBuildings>false</canTargetBuildings>
          <onlyTargetPsychicSensitive>true</onlyTargetPsychicSensitive>
          <neverTargetIncapacitated>true</neverTargetIncapacitated>
        </targetParams>
        <soundCast>PsychicShockLanceCast</soundCast>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ApparelReloadable">
        <maxCharges>3</maxCharges>
		<ammoDef>Apparel_PsychicShockLance</ammoDef>
        <ammoCountToRefill>2</ammoCountToRefill>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>charge</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
      <li>
        <compClass>CompTargetEffect_PsychicShock</compClass>
      </li>
      <li Class="CompProperties_TargetEffect_BrainDamageChance">
        <brainDamageChance>0.3</brainDamageChance>
      </li>
      <li Class="CompProperties_TargetEffect_GoodwillImpact">
        <goodwillImpact>-200</goodwillImpact>
      </li>
      <li Class="CompProperties_TargetEffect_FleckOnTarget">
        <fleckDef>PsycastPsychicEffect</fleckDef>
      </li>
      <li Class="CompProperties_TargetEffect_FleckConnecting">
        <fleckDef>PsycastPsychicLine</fleckDef>
      </li>
      <li Class="CompProperties_Styleable"></li>
    </comps>
  </ThingDef>


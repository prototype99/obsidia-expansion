<Defs>
<!--=============== OE - Modules ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OEModuleBase" ParentName="ApparelNoQualityBase" Abstract="True">
    <description>The module provides the owner with various bonuses, depending on the model. Designed for use in various areas of Obsidia.</description>
	<techLevel>Spacer</techLevel>
	<thingSetMakerTags>
	  <li>RewardStandardMidFreq</li>
	</thingSetMakerTags>
	<tradeTags>
      <li>OEGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
	  <MarketValue>1155</MarketValue>
	  <WorkToMake>25000</WorkToMake>
      <Mass>0.2</Mass>
	  <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.5</Flammability>
	  <EquipDelay>4</EquipDelay>
	  <Beauty>0</Beauty>
    </statBases>
	<tickerType>Normal</tickerType>
	<apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
	  <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
	<costList>
	  <OE_Mythril>35</OE_Mythril>
	  <OE_Obsidian>35</OE_Obsidian>
	  <OE_Syntherius>35</OE_Syntherius>
    </costList>
	<recipeMaker>
      <unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
	  <researchPrerequisites>
	    <li>OEModules</li>
	  </researchPrerequisites>
      <skillRequirements>
        <Crafting>10</Crafting>
		<Intellectual>10</Intellectual>
      </skillRequirements>
      <recipeUsers>
        <li>OE_ArmorStation</li>
      </recipeUsers>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_Modules</li>
    </thingCategories>
  </ThingDef>


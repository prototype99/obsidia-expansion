  </ThingDef>

<!--=============== Forgemind ====================-->
  <ThingDef ParentName="OMGTrophyHelmetBase">
	<defName>OMG_Trophy_Helmet_Forgemind</defName>
    <label>Mercenary Helmet(Forgemind)</label>
    <description>Highly modified heavy power armor Helmet, excellent protects the owner. Designed for use by Mercenaries.\n\nThis variation provides the owner acess to orbital of weather-control satellites.\n\nThis modification deprives item's quality levels.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OMG/Trophy/Forgemind/OMGHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1.1, 1.1)</drawSize>
    </graphicData>
	<equippedStatOffsets>
	  <!-- Core -->
	  <ToxicResistance>0.75</ToxicResistance>
	  <SocialImpact>0.25</SocialImpact>
	  <NegotiationAbility>0.25</NegotiationAbility>
	  <ImmunityGainSpeed>0.15</ImmunityGainSpeed>
	  <PainShockThreshold>0.15</PainShockThreshold>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.8</VacuumResistance>
	  <PilotingAbility MayRequire="Ludeon.RimWorld.Odyssey">0.15</PilotingAbility>
	  <!-- Unique -->
	  <MentalBreakThreshold>0.50</MentalBreakThreshold>
	  <WorkSpeedGlobal>0.50</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OMG/Trophy/Forgemind/OMGHelmet</wornGraphicPath>
	  <tags>
		<li>OETreasureHound</li>
      </tags>
	  <defaultOutfitTags>
        <li>Spacefarer</li>
      </defaultOutfitTags>
	  <immuneToToxGasExposure>true</immuneToToxGasExposure>
	  <ai_pickUpOpportunistically>true</ai_pickUpOpportunistically>
    </apparel>
	<verbs>
      <li>
        <verbClass>Verb_Spawn</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>3</warmupTime>
        <ai_AvoidFriendlyFireRadius>10</ai_AvoidFriendlyFireRadius>
        <spawnDef>Tornado</spawnDef>
        <colonyWideTaleDef>TornadoFromItem</colonyWideTaleDef>
        <range>44.9</range>
        <burstShotCount>1</burstShotCount>
        <onlyManualCast>true</onlyManualCast>
        <useableInPocketMaps>false</useableInPocketMaps>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
		<soundAiming>OrbitalTargeter_Aiming</soundAiming>
        <soundCast>OrbitalTargeter_Fire</soundCast>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_ApparelReloadable">
        <maxCharges>2</maxCharges>
		<ammoDef>OE_Syntherius</ammoDef>
        <ammoCountToRefill>30</ammoCountToRefill>
        <baseReloadTicks>45</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>charge</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>


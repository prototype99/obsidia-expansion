<!--=============== OMG Trophy Helmet ====================-->
  <ThingDef Name="OMGTrophyHelmetBase" ParentName="OEHelmetBaseNQ" Abstract="True">
	<tradeTags>
      <li>OEGearTrophy</li>
	  <li>OEGearTrophySell</li>
    </tradeTags>
    <statBases>
      <RoyalFavorValue>1.25</RoyalFavorValue>
	  <MarketValue>5750</MarketValue>

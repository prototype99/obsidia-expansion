<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OMC Helmet ====================-->
  <ThingDef Name="OMCHelmetBase" ParentName="OEHelmetBase" Abstract="True">
	<tradeTags>
      <li>OMCGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <WorkToMake>25000</WorkToMake>
	  <Mass>2</Mass>
    </statBases>
	<equippedStatOffsets>
	  <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
	  <MeleeHitChance>2</MeleeHitChance>
	  <MentalBreakThreshold>-0.2</MentalBreakThreshold>
    </equippedStatOffsets>
	<recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OMC_Headgear</li>
    </thingCategories>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OMCHelmetBase">
	<defName>OMC_Helmet</defName>
    <label>OMC Soldier Helmet</label>
    <description>Medium power armor Helmet, perfectly protects the owner. Designed for use by regular OMC soldiers.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OMC/OMCHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>880</MarketValue>
	  <ArmorRating_Sharp>1.20</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>65</OE_Obsidian>
	  <OE_Mythril>20</OE_Mythril>
	  <OE_Mooncloth>20</OE_Mooncloth>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OMC/OMCHelmet</wornGraphicPath>
	  <tags>
		<li>OMCSoldier</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OMCArmor</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

<!--=============== Modded ====================-->

    <description>Medium power armor Helmet, perfectly protects the owner. Designed and modified for use by OMC Regular Officers.\n\nThe hardened version provides more protection to the owner.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OMC/OMCHelmet_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1105</MarketValue>
	  <ArmorRating_Sharp>1.25</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
      <ArmorRating_Heat>0.60</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
	  <Beauty>1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OMC_Helmet>1</OMC_Helmet>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OMC/OMCHelmet_M</wornGraphicPath>
      <tags>
		<li>OMCOfficer</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OMCGearMod</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

<!--=============== Spacer ====================-->
  <ThingDef ParentName="OMCHelmetMod">
	<defName>OMC_Helmet_M_Spacer</defName>
    <label>OMC Officer Helmet(Space Griffin)</label>
    <description>Medium power armor Helmet, perfectly protects the owner. Designed and modified for use by OMC Regular Officers.\n\nPressure-sealed version designed to keep the occupant alive in outer space.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OMC/Spacer/OMCHelmet_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1330</MarketValue>
	  <Insulation_Cold>100</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
    </statBases>
	<equippedStatOffsets>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.75</VacuumResistance>
	</equippedStatOffsets>
    <costList Inherit="False">
      <OMC_Helmet_M>1</OMC_Helmet_M>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>
	  <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OMC/Spacer/OMCHelmet_M</wornGraphicPath>
      <tags>
		<li>OMCOfficer</li>
      </tags>
	  <defaultOutfitTags>
        <li>Spacefarer</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>


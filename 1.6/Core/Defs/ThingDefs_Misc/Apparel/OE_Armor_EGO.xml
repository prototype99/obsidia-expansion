      <CarryingCapacity>40</CarryingCapacity>
	  <MoveSpeed>0.2</MoveSpeed>
	  <ForagedNutritionPerDay>-4</ForagedNutritionPerDay>
	  <RawNutritionFactor MayRequire="Ludeon.RimWorld.Biotech">-0.2</RawNutritionFactor>
	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.2</VacuumResistance>

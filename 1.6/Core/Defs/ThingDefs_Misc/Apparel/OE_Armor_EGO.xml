      <texPath>Things/Item/Equipment/Apparel/Armor/EGO/Shell/Melee/EGOArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
	  <MarketValue>3665</MarketValue>
	  <ArmorRating_Sharp>1.75</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.85</ArmorRating_Blunt>

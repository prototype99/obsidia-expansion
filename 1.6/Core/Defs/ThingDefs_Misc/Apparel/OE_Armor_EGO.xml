	  <MeleeDodgeChance>5</MeleeDodgeChance>
	  <MeleeWeapon_DamageMultiplier>0.20</MeleeWeapon_DamageMultiplier>
    </equippedStatOffsets>
    <apparel>
	  <wornGraphicPath>Things/Item/Equipment/Apparel/Armor/EGO/Shell/Melee/EGOArmor</wornGraphicPath>

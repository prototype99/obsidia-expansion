<!--=============== Mask ====================-->
  <ThingDef ParentName="EGOHelmetBase">
	<defName>EGO_Helmet_Mask</defName>
    <label>EGO Mask</label>
    <description>Specially gestated amalgam Mask, well protects the owner. Designed for use by Undyings. Amalgams are hybrids of EGO seed and Obsidia technology.\n\nThe item's quality levels can be reset using an EGO Seed.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/EGO/Mask/EGOHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.1, 1.1)</drawSize>
    </graphicData>
    <statBases>
	  <MarketValue>1850</MarketValue>
	  <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.55</ArmorRating_Blunt>
      <ArmorRating_Heat>0.55</ArmorRating_Heat>
      <Insulation_Cold>35</Insulation_Cold>
      <Insulation_Heat>35</Insulation_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
	<equippedStatOffsets>
	  <ToxicResistance>0.60</ToxicResistance>
	  <ToxicEnvironmentResistance>0.60</ToxicEnvironmentResistance>

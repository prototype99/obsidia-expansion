	  <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.60</VacuumResistance>
    </equippedStatOffsets>
    <apparel>
	  <immuneToToxGasExposure>true</immuneToToxGasExposure>
	  <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/EGO/Mask/EGOHelmet</wornGraphicPath>
	  <tags>
		<li>EGOGear</li>

<!--=============== Ancient Heroic Antenna ====================-->
  <ThingDef ParentName="BuildingBase">
    <defName>OE_AncientHeroicAntenna</defName>
    <label>ancient NeuroSync obsidia antenna</label>
    <description>This ancient antenna, once widespread across the Obsidia Empire during the Obsidia Empire Heroes times, was a vital tool used to maintain tireless vigilance and unwavering productivity among its people. This ancient artifact broadcasts a NeuroSync wave that directly affects the brain, eradicating sleep requirements and enhancing cognitive performance. Its field keeps those in range alert and motivated.</description>
    <graphicData>
      <texPath>Things/Building/Special/OE_AncientAntenna</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,4)</drawSize>
	  <drawOffset>(0,0,0.75)</drawOffset>
      <shadowData>
        <volume>(0.8, 0.35, 0.8)</volume>
        <offset>(0, 0, -0.2)</offset>
      </shadowData>
    </graphicData>	
	<descriptionHyperlinks>
      <HediffDef>OE_NeuroSyncWave</HediffDef>
    </descriptionHyperlinks>
	<costList>
      <OE_Empyrium>35</OE_Empyrium>
	  <OE_Orichalcum>35</OE_Orichalcum>
	  <OE_Syntherius>50</OE_Syntherius>
      <OE_UnstableStone>2</OE_UnstableStone>
    </costList>
	<blockWind>true</blockWind>
    <altitudeLayer>Building</altitudeLayer>
	<fillPercent>0.4</fillPercent>
	<minifiedDef>MinifiedThing</minifiedDef>
	<drawerType>RealtimeOnly</drawerType>
	<tradeTags>
      <li>OEBuildingExotic</li>
	  <li>OEBuildingSell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
	<thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
	<building>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
	<tickerType>Normal</tickerType>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
	  <MarketValue>5250</MarketValue>
      <Mass>35</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
	<size>(3,3)</size>
    <passability>PassThroughOnly</passability>
	<pathCost>50</pathCost>
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
      <li Class="CompProperties_CauseHediff_AoE">
        <range>299.9</range>
        <hediff>OE_NeuroSyncWave</hediff>
        <ignoreMechs>true</ignoreMechs>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
	<placeWorkers>
      <li>PlaceWorker_ShowCauseHediffAoE</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
  </ThingDef>

  <HediffDef>
    <defName>OE_NeuroSyncWave</defName>
    <label>NeuroSync wave</label>
    <description>The NeuroSync Wave halts the brain’s sleep-inducing chemicals and elevates concentration, giving individuals the mental energy to continue working without rest.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60</disappearsAfterTicks>
        <showRemainingTime>false</showRemainingTime>
      </li>
      <li Class="HediffCompProperties_DisappearsOnDeath"/>
      <li Class="HediffCompProperties_Link">
        <requireLinkOnOtherPawn>false</requireLinkOnOtherPawn>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
          <MoveSpeed>0.25</MoveSpeed>
          <WorkSpeedGlobal>0.25</WorkSpeedGlobal>
		  <RestFallRateFactor>-0.50</RestFallRateFactor>
        </statOffsets>
      </li>
    </stages>
    <isBad>false</isBad>
  </HediffDef>

</Defs>
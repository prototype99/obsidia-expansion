<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== ODC ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>ODC_Turret_Small</defName>
    <label>ODC Thoughtless Turret</label>
    <description>An automatic ODC Assault Rifle-equipped turret. Requires obsidia ammo kit as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/ODC/TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/ODC/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Obsidian>70</OE_Obsidian>
      <OE_Mythril>20</OE_Mythril>
	  <OE_Platinum>30</OE_Platinum>
	  <OE_Syntherius>20</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>1100</MarketValue>
    </statBases>
    <building>
      <combatPower>75</combatPower> 
	  <turretGunDef>ODC_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>1.15</turretBurstCooldownTime>
    </building>
    <researchPrerequisites>
      <li>OEDefence</li>
	  <li>ODCGear</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_AmmoKit</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>300</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>12</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs obsidia ammo kit</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductProduced/OE_AmmoKit</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>


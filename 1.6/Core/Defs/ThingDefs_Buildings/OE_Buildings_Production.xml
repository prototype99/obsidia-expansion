<Defs>
<!--=============== Obsidia Synthesis Printer ====================-->
  <ThingDef ParentName="BenchBase">
    <defName>OE_SynthesisPrinter</defName>
    <label>obsidia synthesis printer</label>
    <description>A high-tech obsidia printer used for synthesis.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/OE_SynthesisPrinter</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
	<uiOrder>2531.111</uiOrder>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <costList>
      <OE_Obsidian>25</OE_Obsidian>
      <OE_Mythril>25</OE_Mythril>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
      <MarketValue>675</MarketValue>
	  <Mass>10</Mass>
	  <WorkToBuild>3000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0.75</Flammability>
	  <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
    </statBases>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	  <workTableRoomRole>Laboratory</workTableRoomRole>
      <workTableNotInRoomRoleFactor>0.8</workTableNotInRoomRoleFactor>
    </building>
	<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>350</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>OESynth</li>
    </researchPrerequisites>
  </ThingDef>

   <WorkGiverDef>
    <defName>OE_UseSynthesisPrinter</defName>
    <label>synthesis things at an obsidia synthesis printer</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Crafting</workType>
    <priorityInType>100</priorityInType>
    <fixedBillGiverDefs>
      <li>OE_SynthesisPrinter</li>
    </fixedBillGiverDefs>
    <verb>synthesis</verb>
    <gerund>synthesis at</gerund>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>


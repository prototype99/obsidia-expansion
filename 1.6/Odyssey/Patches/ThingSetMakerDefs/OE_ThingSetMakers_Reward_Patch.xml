<?xml version="1.0" encoding="utf-8"?>

<Patch>
<!--=============== Obsidia Gravship Parts Rewards ====================-->
<Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingSetMakerDef[defName="Reward_GravshipUpgrade"]/root[@Class="ThingSetMaker_RandomOption"]/options</xpath>
    <value>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>OE_RepulsorliftEngine_Large</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>OE_FuelOptimizer</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
		<li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>OE_GravshipShieldTower</li>
                </thingDefs>
              </filter>
              <countRange>1</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
    </value>
</Operation>

</Patch>
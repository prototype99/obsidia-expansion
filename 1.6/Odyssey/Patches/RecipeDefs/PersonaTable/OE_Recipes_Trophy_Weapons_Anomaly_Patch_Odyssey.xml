<!--=============== CAC - Gluttony ====================-->
  <RecipeDef>
    <defName>OE_Reset_CAC_Trophy_Minigun</defName>
    <label>Reset Second Arachna's Sin - Gluttony</label>
    <description>Reset a Second Arachna's Sin - Gluttony.\n\nWarning! Persona traits will be changed.</description>
    <jobString>Resetting a Second Arachna's Sin - Gluttony.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CAC_Trophy_Minigun</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CAC_Trophy_Minigun</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CAC_Trophy_Minigun>1</CAC_Trophy_Minigun>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


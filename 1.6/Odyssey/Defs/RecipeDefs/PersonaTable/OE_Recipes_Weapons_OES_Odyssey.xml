<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OES - Shotgun Sidearm ====================-->
  <RecipeDef>
    <defName>OE_Reset_OES_ShotgunS</defName>
    <label>Reset Heroic Hellscream</label>
    <description>Reset a Heroic Hellscream.\n\nWarning! Paragon traits will be changed.</description>
    <jobString>Resetting a Heroic Hellscream.</jobString>
	<workAmount>650</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OES_ShotgunS</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OES_ShotgunS</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OES_ShotgunS>1</OES_ShotgunS>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


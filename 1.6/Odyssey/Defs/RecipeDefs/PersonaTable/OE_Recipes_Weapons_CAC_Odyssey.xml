<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== CAC - Pistol ====================-->
  <RecipeDef>
    <defName>OE_Reset_CAC_Pistol_P</defName>
    <label>Reset Paragon Silentsong</label>
    <description>Reset an Paragon Silentsong.\n\nWarning! Item Quality and Paragon traits will be changed.</description>
    <jobString>Resetting a Paragon Silentsong.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CAC_Pistol_P</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CAC_Pistol_P</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <CAC_Pistol_P>1</CAC_Pistol_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>CACGearAdv</researchPrerequisite>
  </RecipeDef>


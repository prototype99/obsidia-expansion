<Defs>
<!--=============== OCC - Revolver ====================-->
  <RecipeDef>
    <defName>OE_Reset_OCC_Revolver_P</defName>
    <label>Reset Paragon Reforged Hornet</label>
    <description>Reset an Paragon Reforged Hornet.\n\nWarning! Item Quality and Paragon traits will be changed.</description>
    <jobString>Resetting a Paragon Reforged Hornet.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OCC_Revolver_P</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OCC_Revolver_P</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OCC_Revolver_P>1</OCC_Revolver_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>OCCGearMod</researchPrerequisite>
  </RecipeDef>


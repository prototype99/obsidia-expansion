<Defs>
<!--=============== OMC - Pistol ====================-->
  <RecipeDef>
    <defName>OE_Reset_OMC_Pistol_P</defName>
    <label>Reset Paragon Impaler MK-II</label>
    <description>Reset an Paragon Impaler MK-II.\n\nWarning! Item Quality and Paragon traits will be changed.</description>
    <jobString>Resetting a Paragon Impaler MK-II.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OMC_Pistol_P</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OMC_Pistol_P</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OMC_Pistol_P>1</OMC_Pistol_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>OMCGearMod</researchPrerequisite>
  </RecipeDef>


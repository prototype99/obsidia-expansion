  <ThingDef ParentName="OETrophyRepairPistolBase">
    <defName>OE_Trophy_RepairPistol_P</defName>
    <label>Paragon Prototype sX-02a</label>
    <description>Prototype of a new paragon repair pistol that equipped with a tools synthesizator which make most construction jobs easier.\n\nThis is a rare trophy weapon.\n\nFeature: a built-in module that improves construction skills.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/OE/Trophy_RepairPistol_P</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <weaponTags>
	  <li>OETrophyRanged</li>
	  <li>OETreasureHound</li>
    </weaponTags>
	<thingSetMakerTags>
      <li>WeaponsUnique</li>
    </thingSetMakerTags>
	<statBases>
      <RoyalFavorValue>1.25</RoyalFavorValue>
	  <MarketValue>2050</MarketValue>
    </statBases>
	<possessionCount>0</possessionCount>
	<comps Inherit="False">
      <li Class="CompProperties_Styleable"/>
	  <li Class="CompProperties_Forbiddable"/>
	  <li Class="CompProperties_EquippableAbilityReloadable"/>
	  <li Class="CompProperties_Biocodable"/>
	  <li>
        <compClass>CompQuality</compClass>
      </li>
	  <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>

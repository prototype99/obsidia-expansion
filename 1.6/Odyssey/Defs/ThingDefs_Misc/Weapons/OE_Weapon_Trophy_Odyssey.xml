        <weaponCategories>
          <li>Ranged</li>
          <li>PelletFiring</li>
		  <li>Gun</li>
		  <li>Pistol</li>
		  <li>Sighted</li>
		  <li>LowStoppingPower</li>
        </weaponCategories>
		<namerLabels>
          <li>Paragon Prototype sX-02a</li>
        </namerLabels>
      </li>
    </comps>
  </ThingDef>


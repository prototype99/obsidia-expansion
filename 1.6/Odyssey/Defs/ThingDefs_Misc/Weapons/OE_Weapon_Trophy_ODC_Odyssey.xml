<Defs>
<!--=============== ODC Ranged ====================-->
<!--=============== ODC Blade Launcher ====================-->
  <ThingDef Name="ODCTrophyBladeLauncherPersona" ParentName="ODCTrophyBladeLauncherBase" Abstract="True">
	<recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
	  <recipeUsers>
        <li>OE_PersonaTable</li>
      </recipeUsers>
	  <researchPrerequisite>ODCGearExp</researchPrerequisite>	
    </recipeMaker>
  </ThingDef>

<!--=============== Normal ====================-->
  <ThingDef ParentName="ODCTrophyBladeLauncherBaseNC">
    <defName>ODC_Trophy_BladeLauncher_A_P</defName>
    <label>Paragon Harvest</label>
    <description>Rare heavy paragon blade launcher weapon used by Obsidia Drifters. This weapon was a working tool, but upgraded for ranged combat.\n\nThis is a rare trophy weapon.\n\nFeature: a built-in module that improves work skills.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/ODC/Trophy_BladeLauncher_A_P</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <weaponTags Inherit="False">
      <li>ODCTrophyRanged</li>
	  <li>OETreasureHound</li>
    </weaponTags>
	<tradeTags>
      <li>OEGearTrophy</li>
	  <li>OEGearTrophySell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>WeaponsUnique</li>
    </thingSetMakerTags>
	<statBases>
      <RoyalFavorValue>1.05</RoyalFavorValue>
	  <MarketValue>3050</MarketValue>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ODC_Trophy_BL</defaultProjectile>
        <warmupTime>4.0</warmupTime>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>30.9</range>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<comps Inherit="False">
      <li Class="CompProperties_Styleable"/>
	  <li Class="CompProperties_Forbiddable"/>
	  <li Class="CompProperties_EquippableAbilityReloadable"/>
	  <li Class="CompProperties_Biocodable"/>
	  <li>
        <compClass>CompQuality</compClass>
      </li>
	  <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
	  <li MayRequire="Ludeon.RimWorld.Odyssey" Class="CompProperties_UniqueWeapon">
        <weaponCategories>
          <li>Ranged</li>
		  <li>PulseCharge</li>
		  <li>Scoped</li>
        </weaponCategories>
		<namerLabels>
          <li>Paragon Harvest</li>
        </namerLabels>
      </li>
    </comps>
  </ThingDef>


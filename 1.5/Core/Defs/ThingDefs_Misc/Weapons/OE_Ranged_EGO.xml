        <label>fang</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>15</power>
		<armorPenetration>0.5</armorPenetration>
        <cooldownTime>2.0</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>OTCAcid</def>
            <amount>10</amount>
          </li>
		  <li>
            <def>OTCCryo</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
	<thingCategories Inherit="False">
      <li>OE_Category_Weapons_EGO_Ranged</li>
    </thingCategories>
  </ThingDef>


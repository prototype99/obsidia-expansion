<!--=============== EGO - Pistol ====================-->
  <ThingDef ParentName="OERangedBaseNQE">
    <defName>EGO_Pistol</defName>
    <label>Humunculus</label>
    <description>Amalgam Pistol used by Undyings. Amalgams are hybrids of EGO seed and Obsidia technology. Specially gestated weapon charged with Cryo and Acid damages.\n\nThis modification deprives item's quality levels.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/EGO/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<soundInteract>Interact_Autopistol</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
	<weaponTags>
	  <li>EGOGun</li>
    </weaponTags>
	<tradeTags>
      <li>EGOGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<equippedStatOffsets>
	  <RestRateMultiplier>-0.25</RestRateMultiplier>
	  <PainShockThreshold>-0.25</PainShockThreshold>
	  <MentalBreakThreshold>0.10</MentalBreakThreshold>
	  <ImmunityGainSpeed>0.25</ImmunityGainSpeed>
	  <ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.50</ToxicEnvironmentResistance>
	  <PsychicSensitivity MayRequire="Ludeon.RimWorld.Royalty">0.25</PsychicSensitivity>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.04</PsychicEntropyRecoveryRate>
	</equippedStatOffsets>
	<statBases>
      <MarketValue>3690</MarketValue>
	  <Mass>1.5</Mass>
	  <AccuracyTouch>1.20</AccuracyTouch>
      <AccuracyShort>1.05</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_EGO_P</defaultProjectile>
        <warmupTime>0.75</warmupTime>
        <range>22.9</range>
        <soundCast>Pawn_Megascarab_Angry</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>

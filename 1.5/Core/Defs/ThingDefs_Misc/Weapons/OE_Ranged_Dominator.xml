<Defs>
<!--=============== OMC ====================-->
  <ThingDef ParentName="OERangedBaseNC">
    <defName>OMC_Dominator_Shotgun</defName>
    <label>Mech Doom</label>
    <description>Reconstructed OMC Auto Shotgun for use by mechanoids. Rapid-fire and multiple-charge weapons with reduced damage.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/OMC/Mechanoid_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
	<soundInteract>Interact_Shotgun</soundInteract>
    <tradeability>None</tradeability>
	<destroyOnDrop>true</destroyOnDrop>
	<weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
	<weaponTags>
      <li>OMCDominator</li>
    </weaponTags>
	<statBases>
      <Mass>10.0</Mass>
	  <MarketValue>2500</MarketValue>
	  <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_OMC_S_M</defaultProjectile>
        <warmupTime>1.25</warmupTime>
        <range>15.9</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<relicChance>0</relicChance>
  </ThingDef>


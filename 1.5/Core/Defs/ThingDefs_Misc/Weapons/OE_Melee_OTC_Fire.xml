  <ThingDef ParentName="OTCHammerBase">
    <defName>OTC_Hammer_Fire</defName>
    <label>Nemesis(Fire)</label>
    <description>Regular Hammer used by OTC Mechanics. Charged with Fire damage.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/OTC/Fire/Hammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<statBases>
      <MarketValue>680</MarketValue>
    </statBases>
	<weaponTags>
	  <li>OTCBaseMelee_Fire</li>
    </weaponTags>
	<tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>15</power>
		<armorPenetration>0.25</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>2</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>15</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
	<recipeMaker>
      <recipeUsers>
        <li>OE_WeaponWorkbench</li>
      </recipeUsers>
	  <researchPrerequisite>OTCWeapons</researchPrerequisite>	
    </recipeMaker>
    <costList>
      <OE_Obsidian>100</OE_Obsidian>
	  <OE_Mythril>25</OE_Mythril>
	  <OE_Mooncloth>4</OE_Mooncloth>
      <OE_Syntherius>10</OE_Syntherius>
    </costList>
  </ThingDef>


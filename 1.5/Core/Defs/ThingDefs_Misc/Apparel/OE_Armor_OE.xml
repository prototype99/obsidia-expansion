<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Proto Armor ====================-->
  <ThingDef ParentName="OEArmorBase">
	<defName>OE_Armor_Proto</defName>
    <label>obsidia proto armor</label>
    <description>Proto power armor, perfectly protects the owner. Designed for use by Obsidia Empire warriors several centuries ago.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Armor/OE/Proto/OEArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeTags>
      <li>OEGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
    <statBases>
	  <WorkToMake>17500</WorkToMake>
	  <MarketValue>1655</MarketValue>
	  <Mass>8.5</Mass>
	  <ArmorRating_Sharp>1.1</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>20</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
	<equippedStatOffsets>
	  <CarryingCapacity>15</CarryingCapacity>
	  <MoveSpeed>-0.1</MoveSpeed>
	</equippedStatOffsets>
	<costList Inherit="False">
      <OE_Obsidian>40</OE_Obsidian>
	  <OE_Mythril>20</OE_Mythril>
	  <OE_Mooncloth>20</OE_Mooncloth>
	  <OE_Syntherius>10</OE_Syntherius>
    </costList>
    <apparel>
	  <wornGraphicPath>Things/Item/Equipment/Apparel/Armor/OE/Proto/OEArmor</wornGraphicPath>
	  <tags>
		<li>OEProto</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OEConstruction</researchPrerequisite>
	  <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_Armor</li>
    </thingCategories>
  </ThingDef>

</Defs>
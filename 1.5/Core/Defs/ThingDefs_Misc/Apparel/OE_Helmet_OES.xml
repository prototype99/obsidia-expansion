    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OES/Ranged/OESHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
	<equippedStatOffsets>
	  <AimingDelayFactor>-0.20</AimingDelayFactor>
    </equippedStatOffsets>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OES/Ranged/OESHelmet</wornGraphicPath>
	  <tags>
		<li>OESEidolon</li>
		<li>OESEidolon_Barrier</li>
		<li>Spacer</li>
		<li>EVA</li>
      </tags>
	  <immuneToToxGasExposure>true</immuneToToxGasExposure>
    </apparel>
  </ThingDef>

</Defs>
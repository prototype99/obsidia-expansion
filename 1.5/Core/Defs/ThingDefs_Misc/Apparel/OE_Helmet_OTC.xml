<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OTC Helmet ====================-->
  <ThingDef Name="OTCHelmetBase" ParentName="OEHelmetBase" Abstract="True">
	<tradeTags>
      <li>OTCGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <WorkToMake>25000</WorkToMake>
	  <Mass>2.5</Mass>
    </statBases>
	<equippedStatOffsets>
      <PsychicSensitivity>-1</PsychicSensitivity>
	  <ToxicResistance>0.70</ToxicResistance>
	  <ToxicEnvironmentResistance>0.70</ToxicEnvironmentResistance>
	  <ImmunityGainSpeed>0.10</ImmunityGainSpeed>
    </equippedStatOffsets>
	<apparel>
      <immuneToToxGasExposure>true</immuneToToxGasExposure>
    </apparel>
	<recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OTC_Headgear</li>
    </thingCategories>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OTCHelmetBase">
	<defName>OTC_Helmet</defName>
    <label>OTC Mechanic Helmet</label>
    <description>Light power armor Helmet, well protects the owner. Designed for use by OTC Mechanics.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OTC/OTCHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
	<statBases>
      <MarketValue>830</MarketValue>
	  <ArmorRating_Sharp>1.10</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.45</ArmorRating_Blunt>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>20</Insulation_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>50</OE_Obsidian>
	  <OE_Mythril>20</OE_Mythril>
	  <OE_Mooncloth>40</OE_Mooncloth>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OTC/OTCHelmet</wornGraphicPath>
	  <tags>
		<li>OTCMechanic</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OTCArmor</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


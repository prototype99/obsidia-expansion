    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OCC_Headgear</li>
    </thingCategories>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Normal ====================-->
  <ThingDef ParentName="OCCHelmetBase">
	<defName>OCC_Helmet</defName>
    <label>OCC Knight Helmet</label>
    <description>Heavy power armor Helmet, excellent protects the owner. Designed for use by the OCC Knights.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Helmet/OCC/OCCHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>930</MarketValue>
	  <ArmorRating_Sharp>1.40</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.70</ArmorRating_Blunt>
      <ArmorRating_Heat>0.60</ArmorRating_Heat>
	  <Beauty>-1</Beauty>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>90</OE_Obsidian>
	  <OE_Mythril>20</OE_Mythril>
	  <OE_Mooncloth>10</OE_Mooncloth>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/OCC/OCCHelmet</wornGraphicPath>
	  <tags>
		<li>OCCKnight</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OCCArmor</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


<!--=============== OCC Helmet ====================-->
  <ThingDef Name="OCCHelmetBase" ParentName="OEHelmetBase" Abstract="True">
	<tradeTags>
      <li>OCCGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>

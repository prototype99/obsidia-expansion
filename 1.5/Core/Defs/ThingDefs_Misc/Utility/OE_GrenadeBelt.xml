<!--=============== OTC ====================-->
<!--=============== Acid ====================-->
  <ThingDef ParentName="OEGrenadeBeltsBase">
    <defName>OTC_GrenadeBelt_Acid</defName>
    <label>OTC grenade belt(Acid)</label>
    <description>A grenade belt loaded with explosives that deal powerful Acid damage on explode. They can be thrown a short distance, where they'll explode, damaging anything and anyone nearby. Designed and modified for use by OTC Engineers.\n\nCan be reloaded using Obsidia Ammo Kit.</description>
	<graphicData>
      <texPath>Things/Item/Equipment/Utility/Grenades/OTC/Acid/OTCGrenadeBelt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<tradeTags>
      <li>OTCGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<statBases>
      <WorkToMake>2500</WorkToMake>
    </statBases>
    <verbs>
      <li>
        <label>throw acid grenade</label>
        <verbClass>Verb_LaunchProjectileStatic</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <onlyManualCast>True</onlyManualCast>
        <range>15.9</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1.5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>ThrowGrenade</soundCast>
        <drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Grenade_GrenadeBelt_OTC_Acid</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <costList>
	  <OE_Obsidian>20</OE_Obsidian>
	  <OE_Mythril>10</OE_Mythril>
	  <OE_AmmoKit>10</OE_AmmoKit>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
	  <wornGraphicPath>Things/Item/Equipment/Utility/Grenades/OTC/Acid/OTCGrenadeBelt</wornGraphicPath>
      <tags>
        <li>OTCGrenadeBelt</li>
		<li>OTCGrenadeBelt_Acid</li>
      </tags>
    </apparel>
	<recipeMaker>
      <researchPrerequisite>OTCGearMod</researchPrerequisite>	
	  <unfinishedThingDef>OE_UnfinishedRanged</unfinishedThingDef>
      <recipeUsers>
        <li>OE_WeaponWorkbench</li>
      </recipeUsers>
      <useIngredientsForColor>false</useIngredientsForColor>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OTC_Utility</li>
    </thingCategories>
	<comps>
      <li Class="CompProperties_ApparelReloadable">
        <maxCharges>8</maxCharges>
        <ammoDef>OE_AmmoKit</ammoDef>
        <ammoCountToRefill>24</ammoCountToRefill>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>grenade</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="OEGrenadeBeltsProjectileBase">
    <defName>Grenade_GrenadeBelt_OTC_Acid</defName>
    <label>OTC grenade(Acid)</label>
    <graphicData>
      <texPath>Things/Projectile/OTC_GrenadeBelt_Acid</texPath>

<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Power Base ====================-->
  <ThingDef ParentName="BuildingBase" Name="OEPowerBase" Abstract="True">
    <drawerType>MapMeshAndRealTime</drawerType>
    <thingClass>Building</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <tickerType>Normal</tickerType>
    <statBases>
      <Flammability>0.85</Flammability>
      <Beauty>-5</Beauty>
	  <Mass>25</Mass>
    </statBases>
	<minifiedDef>MinifiedThing</minifiedDef>
	<thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <constructEffect>ConstructMetal</constructEffect>
    <canOverlapZones>false</canOverlapZones>
  </ThingDef>

<!--=============== Batteries Base ====================-->
  <ThingDef ParentName="OEPowerBase" Name="OEBatteriesBase" Abstract="True">
    <thingClass>Building_Battery</thingClass>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
	<staticSunShadowHeight>0.2</staticSunShadowHeight>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.40</fillPercent>
	<designationCategory>Power</designationCategory>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
	  <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(80,112,180,0)</glowColor>
      </li>
    </comps>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Medium ====================-->
  <ThingDef ParentName="OEBatteriesBase">
    <defName>OE_Battery_Medium</defName>
    <label>obsidia battery</label>
    <description>Stores large amounts of electricity for later use. Due to Obsidia technologies, this battery unit is significantly more efficient. Charged large advanced batteries are waterproof and don't explode when exposed to rain.</description>
    <graphicData>
      <texPath>Things/Building/Power/OE_Battery_Medium</texPath>
      <drawSize>(3,3)</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>15000</WorkToBuild>
    </statBases>
    <size>(3,3)</size>
    <costList>
      <OE_Obsidian>100</OE_Obsidian>
      <OE_Mythril>75</OE_Mythril>
	  <OE_Syntherius>50</OE_Syntherius>
    </costList>
	<researchPrerequisites>
      <li>OEPower</li>
    </researchPrerequisites>
	<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <comps>
      <li Class="CompProperties_Battery">
        <storedEnergyMax>4500</storedEnergyMax>
        <efficiency>0.95</efficiency>
		<shortCircuitInRain>false</shortCircuitInRain>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
  </ThingDef>


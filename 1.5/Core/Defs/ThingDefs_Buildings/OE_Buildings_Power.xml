<!--=============== Medium ====================-->
  <ThingDef ParentName="OESyntheriusGeneratorBase">
    <defName>OE_SyntheriusGenerator_Medium</defName>
    <label>syntherius powered generator</label>
    <description>Produces power by consuming syntherius. Must be periodically loaded with syntherius fuel by hand.</description>
    <graphicData>
      <texPath>Things/Building/Power/OE_SyntheriusGenerator_Medium</texPath>
      <drawSize>(3,5)</drawSize>
	  <drawOffset>(0,0,1)</drawOffset>
      <shadowData>
        <volume>(1.93,1,1.69)</volume>
        <offset>(-0.03,0,-0.1)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>7500</WorkToBuild>
    </statBases>
    <size>(3,3)</size>
    <costList>
      <OE_Obsidian>100</OE_Obsidian>
      <OE_Mythril>25</OE_Mythril>
	  <OE_Syntherius>75</OE_Syntherius>
    </costList>
	<researchPrerequisites>
      <li>OEPower</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-6000</basePowerConsumption>
        <transmitsPower>true</transmitsPower>
        <soundAmbientProducingPower>ChemfuelFiredGenerator_Ambience</soundAmbientProducingPower>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.0</fuelConsumptionRate>
        <fuelCapacity>60.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </fuelFilter>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>-10</heatPerSecond>
      </li>
    </comps>
  </ThingDef>


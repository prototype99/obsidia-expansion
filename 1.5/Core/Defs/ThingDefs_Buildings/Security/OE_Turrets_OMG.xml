  <ThingDef Name="OMG_TurretGun_Small" ParentName="BaseWeaponTurret">
    <defName>OMG_TurretGun_Small</defName>
    <label>Bytecrusher Turret</label>
    <description>Reconstructed OMG Shotgun for turrets. Specially modified weapon charged with Necrobane and EMP damages.</description>
    <graphicData>
      <texPath>Things/Building/Security/OMG/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_ChargeLance</soundInteract>
    <statBases>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.70</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>OMG_TurretBullet_Small</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>15.9</range>
        <burstShotCount>2</burstShotCount>
		<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>ChargeLance_Fire</soundCast>
		<soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>OMG_TurretBullet_Small</defName>
    <label>Bytecrusher turret blast</label>
    <graphicData>
      <texPath>Things/Projectile/CAC_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>23</damageAmountBase>
	  <stoppingPower>3.0</stoppingPower>
	  <armorPenetrationBase>0.45</armorPenetrationBase>
      <speed>70</speed>
	  <extraDamages>
		<li>
         <def>OMGNecrobane</def>
		 <amount>15</amount>
       </li>
	   <li>
         <def>EMP</def>
		 <amount>15</amount>
       </li>
	  </extraDamages>
    </projectile>
  </ThingDef>
  

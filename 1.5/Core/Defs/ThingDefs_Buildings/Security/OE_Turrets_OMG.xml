<Defs>
<!--=============== OMG ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>OMG_Turret_Small</defName>
    <label>OMG Bytecrusher Turret</label>
    <description>An automatic OMG Shotgun-equipped turret. Requires obsidia ammo kit as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/OMG/TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/OMG/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Obsidian>150</OE_Obsidian>
      <OE_Mythril>25</OE_Mythril>
	  <OE_Platinum>30</OE_Platinum>
	  <OE_Syntherius>25</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>2100</MarketValue>
    </statBases>
    <building>
      <combatPower>100</combatPower> 
	  <turretGunDef>OMG_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>1.25</turretBurstCooldownTime>
    </building>
	<researchPrerequisites>
      <li>OEDefence</li>
	  <li>OMGGear</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_AmmoKit</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>250</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>5.75</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs obsidia ammo kit</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductProduced/OE_AmmoKit</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>


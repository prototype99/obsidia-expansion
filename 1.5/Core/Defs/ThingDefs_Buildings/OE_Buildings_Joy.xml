<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!--=============== Rimopoly Table ====================-->
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>OE_JoyTable</defName>
    <label>rimopoly table</label>
    <description>A table designed for playing Obsidia board game where players balance unions and the labor market in order to become greatest in rimopoly!</description>
    <graphicData>
      <texPath>Things/Building/Joy/OE_RimopolyTable</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
	  <drawSize>(2,2)</drawSize>
      <shadowData>
        <volume>(1.6,0.3,1.6)</volume>
        <offset>(0,0,-0.15)</offset>
      </shadowData>
    </graphicData>
	<uiIconScale>0.9</uiIconScale>
	<costList>
      <OE_Obsidian>300</OE_Obsidian>
      <OE_Mythril>25</OE_Mythril>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
	<altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <fillPercent>0.40</fillPercent>
    <socialPropernessMatters>true</socialPropernessMatters>
    <building>
      <joyKind>Gaming_Cerebral</joyKind>
      <buildingSizeCategory>Medium</buildingSizeCategory>
    </building>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>15000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0.6</Flammability>
      <Beauty>10</Beauty>
      <JoyGainFactor>1.5</JoyGainFactor>
    </statBases>
    <size>(2,2)</size>
    <designationCategory>Joy</designationCategory>
	<passability>PassThroughOnly</passability>
	<pathCost>40</pathCost>
	<canOverlapZones>false</canOverlapZones>
	<researchPrerequisites>
      <li>OEFurniture</li>
    </researchPrerequisites>
	<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>75</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
  </ThingDef>

<!--=============== Rimotroops Arcade Machine ====================-->
  <ThingDef ParentName="BuildingBase">
    <defName>OE_JoyArcadeMachine</defName>
    <label>rare arcade machine "rimotroops"</label>
    <description>Old rare Obsidia arcade machine with installed rimotroops game.</description>
    <graphicData>
      <texPath>Things/Building/Joy/OE_ArcadeMachine</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.5)</drawSize>
	  <drawOffset>(0,0,0.5)</drawOffset>
    </graphicData>
    <costList>
      <OE_Obsidian>50</OE_Obsidian>
      <OE_Mythril>100</OE_Mythril>
	  <OE_Syntherius>25</OE_Syntherius>
    </costList>
	<altitudeLayer>Building</altitudeLayer>
	<fillPercent>0.25</fillPercent>
	<minifiedDef>MinifiedThing</minifiedDef>
    <hasInteractionCell>true</hasInteractionCell>
	<interactionCellOffset>(0,0,-1)</interactionCellOffset>
	<socialPropernessMatters>true</socialPropernessMatters>
	<tradeTags>
      <li>OEBuildingExotic</li>
	  <li>OEBuildingSell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardMidFreq</li>
    </thingSetMakerTags>
	<thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
	<building>
      <joyKind>Gaming_Dexterity</joyKind>
    </building>
	<statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Flammability>0.6</Flammability>
      <MarketValue>750</MarketValue>
      <Mass>20</Mass>
	  <Beauty>15</Beauty>
      <JoyGainFactor>2.0</JoyGainFactor>
    </statBases>
	<size>(1,1)</size>
    <passability>PassThroughOnly</passability>
    <pathCost>30</pathCost>
	<comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>250</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
    </comps>
  </ThingDef>

</Defs>
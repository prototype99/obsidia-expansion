<Defs>
<!--=============== Walls Base ====================-->
  <ThingDef ParentName="Wall" Name="OEWallBase" Abstract="True">
    <thingClass>Building</thingClass>
    <category>Building</category>
	<graphicData>
      <graphicClass>Graphic_Appearances</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
      <WorkToBuild>550</WorkToBuild>
      <Flammability>0</Flammability>
      <MeditationFocusStrength>0.22</MeditationFocusStrength>
    </statBases>
    <costList>
      <OE_Syntherius>1</OE_Syntherius>
    </costList>
	<costStuffCount>25</costStuffCount>
	<stuffCategories Inherit="False">
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Structure</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <building>
      <isPowerConduit>true</isPowerConduit>
	  <paintable>true</paintable>
	  <isInert>true</isInert>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
      <relatedBuildCommands>
        <li>Door</li>
        <li>Autodoor</li>
		<li>OrnateDoor</li>
        <li MayRequire="Ludeon.RimWorld.Anomaly">SecurityDoor</li>
		<li>OE_Door</li>
		<li>OE_Autodoor</li>
		<li>OE_Petdoor</li>
		<li>OE_ArmoredDoor</li>
		<li>OE_ArmoredAutodoor</li>
		<li>OE_ArmoredPetdoor</li>
      </relatedBuildCommands>
    </building>
    <comps>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Minimal</li>
        </focusTypes>
      </li>
	  <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
    </comps>
    <damageMultipliers Inherit="False">
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.2</multiplier>
      </li>
    </damageMultipliers>
	<researchPrerequisites>
      <li>OEBuilding</li>
    </researchPrerequisites>
	<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  </ThingDef>

<!--=============== Various ====================-->
<!--=============== Wall ====================-->
  <ThingDef ParentName="OEWallBase">
    <defName>OE_Wall</defName>
    <label>obsidia wall</label>
    <description>Reinforced Obsidia heavy wall with multiple layers of armor. Nearly completely resistant to explosives and any breaching tools. Capable of holding up a roof.</description>
    <graphicData>
      <texPath>Things/Building/Structure/Walls/OE_Wall</texPath>
    </graphicData>
	<uiIconPath>Things/Building/Structure/Walls/OE_Wall_Smooth_Icon</uiIconPath>
	<uiIconPathsStuff Inherit="False">
      <li>
        <appearance>Bricks</appearance>
        <iconPath>Things/Building/Structure/Walls/OE_Wall_Bricks_Icon</iconPath>
      </li>
    </uiIconPathsStuff>
	<fillPercent>1.0</fillPercent>
  </ThingDef>

<!--=============== Embrasure ====================-->
  <ThingDef ParentName="OEWallBase">
    <defName>OE_Embrasure</defName>
    <label>obsidia embrasure</label>
    <description>Reinforced Obsidia heavy wall with multiple layers of armor. Nearly completely resistant to explosives and any breaching tools. Capable of holding up a roof. Designed with tactical holes to see and fire through.</description>
    <graphicData>
      <texPath>Things/Building/Structure/Walls/OE_Embrasure</texPath>
    </graphicData>
	<uiIconPath>Things/Building/Structure/Walls/OE_Embrasure_Smooth_Icon</uiIconPath>
	<uiIconPathsStuff Inherit="False">
      <li>
        <appearance>Bricks</appearance>
        <iconPath>Things/Building/Structure/Walls/OE_Embrasure_Bricks_Icon</iconPath>
      </li>
    </uiIconPathsStuff>
	<fillPercent>0.75</fillPercent>
	<disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
  </ThingDef>

<!--=============== Doors Base ====================-->
  <ThingDef ParentName="BuildingBase" Name="OEDoorBase" Abstract="True">
    <thingClass>Building_Door</thingClass>
    <category>Building</category>
	<graphicData>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <altitudeLayer>DoorMoveable</altitudeLayer>
    <fillPercent>1</fillPercent>
    <useHitPoints>true</useHitPoints>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <rotatable>false</rotatable>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <drawerType>RealtimeOnly</drawerType>
    <building>
      <paintable>true</paintable>
	  <isInert>true</isInert>
      <canPlaceOverWall>true</canPlaceOverWall>
      <soundDoorOpenPowered>Door_OpenPowered</soundDoorOpenPowered>
      <soundDoorClosePowered>Door_ClosePowered</soundDoorClosePowered>
      <soundDoorOpenManual>Door_OpenManual</soundDoorOpenManual>
      <soundDoorCloseManual>Door_CloseManual</soundDoorCloseManual>
      <blueprintClass>Blueprint_Door</blueprintClass>
      <blueprintGraphicData>
        <texPath>Things/Building/Structure/Doors/OE_Doors_Blueprint</texPath>
      </blueprintGraphicData>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
	<costStuffCount>35</costStuffCount>
    <comps>
      <li Class="CompProperties_Forbiddable">
        <allowNonPlayer>true</allowNonPlayer>
      </li>
    </comps>
	<damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>Thump</damageDef>
        <multiplier>0.2</multiplier>
      </li>
    </damageMultipliers>
    <placeWorkers>
      <li>PlaceWorker_DoorLearnOpeningSpeed</li>
    </placeWorkers>
	<researchPrerequisites>
      <li>OEBuilding</li>
    </researchPrerequisites>
	<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  </ThingDef>

<!--=============== Armored Doors Base ====================-->

<!--=============== Skills Mastery ====================-->
  <TraitDef>
    <defName>OESkillsMastery</defName>
	<commonality>1</commonality>
    <degreeDatas>
      <li>
        <label>golden soul</label>
        <description>There’s something exceptional in {PAWN_nameDef} - a golden spark of talent in every endeavor.</description>
		<degree>1</degree>
        <skillGains>
          <Shooting>2</Shooting>
		  <Melee>2</Melee>
		  <Construction>2</Construction>
          <Mining>2</Mining>
		  <Cooking>2</Cooking>
		  <Plants>2</Plants>
		  <Animals>2</Animals>
		  <Crafting>2</Crafting>

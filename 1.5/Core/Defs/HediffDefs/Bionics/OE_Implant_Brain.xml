	<techHediffsTags>
      <li>OEBionics_Cyberware</li>
    </techHediffsTags>
    <costList>
      <OE_EmpyriumSynthweave>10</OE_EmpyriumSynthweave>
	  <OE_OrichalcumSynthweave>10</OE_OrichalcumSynthweave>
      <OE_Syntherius>50</OE_Syntherius>
	  <AIPersonaCore>1</AIPersonaCore>
    </costList>
	<butcherProducts>
	  <OE_EmpyriumSynthweave>5</OE_EmpyriumSynthweave>
	  <OE_OrichalcumSynthweave>5</OE_OrichalcumSynthweave>
      <OE_Syntherius>35</OE_Syntherius>
	</butcherProducts>
    <statBases>
      <MarketValue>2500</MarketValue>

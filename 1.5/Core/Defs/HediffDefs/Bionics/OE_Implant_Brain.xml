    <spawnThingOnRemoved>OE_ImplantBrain_Slave</spawnThingOnRemoved>
	<stages>
	  <li>
		<painFactor>-0.65</painFactor>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <postFactor>0</postFactor>
          </li>
		  <li>
            <capacity>Manipulation</capacity>
            <postFactor>0</postFactor>
          </li>
		  <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>

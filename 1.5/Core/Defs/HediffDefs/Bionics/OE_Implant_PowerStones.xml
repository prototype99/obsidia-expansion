<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Implant - Evolution Power Stone ====================-->
  <HediffDef ParentName="OEImplantBodyParts">
    <defName>OE_ImplantPowerStone_Evolution</defName>
    <label>Evolution Power Stone</label>
    <description>An installed - Evolution Power Stone.</description>
	<descriptionHyperlinks>
	  <ResearchProjectDef>ODCGearLeg</ResearchProjectDef>
	  <RecipeDef>OE_InstallPowerStone_Evolution</RecipeDef>
	</descriptionHyperlinks>
	<defaultLabelColor>(0.08, 0.40, 0.75)</defaultLabelColor>
    <spawnThingOnRemoved>OE_UnstableStone</spawnThingOnRemoved>
	<stages>
	  <li>
        <painOffset>-0.25</painOffset>
		<capMods>
		  <li>
		    <capacity>Consciousness</capacity>
			<offset>0.25</offset>
		  </li>
		  <li>
		    <capacity>Hearing</capacity>
			<offset>0.25</offset>
		  </li>
		  <li>
		    <capacity>Sight</capacity>
			<offset>0.25</offset>
		  </li>
		  <li>
		    <capacity>Talking</capacity>
			<offset>0.25</offset>
		  </li>
		  <li>
		    <capacity>Manipulation</capacity>
			<offset>0.25</offset>
		  </li>
		  <li>
		    <capacity>Moving</capacity>
			<offset>0.25</offset>
		  </li>
        </capMods>
	  </li>
	</stages>
	<tags><li>PowerStone</li></tags>
  </HediffDef>

  <RecipeDef ParentName="OESurgeryInstalImplantBase">
    <defName>OE_InstallPowerStone_Evolution</defName>
    <label>install - Evolution Power Stone</label>
    <description>Install - Evolution Power Stone.</description>
    <descriptionHyperlinks>
      <HediffDef>OE_ImplantPowerStone_Evolution</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing - Evolution Power Stone.</jobString>
	<uiIconThing>OE_UnstableStone</uiIconThing>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OE_Platinum</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_UnstableStone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OE_Platinum</li>
		<li>OE_Syntherius</li>
		<li>OE_UnstableStone</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Torso</li>
    </appliedOnFixedBodyParts>
    <addsHediff>OE_ImplantPowerStone_Evolution</addsHediff>
	<incompatibleWithHediffTags>
      <li>PowerStone</li>
    </incompatibleWithHediffTags>
	<researchPrerequisite>ODCGearLeg</researchPrerequisite>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>OE_RemovePowerStone_Evolution</defName>
    <label>remove - Evolution Power Stone</label>
    <description>Remove - Evolution Power Stone.</description>
    <jobString>Removing - Evolution Power Stone.</jobString>
    <removesHediff>OE_ImplantPowerStone_Evolution</removesHediff>
	<uiIconThing>OE_UnstableStone</uiIconThing>
  </RecipeDef>


  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_CAC_Trophy_P</defName>
    <label>Fourth Arachna's Sin - Sloth bullet</label>
    <graphicData>
      <texPath>Things/Projectile/EGO_BulletSmall</texPath>

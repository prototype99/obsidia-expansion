<?xml version="1.0" encoding="utf-8"?>

<Defs>
<!--=============== Slime Spawners ====================-->
<!--=============== Base ====================-->  
  <ThingDef Name="OEChaosSlimeSpawnerBase" ParentName="BuildingBase" Abstract="True">
	<thingClass>Hive</thingClass>
	<altitudeLayer>Building</altitudeLayer>
	<selectable>true</selectable>
	<rotatable>false</rotatable>
	<pathCost>50</pathCost>
    <fillPercent>1.0</fillPercent>
	<preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
	<statBases>
      <Beauty>-25</Beauty>
	  <Flammability>0.75</Flammability>
    </statBases>
	<forceDebugSpawnable>true</forceDebugSpawnable>
    <receivesSignals>true</receivesSignals>
	<tickerType>Normal</tickerType>
	<blockWind>true</blockWind>
	<passability>PassThroughOnly</passability>
	<blockPlants>true</blockPlants>
	<building>
	  <claimable>false</claimable>
	  <deconstructible>false</deconstructible>
	  <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
	</building>
	<comps>
	  <li Class="CompProperties_SpawnerFilth">
        <filthDef>Filth_Slime</filthDef>
        <spawnCountOnSpawn>8</spawnCountOnSpawn>
        <spawnMtbHours>4</spawnMtbHours>
        <spawnRadius>5.9</spawnRadius>
      </li>
	</comps>
  </ThingDef>

<!--=============== Slime Hive Core ====================-->  
  <ThingDef ParentName="OEChaosSlimeSpawnerBase">
    <defName>OE_ChaosSlimeHive_Core</defName>
    <label>core chaos slime hive</label>
    <description>A core hive of dangerous chaos slimes. If activated, it will spawn additional chaos slimes and smaller hives over time.</description>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <size>(2,2)</size>
	<graphicData>
      <texPath>Things/Building/Natural/ChaosSlimeHive/Core</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 3)</drawSize>
	  <shadowData>
        <volume>(1.9, 1.3, 1.2)</volume>
        <offset>(0, 0, -0.2)</offset>
      </shadowData>
    </graphicData>
	<building>
	  <combatPower>250</combatPower>
	</building>
    <uiIconScale>0.65</uiIconScale>
    <statBases>
	  <MaxHitPoints>1500</MaxHitPoints>
    </statBases>
    <killedLeavingsRanges>
      <OE_Syntherius>10~20</OE_Syntherius>
	  <OE_SlimeHeart>1~3</OE_SlimeHeart>
	  <Shard>0~1</Shard>
    </killedLeavingsRanges>
    <comps>
	  <li Class="CompProperties_WakeUpDormant"/>
	  <li Class="CompProperties_CanBeDormant">
        <startsDormant>true</startsDormant>
        <canWakeUpFogged>false</canWakeUpFogged>
      </li>
	  <li Class="CompProperties_SpawnerPawn">
        <pawnSpawnRadius>3</pawnSpawnRadius>
		<spawnablePawnKinds>
          <li>OE_ChaosSlime_Larval</li>
          <li>OE_ChaosSlime_Adult</li>
        </spawnablePawnKinds>
        <lordJob>LordJob_MechanoidsDefend</lordJob>
        <spawnSound>Hive_Spawn</spawnSound>
        <initialPawnsPoints>50</initialPawnsPoints>
        <maxPawnsToSpawn>20</maxPawnsToSpawn>
		<pawnSpawnIntervalDays>1.5</pawnSpawnIntervalDays>
        <shouldJoinParentLord>True</shouldJoinParentLord>
      </li>
      <li Class="CompProperties_SelfhealHitpoints">
        <ticksPerHeal>3000</ticksPerHeal>
      </li> 
      
	  <li Class="CompProperties_Spawner">
		<thingToSpawn>OE_ChaosSlimeHive_Small</thingToSpawn>
        <spawnCount>1</spawnCount>
        <spawnIntervalRange>720000~1080000</spawnIntervalRange>
        <spawnMaxAdjacent>5</spawnMaxAdjacent>
        <saveKeysPrefix>small</saveKeysPrefix>
        <inheritFaction>true</inheritFaction>
      </li>
	  <li Class="CompProperties_Spawner">
        <thingToSpawn>OE_ChaosSlimeHive_Medium</thingToSpawn>
		<spawnCount>1</spawnCount>
        <spawnIntervalRange>1440000~1800000</spawnIntervalRange>
        <spawnMaxAdjacent>4</spawnMaxAdjacent>
        <saveKeysPrefix>medium</saveKeysPrefix>
        <inheritFaction>true</inheritFaction>
      </li> 
      <li Class="CompProperties_Spawner">
        <thingToSpawn>OE_ChaosSlimeHive_Big</thingToSpawn>
		<spawnCount>1</spawnCount>
        <spawnIntervalRange>2400000~3900000</spawnIntervalRange>
        <spawnMaxAdjacent>2</spawnMaxAdjacent>
        <saveKeysPrefix>big</saveKeysPrefix>
        <inheritFaction>true</inheritFaction>
      </li> 
	  <li Class="CompProperties_Spawner">
        <thingToSpawn>OE_ChaosSlimeHive_Giant</thingToSpawn>
		<spawnCount>1</spawnCount>
        <spawnIntervalRange>4500000~9000000</spawnIntervalRange>
        <spawnMaxAdjacent>1</spawnMaxAdjacent>
        <saveKeysPrefix>giant</saveKeysPrefix>
        <inheritFaction>true</inheritFaction>
      </li>
    </comps>
	<placeWorkers>
      <li>PlaceWorker_CocoonTriggerRadius</li>
    </placeWorkers>
  </ThingDef>


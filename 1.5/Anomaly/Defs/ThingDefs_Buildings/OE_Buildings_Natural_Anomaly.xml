  <GenStepDef>
    <defName>OE_ChaosSlimeHiveCore</defName>
	<order>1100</order>
    <genStep Class="GenStep_ScatterThings">
      <thingDef>OE_ChaosSlimeHive_Core</thingDef>
	  <allowInWaterBiome>false</allowInWaterBiome>
      <minSpacing>10</minSpacing>
      <extraNoBuildEdgeDist>7</extraNoBuildEdgeDist>
	  <countPer10kCellsRange>0.25~0.35</countPer10kCellsRange>
      <clearSpaceSize>8</clearSpaceSize>
	  <terrainValidationRadius>7</terrainValidationRadius>
	  <terrainValidationDisallowed>
        <li>Road</li>
      </terrainValidationDisallowed>
	  <validators>
        <li Class="ScattererValidator_Buildable">
          <radius>5</radius>
          <affordance>Heavy</affordance>
        </li>
		<li Class="ScattererValidator_NoNonNaturalEdifices">
          <radius>7</radius>
        </li>
		<li Class="ScattererValidator_AvoidSpecialThings" />
      </validators>
    </genStep>
  </GenStepDef>


<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Cyber Arachna Turrets ====================-->
  <ThingDef ParentName="BaseGun">
    <defName>OE_CyberArachna_Pistol</defName>
    <label>Cyber Arachna turret</label>
    <description>A small reconstructed CAC Pistol for turrets designed for use on a the Cyber Arachna.</description>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
	<relicChance>0</relicChance>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Drone/NullWeapon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <MarketValue>1500</MarketValue>
	  <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
	  <RangedWeapon_Cooldown>1.25</RangedWeapon_Cooldown>
	  <DeteriorationRate>0</DeteriorationRate>
	  <Mass>5.0</Mass>
    </statBases>
	<weaponTags>
      <li>OECyberArachnaGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
		<defaultProjectile>Bullet_CAC_P</defaultProjectile>
        <warmupTime>0.55</warmupTime>
        <range>20.9</range>
        <burstShotCount>4</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
		<soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
  </ThingDef>


<?xml version="1.0" encoding="utf-8" ?>

<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
	  <li>Biotech</li>
	</mods>
	<match Class="PatchOperationSequence">
	  <operations>
	    <li Class="PatchOperationAdd">
		  <xpath>/Defs</xpath>
		  <value>

<!--=============== EGO - GrenadeLauncher ====================-->
  <RecipeDef>
    <defName>OE_Reset_EGO_GrenadeLauncher</defName>
    <label>Reset Sporothrix</label>
    <description>Reset a Sporothrix.\n\nWarning! Persona traits will be changed.</description>
    <jobString>Resetting a Sporothrix.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>EGO_GrenadeLauncher</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>EGO_GrenadeLauncher</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <EGO_GrenadeLauncher>1</EGO_GrenadeLauncher>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>OEBioengineeringAdv</researchPrerequisite>
  </RecipeDef>

<!--=============== EGO - RocketLauncher ====================-->
  <RecipeDef>
    <defName>OE_Reset_EGO_RocketLauncher</defName>
    <label>Reset Ulcerated</label>
    <description>Reset an Ulcerated.\n\nWarning! Persona traits will be changed.</description>
    <jobString>Resetting an Ulcerated.</jobString>
	<workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>EGO_RocketLauncher</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>EGO_RocketLauncher</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <EGO_RocketLauncher>1</EGO_RocketLauncher>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>OEBioengineeringAdv</researchPrerequisite>
  </RecipeDef>

		  </value>
	    </li>
	  </operations>
	</match>
</Operation>

</Patch>
<?xml version="1.0" encoding="utf-8" ?>

<Patch>
<!--=============== Vanilla Races Expanded - Phytokin ====================-->
<Operation Class="PatchOperationFindMod">
	<mods>
	  <li>Vanilla Races Expanded - Phytokin</li>
	</mods>
	<match Class="PatchOperationSequence">
	  <operations>
	    <li Class="PatchOperationAdd">
		  <xpath>/Defs/FactionDef[defName="ObsidiaEmpire" or defName="ObsidiaPilgrimClan" or defName="ObsidiaCrimsonArachnaCult"]/xenotypeSet/xenotypeChances</xpath>
		  <value>
			<VRE_Animakin MayRequire="Ludeon.RimWorld.Biotech">0.02</VRE_Animakin>
		  </value>
	    </li>
		<li Class="PatchOperationAdd">
		  <xpath>/Defs/FactionDef[defName="ObsidiaSyndicateClan" or defName="ObsidiaRenegadeClan" or defName="ObsidiaEmpireSins"]/xenotypeSet/xenotypeChances</xpath>
		  <value>
			<VRE_Animakin MayRequire="Ludeon.RimWorld.Biotech">0.01</VRE_Animakin>
		  </value>
	    </li>
	  </operations>
	</match>
</Operation>

</Patch>
<Defs>
<!--=============== OMG - Knife ====================-->
  <RecipeDef>
    <defName>OE_Reset_OMG_Trophy_Knife</defName>
    <label>Reset Platebreaker</label>
    <description>Reset a Platebreaker.\n\nWarning! Item Quality and Persona traits will be changed.</description>
    <jobString>Resetting a Platebreaker.</jobString>
	<workAmount>650</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OMG_Trophy_Knife</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OMG_Trophy_Knife</li>
		<li>OE_Syntherius</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OMG_Trophy_Knife>1</OMG_Trophy_Knife>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


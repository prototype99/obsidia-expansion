      <texPath>Things/Item/Equipment/Weapons/ODC/Trophy_Sickle_A_P</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<weaponTags>
	  <li>ODCTrophyMelee</li>
	  <li>OETreasureHound</li>
	  <li>Bladelink</li>
    </weaponTags>
	<tradeTags>
      <li>OEGearTrophy</li>
	  <li>OEGearTrophySell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>WeaponBladelink</li>
    </thingSetMakerTags>
	<statBases>
      <RoyalFavorValue>1.05</RoyalFavorValue>
	  <MarketValue>2050</MarketValue>
    </statBases>
	<tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>30</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>


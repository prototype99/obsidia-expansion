<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== OE - Tree Pearlpeach ====================-->
  <ThingDef ParentName="PollutionTreeBase">
    <defName>Plant_OE_TreePearlpeach</defName>
    <label>Pearlpeach tree</label>
    <description>Obsidias long-growing toxin-adapted crystal tree bearing pearlpeach. Pearlpeach fruits used as a meat substitute. It can only grow in polluted areas.</description>
	<descriptionHyperlinks>
	  <ThingDef>OE_Pearlpeach_Fruit</ThingDef>
    </descriptionHyperlinks>
    <statBases>
		<Beauty>5</Beauty>
		<BeautyOutdoors>5</BeautyOutdoors>
		<Flammability>0.2</Flammability>
	</statBases>
    <graphicData>
      <texPath>Things/Plant/Pearlpeach</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
		<volume>(0.15, 0.3, 0.15)</volume>
		<offset>(0,0,-0.38)</offset>
	  </shadowData>
    </graphicData>
    <selectable>true</selectable>
	<pathCost>14</pathCost>
    <plant>
		<dieIfLeafless>false</dieIfLeafless>
		<sowMinSkill>10</sowMinSkill>
		<growDays>28</growDays>
		<sowWork>3500</sowWork>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>OE_Pearlpeach_Fruit</harvestedThingDef>
		<harvestYield>50</harvestYield>
		<sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
		</sowTags>
		<sowResearchPrerequisites>
			<li>OEFarm</li>
		</sowResearchPrerequisites>
		<topWindExposure>0</topWindExposure>
		<visualSizeRange>0.8~2.0</visualSizeRange>
		<mustBeWildToSow>false</mustBeWildToSow>
		<interferesWithRoof>false</interferesWithRoof>
		<immatureGraphicPath>Things/Plant/Pearlpeach/Pearlpeach_Immature</immatureGraphicPath>
		<leaflessGraphicPath>Things/Plant/Pearlpeach/Pearlpeach_Leafless</leaflessGraphicPath>
		<harvestWork>1250</harvestWork>
		<harvestFailable>true</harvestFailable>
		<harvestAfterGrowth>0.20</harvestAfterGrowth>
    </plant>
  </ThingDef>

<!--=============== OE - Toxi Jumy ====================-->
  <ThingDef ParentName="PlantBase">
    <defName>Plant_OE_ToxiJumy</defName>
    <label>toxi Jumy</label>
    <description>Small toxin-adapted Obsidias plant inside which grows handfuls tasty and sweet berries. It can only grow in polluted areas.</description>
	<descriptionHyperlinks>
	  <ThingDef>OE_Jumy_Berries</ThingDef>
	  <ThingDef>Plant_OE_JumyBush</ThingDef>
    </descriptionHyperlinks>
    <statBases>
      <MaxHitPoints>65</MaxHitPoints>
	  <Nutrition>0.65</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/ToxiJumy</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
	<neverMultiSelect>false</neverMultiSelect>
    <pathCost>30</pathCost>
    <plant>
		<pollution>PollutedOnly</pollution>
		<dieIfLeafless>true</dieIfLeafless>
		<sowMinSkill>10</sowMinSkill>
		<growDays>10</growDays>
		<sowWork>350</sowWork>
		<harvestTag>Standard</harvestTag>
		<harvestedThingDef>OE_Jumy_Berries</harvestedThingDef>
		<harvestAfterGrowth>0.30</harvestAfterGrowth>
		<harvestYield>10</harvestYield>
		<fertilityMin>0.5</fertilityMin>
		<fertilitySensitivity>0</fertilitySensitivity>
		<neverBlightable>true</neverBlightable>
		<sowTags>
			<li>Ground</li>
			<li>Hydroponic</li>
			<li>Decorative</li>
		</sowTags>
		<sowResearchPrerequisites>
			<li>OECore</li>
		</sowResearchPrerequisites>
		<maxMeshCount>9</maxMeshCount>
        <visualSizeRange>0.4~0.65</visualSizeRange>
		<topWindExposure>0.1</topWindExposure>
        <harvestFailable>true</harvestFailable>
		<immatureGraphicPath>Things/Plant/ToxiJumy/ToxiJumy_Immature</immatureGraphicPath>
    </plant>
  </ThingDef>


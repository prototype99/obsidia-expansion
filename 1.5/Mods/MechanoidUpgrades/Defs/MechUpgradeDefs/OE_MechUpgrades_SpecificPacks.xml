<!--=============== Arachnas ====================-->
  <ThingDef ParentName="MU_MechSPackItemBase">
    <defName>OE_UpgradePack_Arachna</defName>
    <label>arachna upgrade pack</label>
    <description>Pack of different upgrades for arachnas.\nAlso contains remote controle module that allows control outside of mechanitor command range.</description>
	<graphicData>
      <texPath>Things/Item/MechanoidUpgrade/OE_UpgradePack_Arachna</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>25000</WorkToMake>
	  <MarketValue>2500</MarketValue>
	  <MaxHitPoints>150</MaxHitPoints>
      <Mass>0.25</Mass>
    </statBases>
	<recipeMaker>
      <unfinishedThingDef>OE_UnfinishedMods</unfinishedThingDef>
	  <researchPrerequisites>
		<li>OEMechtechAdv</li>
		<li>MU_AdvancedUpgrades</li>
	  </researchPrerequisites>
      <recipeUsers Inherit="False">
        <li>MU_AdvancedUpgradesAssembler</li>
      </recipeUsers>
	  <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	<costList>
      <OE_Obsidian>25</OE_Obsidian>
	  <OE_Mythril>50</OE_Mythril>
	  <OE_Syntherius>20</OE_Syntherius>
    </costList>
	<comps>
      <li Class="MU.CompProperties_MechUpgrade">
        <upgradeDef>OE_UpgradePack_Arachna</upgradeDef>
      </li>
    </comps>
  </ThingDef>
  

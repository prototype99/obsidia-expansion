  <RecipeDef>
    <defName>OE_Gestate_EGO_Shield_Medium</defName>
    <label>gestate EGO Aegis</label>
    <description>Gestate an amalgam EGO Aegis.</description>
    <jobString>Gestating an EGO Aegis.</jobString>
	<workAmount>6500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>OE_UnfinishedAmalgama</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>120</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Platinum</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Mooncloth</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_Syntherius</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_EGOAmalgamationCore</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
	<fixedIngredientFilter>
	  <categories>
        <li>MeatRaw</li>
      </categories>  
	  <thingDefs>
		<li>OE_Platinum</li>
		<li>OE_Mooncloth</li>
		<li>OE_Syntherius</li>
		<li>OE_EGOAmalgamationCore</li>
      </thingDefs>
	  <disallowedThingDefs>
        <li>OE_Pearlapple_Fruit</li>
		<li>OE_Red_TionantJelly</li>
        <li>InsectJelly</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
    <products>
      <EGO_Shield_Medium>1</EGO_Shield_Medium>
    </products>
	<recipeUsers>
      <li>OE_AmalgamVat</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>6</Crafting>
	  <Intellectual>6</Intellectual>
	  <Medicine>6</Medicine>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisites>
	  <li>OEGearCross</li>
	  <li>OEBioengineering</li>
	</researchPrerequisites>
  </RecipeDef>


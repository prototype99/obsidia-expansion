<?xml version="1.0" encoding="utf-8"?>

<Defs>
<!--=============== OMG Drone ====================-->
  <ThingDef ParentName="OEArmorCoreNQ">
    <defName>OMG_Drone</defName>
    <label>Luminaris</label>
    <description>The personal drone-companion is designed by OMG as a combat assistant improves the owner stats and can firing independently.\n\nThis modification deprives item's quality levels.\n\nUses as a weapon reconstructed OMG Pistol.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Drone/OMG/OMGDrone</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<relicChance>0</relicChance>
	<thingCategories Inherit="False">
      <li>OE_Category_Gear_OMG_Utility</li>
    </thingCategories>
	<tradeTags>
      <li>OMGGear</li>
	  <li>OEGearSell</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <generateAllowChance>0.15</generateAllowChance>
	<statBases>
      <MarketValue>4125</MarketValue>
      <Mass>2</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.35</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <EquipDelay>5</EquipDelay>
      <AccuracyTouch>1.10</AccuracyTouch>
      <AccuracyShort>1.00</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
	<equippedStatOffsets>
      <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
	  <MeleeHitChance>2</MeleeHitChance>
	  <SocialImpact>0.10</SocialImpact>
	  <PsychicSensitivity MayRequire="Ludeon.RimWorld.Royalty">0.50</PsychicSensitivity>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.083</PsychicEntropyRecoveryRate>
	  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.10</SlaveSuppressionOffset>
	  <SocialIdeoSpreadFrequencyFactor MayRequire="Ludeon.RimWorld.Ideology">0.10</SocialIdeoSpreadFrequencyFactor>
	  <WorkSpeedGlobalOffsetMech MayRequire="Ludeon.RimWorld.Biotech">0.10</WorkSpeedGlobalOffsetMech>
	  <MechBandwidth MayRequire="Ludeon.RimWorld.Biotech">4</MechBandwidth>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <label>Nanofire</label>
        <defaultProjectile>Bullet_OMG_P</defaultProjectile>
        <warmupTime>0.75</warmupTime>
        <range>20.9</range>
        <burstShotCount>3</burstShotCount>
		<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<costList>
      <OE_Empyrium>20</OE_Empyrium>
	  <OE_Orichalcum>20</OE_Orichalcum>
	  <OE_MercenaryKit>5</OE_MercenaryKit>
	  <OE_ArachnaCore>1</OE_ArachnaCore>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Utility/Drone/OMG/OMGDrone</wornGraphicPath>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>OMGDrone</li>
      </tags>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <offset>(-0.25,-0.1)</offset>
        </north>
        <south>
          <offset>(0.2,0.2)</offset>
        </south>
        <east>
          <offset>(-0.2,0.1)</offset>
        </east>
        <west>
          <offset>(0.2,0.1)</offset>
        </west>
        <male>
          <scale>(1.0,1.0)</scale>
        </male>
        <female>
          <scale>(1.0,1.0)</scale>
        </female>
        <thin>
          <scale>(0.85,0.85)</scale>
        </thin>
        <hulk>
          <scale>(1.1,1.1)</scale>
        </hulk>
        <fat>
          <scale>(1.1,1.1)</scale>
        </fat>
      </wornGraphicData>
    </apparel>
	<comps>
      <li Class="MVCF.Comps.CompProperties_VerbGiver">
        <verbProps>
          <li>
            <label>Nanofire</label>
            <visualLabel>mini-Nanofire</visualLabel>
            <description>Reconstructed OMG Pistol for use by drone.</description>
            <canBeToggled>true</canBeToggled>
            <comps>
              <li Class="MVCF.VerbComps.VerbCompProperties_Turret">
                <compClass>MVCF.VerbComps.VerbComp_Turret</compClass>
                <humanAsDefault>true</humanAsDefault>
				<invisible>true</invisible>
                <graphic>
                  <texPath>UI/Abilities/Armor/Attack</texPath>
                  <graphicClass>Graphic_Single</graphicClass>
                </graphic>
                <specificPositions>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Hulk</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.1)</Up>
                    <Down>(0.4,0.2)</Down>
                    <Right>(-0.55,0.1)</Right>
                    <Left>(0.55,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Fat</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.35,0.2)</Down>
                    <Right>(-0.5,0.1)</Right>
                    <Left>(0.5,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Male</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Female</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Thin</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                </specificPositions>
                <scalings>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Thin</BodyType>
                    <scaling>1.1</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Male</BodyType>
                    <scaling>1.2</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Female</BodyType>
                    <scaling>1.2</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Fat</BodyType>
                    <scaling>1.3</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Hulk</BodyType>
                    <scaling>1.3</scaling>
                  </li>
                </scalings>
              </li>
            </comps>
          </li>
        </verbProps>
      </li>
    </comps>
  </ThingDef>

</Defs>
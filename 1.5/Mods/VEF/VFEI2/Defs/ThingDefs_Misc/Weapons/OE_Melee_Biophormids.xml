<!--=============== Biophormids - Knife ====================-->
  <ThingDef ParentName="BaseWeapon">
    <defName>EGO_Biophormids_Knife</defName>
    <label>Venomtip</label>
    <description>Amalgam Knife used by Razorsythe.</description>
	<tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
	<relicChance>0</relicChance>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/EGO/Biophormids/Knife</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<uiIconScale>1.2</uiIconScale>
	<thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <weaponClasses>
      <li>Melee</li>
    </weaponClasses>
	<inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
	<statBases>
	  <MarketValue>500</MarketValue>
	  <Mass>1.0</Mass>
    </statBases>
	<weaponTags>
	  <li>EGOBiophormidsRazorsythe</li>
    </weaponTags>
	<tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.45</armorPenetration>
        <cooldownTime>2</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>OTCAcid</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>15</power>
		<armorPenetration>0.4</armorPenetration>
        <cooldownTime>1.75</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>OTCAcid</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>15</power>
		<armorPenetration>0.4</armorPenetration>
        <cooldownTime>2.25</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>OTCAcid</def>
            <amount>10</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>

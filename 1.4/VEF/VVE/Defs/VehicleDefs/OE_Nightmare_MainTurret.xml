<!--=============== Vehicles Turret Base ====================-->
  <Vehicles.VehicleTurretDef Name="OEVehicleTurretBase" ParentName="VehicleTurretBase" Abstract="True">
	<reloadSound>VVE_BulldogReloadSound</reloadSound>
	<genericAmmo>true</genericAmmo>
	<autoSnapTargeting>true</autoSnapTargeting>
	<turretType>Rotatable</turretType>
	<attachProjectileFlag>VVE_Tank</attachProjectileFlag>
	<hitFlags>IntendedTarget</hitFlags>
	<rotationSpeed>1.5</rotationSpeed>
	<projectileOffset>2.0</projectileOffset>
	<projectileShifting>
	  <li>-0.80</li>
	  <li>-0.60</li>
	</projectileShifting>

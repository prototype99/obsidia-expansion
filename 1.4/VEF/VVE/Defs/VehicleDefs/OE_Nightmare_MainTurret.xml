  <ThingDef ParentName="BaseBullet">
	<defName>Bullet_OMC_Nightmare_MainTurret</defName>
	<label>Sutherland turret bullet</label>
	<graphicData>
	  <texPath>Things/Projectile/OMC_BulletBig_M</texPath>

  <Vehicles.VehicleTurretDef ParentName="OEVehicleTurretBase">
	<defName>OMC_Nightmare_MainTurret</defName>
	<label>Sutherland turret</label>
	<description>Large mounted Sniper turret used by OMC nightmare.</description>
	<graphicData>
	  <texPath>Things/Vehicles/Nightmare/CannonTop/OMC_Nightmare_CannonTop</texPath>
	  <graphicClass>Vehicles.Graphic_Turret</graphicClass>
	  <shaderType>CutoutComplexPattern</shaderType>
	  <drawSize>(3, 3)</drawSize>
	</graphicData>
	<shotSound>Shot_SniperRifle</shotSound>
	<magazineCapacity>64</magazineCapacity>
	<chargePerAmmoCount>0.315</chargePerAmmoCount>

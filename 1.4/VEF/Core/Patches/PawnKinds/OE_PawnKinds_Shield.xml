<?xml version="1.0" encoding="utf-8" ?>

<Patch>
<!--=============== OMC ====================-->	 
<Operation Class="PatchOperationAdd">
    <xpath>/Defs/PawnKindDef[defName="OMC_Officer_Melee" or defName="OMC_Officer_Ranged"]</xpath>
    <value>
      <modExtensions Inherit="False">
	    <li Class="VFECore.PawnKindDefExtension">
          <shieldMoney>
		    <min>-100</min>
		    <max>2500</max>
		  </shieldMoney>
          <shieldTags>
		    <li>OMCShield</li>
		  </shieldTags>
        </li>
      </modExtensions>
    </value>
</Operation>


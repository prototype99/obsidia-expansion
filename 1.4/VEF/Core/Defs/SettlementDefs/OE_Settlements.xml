<?xml version="1.0" encoding="UTF-8"?>

<Defs>
<!--=============== Obsidia Empire Settlement ====================-->
  <KCSG.SettlementLayoutDef>
    <defName>OE_Settlement_ObsidiaEmpire</defName>
	<settlementSize>120,120</settlementSize>
    <centerBuildings>
      <centerSize>118,180</centerSize>
	  <spaceAround>2</spaceAround>
      <centralBuildingTags>
        <li>OE_Structure_Center</li>
      </centralBuildingTags>
	  <allowedStructures>
	    <li>
          <count>3~8</count>
          <tag>OE_Structure_Farm</tag>
        </li>
		<li>
          <count>2~4</count>
          <tag>OE_Structure_Power</tag>
        </li>
		<li>
          <count>2~8</count>
          <tag>OE_Structure_Security_Small</tag>
        </li>
		<li>
          <count>2~3</count>
          <tag>OE_Structure_Security_Big</tag>
        </li>
		<li>
          <count>1~4</count>
          <tag>OE_Structure_Workshop</tag>
        </li>
		<li>
          <count>0~3</count>
          <tag>OE_Structure_Prison</tag>
        </li>
		<li>
          <count>1~3</count>
          <tag>OE_Structure_Storage</tag>
        </li>
	  </allowedStructures>
    </centerBuildings>
    <roadOptions>
      <addLinkRoad>true</addLinkRoad>
      <linkRoadDef>Concrete</linkRoadDef>
	  <linkRoadWidth>3</linkRoadWidth>
    </roadOptions>
	<defenseOptions>
	  <addEdgeDefense>true</addEdgeDefense>
	  <addSandbags>false</addSandbags>
	  <addTurrets>false</addTurrets>
	  <pawnGroupMultiplier>1.10</pawnGroupMultiplier>
	</defenseOptions>
	<stockpileOptions>
      <fillStorageBuildings>true</fillStorageBuildings>
      <fillWithDefs>
        <li>Neutroamine</li>
		<li>Chemfuel</li>
		<li>Silver</li>
		<li>OE_Obsidian</li>
		<li>OE_Mythril</li>
		<li>OE_Platinum</li>
		<li>OE_Syntherius</li>
		<li>OE_FungalWoodLog</li>
		<li>OE_DragonianWoodLog</li>
		<li>OE_EGOSeed</li>
		<li>OE_ModernizationKit</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">OE_PersonaKit</li>
		<li>OE_Jumyline_Candies</li>
		<li>MedicineIndustrial</li>
		<li>OE_SlimeHeart</li>
		<li>OE_Torraxin</li>
		<li>OE_Joltixin</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">OE_Luraxin</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">OE_Alcrexin</li>
		<li>OE_Azulium</li>
		<li>OE_Timbium</li>
		<li>OE_Cosmol</li>
		<li>OE_Slugol</li>
		<li>OE_SlimeHeart</li>
		<li>MechSerumHealer</li>
        <li>MechSerumResurrector</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">PsychicAmplifier</li>
      </fillWithDefs>
	  <stockpileValueMultiplier>1.5</stockpileValueMultiplier>
    </stockpileOptions>
  </KCSG.SettlementLayoutDef>


<?xml version="1.0" encoding="utf-8"?>

<Defs>
<!--=============== OCC Drone ====================-->
  <ThingDef ParentName="OEArmorCore">
    <defName>OCC_Drone</defName>
    <label>Shinmura</label>
    <description>The personal drone-companion is designed by OCC as a combat assistant improves the owner stats and can firing independently.\n\nUses as a weapon reconstructed OCC Revolver.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Drone/OCC/OCCDrone</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<relicChance>0</relicChance>
	<thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
	<tradeTags>
      <li>OEGear</li>
    </tradeTags>
	<thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <generateAllowChance>0.15</generateAllowChance>
	<statBases>
      <MarketValue>4125</MarketValue>
	  <WorkToMake>100000</WorkToMake>
      <Mass>2</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.35</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <EquipDelay>5</EquipDelay>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>2.25</RangedWeapon_Cooldown>
    </statBases>
	<equippedStatOffsets>
	  <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
	  <MeleeHitChance>2</MeleeHitChance>
	  <MentalBreakThreshold>-0.15</MentalBreakThreshold>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <label>Hornet</label>
        <defaultProjectile>Bullet_OCC</defaultProjectile>
		<forcedMissRadius>0.3</forcedMissRadius>
        <warmupTime>1.0</warmupTime>
		<ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>20.9</range>
        <burstShotCount>1</burstShotCount>
		<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
	<costList>
      <OE_Obsidian>20</OE_Obsidian>
	  <OE_Platinum>10</OE_Platinum>
	  <OE_ModernizationKit>5</OE_ModernizationKit>
	  <OE_ArachnaCore>1</OE_ArachnaCore>
    </costList>
	<recipeMaker>
      <unfinishedThingDef>OE_UnfinishedGear</unfinishedThingDef>
	  <researchPrerequisites>
        <li>OEGearCross</li>
		<li>OEModules</li>
      </researchPrerequisites>
      <recipeUsers>
        <li>OE_ArmorStation</li>
		<li>OE_WeaponWorkbench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>12</Crafting>
		<Intellectual>10</Intellectual>
      </skillRequirements>
    </recipeMaker>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Utility/Drone/OCC/OCCDrone</wornGraphicPath>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <careIfDamaged>false</careIfDamaged>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags>
        <li>OCCDrone</li>
      </tags>
      <wornGraphicData>
        <renderUtilityAsPack>true</renderUtilityAsPack>
        <north>
          <offset>(-0.25,-0.1)</offset>
        </north>
        <south>
          <offset>(0.2,0.2)</offset>
        </south>
        <east>
          <offset>(-0.2,0.1)</offset>
        </east>
        <west>
          <offset>(0.2,0.1)</offset>
        </west>
        <male>
          <scale>(1.0,1.0)</scale>
        </male>
        <female>
          <scale>(1.0,1.0)</scale>
        </female>
        <thin>
          <scale>(0.85,0.85)</scale>
        </thin>
        <hulk>
          <scale>(1.1,1.1)</scale>
        </hulk>
        <fat>
          <scale>(1.1,1.1)</scale>
        </fat>
      </wornGraphicData>
    </apparel>
	<comps>
      <li Class="MVCF.Comps.CompProperties_VerbGiver">
        <verbProps>
          <li>
            <label>Hornet</label>
            <visualLabel>mini-Hornet</visualLabel>
            <description>Reconstructed OCC Revolver for use by drone.</description>
            <canBeToggled>true</canBeToggled>
            <comps>
              <li Class="MVCF.VerbComps.VerbCompProperties_Turret">
                <compClass>MVCF.VerbComps.VerbComp_Turret</compClass>
                <humanAsDefault>true</humanAsDefault>
				<invisible>true</invisible>
                <graphic>
                  <texPath>Things/Item/Equipment/Utility/Drone/NullWeapon</texPath>
                  <graphicClass>Graphic_Single</graphicClass>
                </graphic>
                <specificPositions>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Hulk</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.1)</Up>
                    <Down>(0.4,0.2)</Down>
                    <Right>(-0.55,0.1)</Right>
                    <Left>(0.55,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Fat</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.35,0.2)</Down>
                    <Right>(-0.5,0.1)</Right>
                    <Left>(0.5,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Male</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Female</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Thin</BodyType>
                    <Default>(0,0)</Default>
                    <Up>(0.0,-0.0)</Up>
                    <Down>(0.3,0.2)</Down>
                    <Right>(-0.4,0.1)</Right>
                    <Left>(0.4,0.1)</Left>
                  </li>
                </specificPositions>
                <scalings>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Thin</BodyType>
                    <scaling>1.1</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Male</BodyType>
                    <scaling>1.2</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Female</BodyType>
                    <scaling>1.2</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Fat</BodyType>
                    <scaling>1.3</scaling>
                  </li>
                  <li>
                    <defName>Human</defName>
                    <BodyType>Hulk</BodyType>
                    <scaling>1.3</scaling>
                  </li>
                </scalings>
              </li>
            </comps>
          </li>
        </verbProps>
      </li>
    </comps>
  </ThingDef>

</Defs>
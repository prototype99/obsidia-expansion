<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Civilians ====================-->
<!--=============== Colonist ====================-->
  <BackstoryDef>
    <defName>OE_Colonist</defName>
    <title>obsidia colonist</title>
    <titleShort>colonist</titleShort>
    <baseDesc>[PAWN_nameDef] completed Obsidia Colonists course. Possesses all the necessary skills to support life in the colony.</baseDesc>
    <slot>Adulthood</slot>
    <requiredWorkTags>
      <li>Animals</li>
	  <li>Cooking</li>
	  <li>PlantWork</li>
    </requiredWorkTags>
    <skillGains>
      <li><key>Animals</key><value>3</value></li>
      <li><key>Cooking</key><value>3</value></li>
	  <li><key>Plants</key><value>3</value></li>
	  <li><key>Crafting</key><value>-2</value></li>
      <li><key>Intellectual</key><value>-2</value></li>
    </skillGains>
    <spawnCategories>
      <li>OECivilians</li>
    </spawnCategories>
	<forcedTraits>
      <OECivilian>0</OECivilian>
    </forcedTraits>
	<bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
  </BackstoryDef>

<!--=============== Worker ====================-->
  <BackstoryDef>
    <defName>OE_Worker</defName>
    <title>obsidia worker</title>
    <titleShort>worker</titleShort>
    <baseDesc>[PAWN_nameDef] completed Obsidia Workers course. Possesses all the necessary skills to build a colony and extract useful resources.</baseDesc>
    <slot>Adulthood</slot>
    <requiredWorkTags>
	  <li>Constructing</li>
	  <li>Crafting</li>
	  <li>Mining</li>
    </requiredWorkTags>
    <skillGains>
      <li><key>Construction</key><value>3</value></li>
      <li><key>Crafting</key><value>3</value></li>
	  <li><key>Mining</key><value>3</value></li>
	  <li><key>Animals</key><value>-2</value></li>
      <li><key>Social</key><value>-2</value></li>
    </skillGains>
    <spawnCategories>
      <li>OECivilians</li>
    </spawnCategories>
	<forcedTraits>
      <OECivilian>0</OECivilian>
    </forcedTraits>
	<bodyTypeMale>Hulk</bodyTypeMale>
    <bodyTypeFemale>Hulk</bodyTypeFemale>
  </BackstoryDef>


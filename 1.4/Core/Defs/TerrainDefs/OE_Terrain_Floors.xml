<!--=============== Crystal Tilled Soil ====================-->
  <TerrainDef>
    <defName>OE_Crystal_TilledSoil</defName>
    <label>crystal tilled soil</label>
	<description>Triple efficient tilled soil with Sinterius. Costly but effective Obsidia technique.</description>
    <texturePath>Terrain/Surfaces/Crystal_TilledSoil</texturePath>
	<pollutionShaderType MayRequire="Ludeon.RimWorld.Biotech">TerrainFadeRoughSoftLight</pollutionShaderType>
    <pollutionOverlayTexturePath>Terrain/Surfaces/Crystal_TilledSoil_Pollution</pollutionOverlayTexturePath>
    <edgeType>FadeRough</edgeType>
    <renderPrecedence>340</renderPrecedence>
	<layerable>true</layerable>
    <pathCost>2</pathCost>
	<designationCategory>Floors</designationCategory>
	<constructEffect>ConstructDirt</constructEffect>
	<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <statBases>
      <Beauty>2</Beauty>
      <BeautyOutdoors>2</BeautyOutdoors>
	  <WorkToBuild>1000</WorkToBuild>
      <Cleanliness>0.05</Cleanliness>
    </statBases>
	<costList>
      <OE_Syntherius>5</OE_Syntherius>
    </costList>
	<researchPrerequisites>
      <li>OEFarmAdv</li>
    </researchPrerequisites>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
	<filthAcceptanceMask>
      <li>Unnatural</li>
    </filthAcceptanceMask>
    <fertility>3.0</fertility>
    <takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
    <tags>
      <li>Soil</li>
    </tags>
  </TerrainDef>

</Defs>
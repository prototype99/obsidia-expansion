<Defs>
<!--=============== CAC ====================-->
<!--=============== Small ====================-->
  <ThingDef ParentName="OE_TurretBase_Small">
    <defName>CAC_Turret_Small</defName>
    <label>CAC Widowmaker Turret</label>
    <description>An automatic CAC Sniper Rifle-equipped turret. Requires obsidia ammo kit as fuel. Its dumb AI brain can't be directly controlled, so beware of friendly fire.</description>
    <graphicData>
      <texPath>Things/Building/Security/CAC/TurretSmall_Base</texPath>
    </graphicData>
    <uiIconPath>Things/Building/Security/CAC/TurretSmall_Icon</uiIconPath>
    <costList>
      <OE_Empyrium>75</OE_Empyrium>
      <OE_Orichalcum>25</OE_Orichalcum>
	  <OE_Platinum>15</OE_Platinum>
	  <OE_Syntherius>25</OE_Syntherius>
    </costList>
	<statBases>
      <MarketValue>1850</MarketValue>
    </statBases>
    <building>
      <combatPower>150</combatPower> 
	  <turretGunDef>CAC_TurretGun_Small</turretGunDef>
      <turretBurstCooldownTime>2.3</turretBurstCooldownTime>
    </building>
    <researchPrerequisites>
      <li>OEDefence</li>
	  <li>CACGear</li>
    </researchPrerequisites>
	<comps>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Shoots until run out of charges</fuelLabel>
        <fuelGizmoLabel>Fuel capacity</fuelGizmoLabel>
        <fuelFilter>
          <thingDefs>
            <li>OE_AmmoKit</li>
          </thingDefs>
        </fuelFilter>
        <fuelCapacity>50</fuelCapacity>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>0.75</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>1</minimumFueledThreshold>
        <fuelMultiplier>1.43</fuelMultiplier>
        <factorByDifficulty>true</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <outOfFuelMessage>Cannot shoot: Needs obsidia ammo kit</outOfFuelMessage>
        <fuelIconPath>Things/Item/Resource/ProductProduced/OE_AmmoKit</fuelIconPath>
      </li>
	</comps>  
  </ThingDef>


  <ThingDef Name="CAC_TurretGun_Small" ParentName="BaseWeaponTurret">
    <defName>CAC_TurretGun_Small</defName>
    <label>Widowmaker Turret</label>
    <description>Reconstructed CAC Sniper Rifle for turrets. Specially modified weapon with increased power.</description>
    <graphicData>
      <texPath>Things/Building/Security/CAC/TurretSmall_Gun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.95</AccuracyLong>
      <RangedWeapon_Cooldown>3.25</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>5</Mass>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>CAC_TurretBullet_Small</defaultProjectile>
        <warmupTime>0</warmupTime>
        <range>55.9</range>
        <burstShotCount>2</burstShotCount>
		<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
      </li>
    </verbs>
	<relicChance>0</relicChance>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>CAC_TurretBullet_Small</defName>
    <label>widowmaker turret bullet</label>
    <graphicData>
      <texPath>Things/Projectile/CAC_BulletBig</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.2</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>45</damageAmountBase>
	  <stoppingPower>1.5</stoppingPower>
	  <armorPenetrationBase>0.95</armorPenetrationBase>
      <speed>110</speed>
    </projectile>
  </ThingDef>
  

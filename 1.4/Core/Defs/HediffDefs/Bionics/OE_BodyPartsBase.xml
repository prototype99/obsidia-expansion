<!--=============== Cyberware ====================-->
  <ThingDef Name="OEBodyPartsCW" Abstract="True">
	<thingClass>ThingWithComps</thingClass>
    <category>Item</category>
	<drawerType>MapMeshOnly</drawerType>
	<techLevel>Spacer</techLevel>
	<useHitPoints>true</useHitPoints>
    <pathCost>14</pathCost>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <tickerType>Never</tickerType>
    <alwaysHaulable>true</alwaysHaulable>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
	<thingCategories>
      <li>BodyPartsArchotech</li>
    </thingCategories>
	<tradeTags>
      <li>Bionic</li>
    </tradeTags>
    <techHediffsTags>
      <li>OEBionics_Cyberware</li>
    </techHediffsTags>
	<graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <statBases>
      <Mass>1.0</Mass>
	  <WorkToMake>65000</WorkToMake>
	  <DeteriorationRate>0</DeteriorationRate>
    </statBases>
	<thingSetMakerTags>
	  <li>RewardStandardMidFreq</li>
	</thingSetMakerTags>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <unfinishedThingDef>OE_UnfinishedMods</unfinishedThingDef>
      <skillRequirements>
        <Crafting>12</Crafting>
		<Medicine>12</Medicine>
	    <Intellectual>10</Intellectual>
      </skillRequirements>
      <recipeUsers>
        <li>OE_BionicTable</li>
      </recipeUsers>
      <displayPriority>300</displayPriority>
    </recipeMaker>
	<comps>
      <li Class="CompProperties_UseEffectDestroySelf" />
    </comps>
  </ThingDef>

  <HediffDef Name="OECyberwareLvlParts" Abstract="True">
	<hediffClass>Hediff_Level</hediffClass>
	<defaultLabelColor>(0.55, 0.73, 0.00)</defaultLabelColor>
	<isBad>false</isBad>
	<priceImpact>true</priceImpact>
	<initialSeverity>1</initialSeverity>
	<keepOnBodyPartRestoration>True</keepOnBodyPartRestoration>
    <levelIsQuantity>true</levelIsQuantity>
  </HediffDef>

</Defs>
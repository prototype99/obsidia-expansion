  <ThingDef ParentName="OEBodyPartsM">
    <defName>OE_ImplantTorso_Interface</defName>
    <label>cyberware interface</label>
    <description>Obsidia cyberware interface system is installed in the body with a low-intelligent microcomputer controlled by a neural interface. Required for further installation of cyberware modules.</description>
    <descriptionHyperlinks>
	  <RecipeDef>OE_InstallImplantTorso_Interface</RecipeDef>
	  <ThingDef>OE_CyberwareHead_Ranged</ThingDef>
	  <ThingDef>OE_CyberwareHead_Melee</ThingDef>
	  <ThingDef>OE_CyberwareHead_Optimist</ThingDef>
	  <ThingDef>OE_CyberwareHead_Pessimist</ThingDef>
	  <ThingDef>OE_CyberwareHead_Workout</ThingDef>
	  <ThingDef>OE_CyberwareHead_Relaxing</ThingDef>
	  <ThingDef MayRequire="Ludeon.RimWorld.Royalty">OE_CyberwareHead_Psy</ThingDef>
	  <ThingDef>OE_CyberwareNeck_Social</ThingDef>
	  <ThingDef>OE_CyberwareNeck_Beastmaster</ThingDef>
	  <ThingDef>OE_CyberwareNeck_Trader</ThingDef>
	  <ThingDef>OE_CyberwareNeck_Recruiter</ThingDef>
	  <ThingDef MayRequire="Ludeon.RimWorld.Ideology">OE_CyberwareNeck_Ideologist</ThingDef>
	  <ThingDef>OE_CyberwareTorso_Drugfilter_Basic</ThingDef>
	  <ThingDef>OE_CyberwareTorso_Drugfilter_Obsidia</ThingDef>
	  <ThingDef>OE_CyberwareTorso_Drugfilter_Exotic</ThingDef>
	  <ThingDef>OE_CyberwareTorso_Temperature</ThingDef>
	</descriptionHyperlinks>
	<graphicData>
      <texPath>Things/Item/Health/Implant/OE_Interface</texPath>
    </graphicData>
	<techHediffsTags>
      <li>OEBionics_Cyberware</li>
    </techHediffsTags>
    <costList>
      <OE_PlatinumSynthweave>30</OE_PlatinumSynthweave>
	  <OE_Mythril>25</OE_Mythril>
      <OE_Syntherius>50</OE_Syntherius>
    </costList>
	<butcherProducts>
	  <OE_PlatinumSynthweave>20</OE_PlatinumSynthweave>
	  <OE_Mythril>15</OE_Mythril>
      <OE_Syntherius>20</OE_Syntherius>
	</butcherProducts>
    <statBases>
      <Mass>10.0</Mass>
    </statBases>
	<recipeMaker>
      <researchPrerequisite>OECyberwares</researchPrerequisite>
    </recipeMaker>
  </ThingDef>


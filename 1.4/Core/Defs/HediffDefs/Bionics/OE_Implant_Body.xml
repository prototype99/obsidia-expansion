	<butcherProducts>
	  <OE_EmpyriumSynthweave>5</OE_EmpyriumSynthweave>
	  <OE_OrichalcumSynthweave>5</OE_OrichalcumSynthweave>
	  <OE_Empyrium>10</OE_Empyrium>
	  <OE_Orichalcum>10</OE_Orichalcum>
      <OE_Syntherius>15</OE_Syntherius>
	</butcherProducts>	
    <statBases>

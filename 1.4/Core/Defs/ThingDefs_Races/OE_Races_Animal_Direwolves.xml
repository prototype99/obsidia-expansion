<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Direwolves Base ====================-->
  <ThingDef Name="OEBaseDirewolf" ParentName="AnimalThingBase" Abstract="True">
    <devNote>obsidia</devNote>
    <statBases>
      <MoveSpeed>5.0</MoveSpeed>
      <MarketValue>1000</MarketValue>
      <ComfyTemperatureMin>-45</ComfyTemperatureMin>
	  <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
      <FilthRate>2</FilthRate>
	  <CaravanRidingSpeedFactor>1.1</CaravanRidingSpeedFactor>
    </statBases>
    <tools>
      <li>
        <label>left claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <label>right claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.5</chanceFactor>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.9</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>14</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <animalType>Canine</animalType>
      <body>QuadrupedAnimalWithPawsAndTail</body>
      <predator>true</predator>
	  <packAnimal>true</packAnimal>
      <maxPreyBodySize>2.3</maxPreyBodySize>
      <petness>0.1</petness>
      <baseBodySize>1.2</baseBodySize>
      <baseHungerRate>0.2</baseHungerRate>
      <baseHealthScale>1.55</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>OE_Leather_Direwolf</leatherDef>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0.85</wildness>
      <manhunterOnTameFailChance>0.35</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <gestationPeriodDays>10</gestationPeriodDays>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(2, 1.7)</li>
          <li>(2.5, 0.7)</li>
          <li>(3, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>45</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Dog_Injured</soundWounded>
          <soundDeath>Pawn_Dog_Death</soundDeath>
          <soundCall>Pawn_Dog_Call</soundCall>
          <soundAngry>Pawn_Dog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>OEAnimal</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="OEKindBaseDirewolf" Abstract="True">
    <combatPower>200</combatPower>
    <ecoSystemWeight>0.4</ecoSystemWeight>
  </PawnKindDef>

<!--=============== Direwolf ====================-->
  <ThingDef ParentName="OEBaseDirewolf">
    <defName>OE_Direwolf</defName>
    <label>direwolf</label>
    <description>Obsidia Direwolves look like normal wolves, but these creatures are nearly twice the size. Because of their fur, they prefer to live in cool climates. Hard to tame, but once tamed, they become loyal protectors.</description>
    <race>
      <meatLabel>direwolf meat</meatLabel>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="OEKindBaseDirewolf">
    <defName>OE_Direwolf</defName>
    <label>direwolf</label>
    <labelPlural>direwolves</labelPlural>
    <race>OE_Direwolf</race>
    <lifeStages>
      <li>
        <label>direwolf puppy</label>
        <labelPlural>direwolf puppies</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Direwolf_Black</texPath>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Dessicated_Direwolf_east</texPath>
          <drawSize>1.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Direwolf_Black</texPath>
          <drawSize>1.75</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Dessicated_Direwolf_east</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Direwolf_Black</texPath>
          <drawSize>2.2</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Direwolf/Dessicated_Direwolf_east</texPath>
          <drawSize>2.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	<alternateGraphicChance>0.75</alternateGraphicChance>
	<alternateGraphics>
	  <li>
	    <texPath>Things/Pawn/Animal/Direwolf/Direwolf_Grey</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Direwolf/Direwolf_White</texPath>
	  </li>
	</alternateGraphics>
  </PawnKindDef>

</Defs>

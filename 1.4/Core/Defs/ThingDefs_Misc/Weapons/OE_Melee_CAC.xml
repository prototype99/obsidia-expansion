  <ThingDef Name="CACScytheBase" ParentName="OEMeleeBase" Abstract="True">
	<uiIconScale>1.2</uiIconScale>
	<weaponTags>
	  <li>CACBaseMelee</li>
    </weaponTags>
	<tradeTags>
      <li>CACWeapon</li>
    </tradeTags>
	<statBases>
      <WorkToMake>10000</WorkToMake>
      <Mass>2.5</Mass>
    </statBases>
	<equippedStatOffsets>
      <WorkSpeedGlobal>-0.35</WorkSpeedGlobal>
	  <Flammability>-0.75</Flammability>
    </equippedStatOffsets>
	<tools>

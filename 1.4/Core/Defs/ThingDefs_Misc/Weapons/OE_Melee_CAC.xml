<!--=============== CAC - Thurible ====================-->
  <ThingDef Name="CACThuribleBase" ParentName="OEMeleeBase" Abstract="True">
	<uiIconScale>0.85</uiIconScale>
	<graphicData>
	  <drawOffsetNorth>(0.0, 0.0, -0.15)</drawOffsetNorth>
	  <drawOffsetEast>(0.0, 0.0, -0.15)</drawOffsetEast>
	  <drawOffsetSouth>(0.0, 0.0, -0.15)</drawOffsetSouth>
	  <drawOffsetWest>(0.0, 0.0, -0.15)</drawOffsetWest>
    </graphicData>
	<weaponTags>
	  <li>CACRangedMelee</li>
    </weaponTags>
	<tradeTags>
      <li>CACWeapon</li>
    </tradeTags>
	<statBases>
      <WorkToMake>7500</WorkToMake>
      <Mass>1.5</Mass>
	  <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
	<equippedStatOffsets>
      <WorkSpeedGlobal>-0.35</WorkSpeedGlobal>
	  <Flammability>-0.75</Flammability>
    </equippedStatOffsets>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Wave_CAC_W</defaultProjectile>
        <warmupTime>0.8</warmupTime>
        <range>4.9</range>
		<burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <soundCast>ThumpCannon_Fire</soundCast>
      </li>
    </verbs>
	<tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>10</power>
		<armorPenetration>0.25</armorPenetration>
        <cooldownTime>1.8</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>Stun</def>
            <amount>10</amount>
            <chance>0.25</chance>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
	<recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>


<Defs>
<!--=============== OES - Shotgun Sidearm ====================-->
  <ThingDef ParentName="OERangedBaseNQ">
    <defName>OES_ShotgunS</defName>
    <label>Heroic Hellscream</label>
    <description>Heroic Shotgun Sidearm used by Eidolons. Specially modified weapon charged with Fire and EMP damages.\n\nThis modification deprives item's quality levels.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/OES/ShotgunSidearm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<uiIconScale>1.2</uiIconScale>
	<soundInteract>Interact_Shotgun</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
	  <li>ShortShots</li>
    </weaponClasses>
	<weaponTags>
	  <li>OESGun</li>
    </weaponTags>
	<tradeTags>
      <li>OESWeapon</li>
    </tradeTags>
	<equippedStatOffsets>
	  <PainShockThreshold>-0.05</PainShockThreshold>
	  <MoveSpeed>0.10</MoveSpeed>
	  <PsychicSensitivity MayRequire="Ludeon.RimWorld.Royalty">0.25</PsychicSensitivity>
      <PsychicEntropyRecoveryRate MayRequire="Ludeon.RimWorld.Royalty">0.04</PsychicEntropyRecoveryRate>
	  <SocialIdeoSpreadFrequencyFactor MayRequire="Ludeon.RimWorld.Ideology">0.10</SocialIdeoSpreadFrequencyFactor>
	  <WorkSpeedGlobalOffsetMech MayRequire="Ludeon.RimWorld.Biotech">0.10</WorkSpeedGlobalOffsetMech>
	</equippedStatOffsets>
	<statBases>
      <MarketValue>4740</MarketValue>
	  <Mass>2.0</Mass>
	  <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.90</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_OES_SS</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>13.9</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
		<soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>13</power>
		<armorPenetration>0.3</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>13</power>
		<armorPenetration>0.3</armorPenetration>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>


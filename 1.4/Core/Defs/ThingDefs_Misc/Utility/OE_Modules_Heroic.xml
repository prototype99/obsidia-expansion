<Defs>
<!--=============== OE - Heroic Modules ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OEHeroicModuleBase" ParentName="ApparelNoQualityBase" Abstract="True">
    <description>The module provides the owner with various bonuses, depending on the model. Designed for use in various areas of Obsidia.</description>
	<techLevel>Spacer</techLevel>
	<smeltable>false</smeltable>
	<thingSetMakerTags>
	  <li>RewardStandardMidFreq</li>
	</thingSetMakerTags>
	<thingCategories>
      <li>Apparel</li>
    </thingCategories>
	<tradeTags>
      <li>OEModules</li>
    </tradeTags>
	<statBases>
      <MarketValue>3550</MarketValue>
	  <Mass>0.2</Mass>
	  <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0.35</Flammability>
	  <EquipDelay>4</EquipDelay>
	  <Beauty>0</Beauty>
    </statBases>
	<costStuffCount>35</costStuffCount>
	<tickerType>Normal</tickerType>
	<apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
	  <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
    </apparel>
  </ThingDef>


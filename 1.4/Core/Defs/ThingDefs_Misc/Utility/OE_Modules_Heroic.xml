  <ThingDef ParentName="OEHeroicModuleBase">
    <defName>OE_Module_HeroicWarrior</defName>
    <label>Heroic Battle Module - Warrior</label>
    <graphicData>
      <texPath>Things/Item/Equipment/Utility/Modules/HB_Battle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
	<apparel>
	  <tags>
		<li>OEModuleHB</li>
      </tags>
	  <defaultOutfitTags>
		<li>Soldier</li>
      </defaultOutfitTags>
	</apparel>
	<equippedStatOffsets>
      <ShootingAccuracyPawn>6</ShootingAccuracyPawn>
	  <AimingDelayFactor>-0.30</AimingDelayFactor>
	  <MeleeHitChance>6</MeleeHitChance>
	  <MeleeDodgeChance>6</MeleeDodgeChance>

      <texPath>Things/Item/Equipment/Apparel/Helmet/ODC/ODCHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
	<statBases>
	  <MarketValue>825</MarketValue>
    </statBases>
    <costList Inherit="False">
      <OE_Obsidian>55</OE_Obsidian>
	  <OE_Platinum>20</OE_Platinum>
	  <OE_Mooncloth>20</OE_Mooncloth>
	  <OE_Syntherius>5</OE_Syntherius>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Helmet/ODC/ODCHelmet</wornGraphicPath>

<Defs>
<!--=============== CAC Armor ====================-->
  <ThingDef Name="CACArmorBase" ParentName="OEArmorBase" Abstract="True">
	<tradeTags>
      <li>CACCultist</li>
    </tradeTags>
	<statBases>
      <WorkToMake>100000</WorkToMake>
    </statBases>
	<recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>

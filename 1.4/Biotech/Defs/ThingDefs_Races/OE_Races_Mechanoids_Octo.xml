<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Octo ====================-->
  <ThingDef ParentName="LightMechanoid">
    <defName>OE_Mech_Octo</defName>
    <label>Octo-Bot</label>
    <description>A mechanoid designed as worker. Lacking a ranged weapon, it can make only weak melee attacks. Octo-Bot is designed to perform a large number of tasks such as construction, crafting, hauling, mining, smithing, and tailoring.</description>
    <statBases>
      <MarketValue>1500</MarketValue>
      <MoveSpeed>3.5</MoveSpeed>
      <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
      <MechEnergyLossPerHP>0.66</MechEnergyLossPerHP>
	  <WorkSpeedGlobal>0.75</WorkSpeedGlobal>
    </statBases>
	<tools>
	  <li>
        <label>tentacle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Arms</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>OEMechanicalOcto</body>
      <baseHealthScale>0.55</baseHealthScale>
	  <mechEnabledWorkTypes>
        <li>Construction</li>
		<li>Crafting</li>
		<li>Hauling</li>
		<li>Mining</li>
		<li>Smithing</li>
        <li>Tailoring</li>
      </mechEnabledWorkTypes>
      <lifeStageAges Inherit="False">
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Lifter_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Lifter_Death</soundDeath>
          <soundCall>Pawn_Mech_Lifter_Call</soundCall>
        </li>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>100</minAge>
          <soundWounded>Pawn_Mech_Lifter_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Lifter_Death</soundDeath>
          <soundCall>Pawn_Mech_Lifter_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
	<butcherProducts>
      <OE_Platinum>20</OE_Platinum>
      <OE_Mythril>10</OE_Mythril>
    </butcherProducts>
  </ThingDef>
    
  <PawnKindDef ParentName="NonCombatLightMechanoidKind">
    <defName>OE_Mech_Octo</defName>
    <label>Octo-Bot</label>
    <race>OE_Mech_Octo</race>
	<allowInMechClusters>false</allowInMechClusters>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Octo/Octo</texPath>
          <maskPath>Things/Pawn/Mechanoid/Octo/AllegianceOverlays/Mech_Octo</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <drawSize>1.25</drawSize>
        </bodyGraphicData>
      </li>
	  <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Mechanoid/Octo/OctoAncient</texPath>
          <maskPath>Things/Pawn/Mechanoid/Octo/AllegianceOverlays/Mech_Octo</maskPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <drawSize>1.25</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
  </PawnKindDef>

</Defs>
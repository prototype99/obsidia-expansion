<!--=============== Ranged ====================-->
<!--=============== Pistol ====================-->
<!--=============== Base ====================-->
  <ThingDef Name="OECTrophyPistolBase" ParentName="OERangedBaseNC" Abstract="True">
	<uiIconScale>1.2</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
	<weaponClasses>
      <li>RangedLight</li>
    </weaponClasses>
	<statBases>
	  <Mass>2.5</Mass>
	  <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
    </statBases>
	<equippedStatOffsets>
      <PsychicSensitivityOffset>0.50</PsychicSensitivityOffset>
      <PsychicEntropyRecoveryRate>0.083</PsychicEntropyRecoveryRate>
	  <MeleeDodgeChance>10.0</MeleeDodgeChance>
	  <MeleeHitChance>2</MeleeHitChance>
    </equippedStatOffsets>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_OEC_Trophy_P</defaultProjectile>
        <warmupTime>0.35</warmupTime>
        <range>25.9</range>
        <soundCast>Shot_Revolver</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>20</power>
		<armorPenetration>0.35</armorPenetration>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
  </ThingDef>


<!--=============== Normal ====================-->
  <ThingDef ParentName="ODCRangedBase">
    <defName>ODC_Pistol</defName>
    <label>Purpose</label>
    <description>Common Auto Pistol used bby Obsidia Drifters.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/ODC/Pistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<uiIconScale>1.2</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
	<weaponTags>
      <li>ODCLightGun</li>
    </weaponTags>
	<statBases>
      <MarketValue>490</MarketValue>
	  <Mass>1.5</Mass>
	  <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.40</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
	<verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ODC_P</defaultProjectile>
        <warmupTime>0.75</warmupTime>
        <range>20.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
	<recipeMaker>
	  <researchPrerequisite>ODCGear</researchPrerequisite>	
    </recipeMaker>
    <costList>
      <OE_Obsidian>55</OE_Obsidian>
	  <OE_Platinum>40</OE_Platinum>
	  <OE_Mooncloth>2</OE_Mooncloth>
      <OE_Syntherius>5</OE_Syntherius>
    </costList>
  </ThingDef>


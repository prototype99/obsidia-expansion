<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Raptors Base ====================-->
  <ThingDef Name="OEBaseRaptor" ParentName="AnimalThingBase" Abstract="True">
    <statBases>
      <MoveSpeed>7.0</MoveSpeed>
      <MarketValue>1150</MarketValue>
      <ComfyTemperatureMin>-10</ComfyTemperatureMin>
	  <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
    </statBases>
    <tools>
      <li>
        <label>left foot claw</label>
        <capacities>
          <li>Scratch</li>
		  <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>OELeftFootClawAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.35</chanceFactor>
      </li>
      <li>
        <label>right foot claw</label>
        <capacities>
          <li>Scratch</li>
		  <li>Stab</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>OERightFootClawAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.35</chanceFactor>
      </li>
	  <li>
        <label>left arm claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>OELeftArmClawAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.35</chanceFactor>
      </li>
      <li>
        <label>right arm claw</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>OERightArmClawAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.35</chanceFactor>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <body>OERaptorLike</body>
      <predator>true</predator>
	  <packAnimal>true</packAnimal>
      <maxPreyBodySize>2.0</maxPreyBodySize>
      <petness>0.1</petness>
      <baseBodySize>1.0</baseBodySize>
      <baseHungerRate>0.2</baseHungerRate>
      <baseHealthScale>1.15</baseHealthScale>
      <foodType>CarnivoreAnimal</foodType>
      <leatherDef>OE_Leather_Raptor</leatherDef>
      <nameOnTameChance>1</nameOnTameChance>
      <trainability>Advanced</trainability>
      <wildness>0.85</wildness>
      <manhunterOnTameFailChance>0.35</manhunterOnTameFailChance>
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <gestationPeriodDays>10</gestationPeriodDays>
      <lifeExpectancy>35</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.5</minAge>
          <soundWounded>Pawn_Dog_Injured</soundWounded>
          <soundDeath>Pawn_Dog_Death</soundDeath>
          <soundCall>Pawn_Dog_Call</soundCall>
          <soundAngry>Pawn_Dog_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
	<comps>
		<li Class="CompProperties_EggLayer">
			<eggUnfertilizedDef>OE_EggRaptorUnfertilized</eggUnfertilizedDef>
			<eggFertilizedDef>OE_EggRaptorFertilized</eggFertilizedDef>
			<eggFertilizationCountMax>1</eggFertilizationCountMax>
			<eggLayIntervalDays>14</eggLayIntervalDays>
			<eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
			<eggCountRange>1~2</eggCountRange>
		</li>
	</comps>
    <tradeTags>
      <li>OEAnimal</li>
	  <li>AnimalUncommon</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase" Name="OEKindBaseRaptor" Abstract="True">
    <combatPower>200</combatPower>
    <ecoSystemWeight>0.4</ecoSystemWeight>
  </PawnKindDef>

<!--=============== Raptor ====================-->
  <ThingDef ParentName="OEBaseRaptor">
    <defName>OE_Raptor</defName>
    <label>raptor</label>
    <description>Raptors are large, aggressive theropods, but seem to be very intelligent for beasts. These theropods prefer to live in warmer climates. Difficult but accessible to taming, which makes these fast and deadly predators an excellent fighting unit.</description>
    <race>
      <meatLabel>raptor meat</meatLabel>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="OEKindBaseRaptor">
    <defName>OE_Raptor</defName>
    <label>raptor</label>
    <labelPlural>raptors</labelPlural>
    <race>OE_Raptor</race>
    <lifeStages>
      <li>
        <label>raptor juvenile</label>
		<labelPlural>raptor juveniles</labelPlural>
		<bodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Raptor_Black</texPath>
          <drawSize>1.1</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Dessicated_Raptor_east</texPath>
          <drawSize>1.1</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Raptor_Black</texPath>
          <drawSize>1.75</drawSize>
          <shadowData>
            <volume>(0.25, 0.3, 0.25)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Dessicated_Raptor_east</texPath>
          <drawSize>1.75</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Raptor_Black</texPath>
          <drawSize>2.2</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.15)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Raptor/Dessicated_Raptor_east</texPath>
          <drawSize>2.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
	<alternateGraphicChance>0.9</alternateGraphicChance>
	<alternateGraphics>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Blue</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Brown</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Cyan</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Green</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Grey</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Pink</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Purple</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_Silver</texPath>
	  </li>
	  <li>
	    <texPath>Things/Pawn/Animal/Raptor/Raptor_White</texPath>
	  </li>
	</alternateGraphics>
  </PawnKindDef>

</Defs>

<?xml version="1.0" encoding="utf-8" ?>

<Defs>
<!--=============== Artificial Ecosystem Base ====================-->
  <ThingDef ParentName="BuildingBase" Name="OEArtEcosys" Abstract="True">
    <thingClass>Building_PlantGrower</thingClass>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <altitudeLayer>LowPlant</altitudeLayer>
    <defaultPlacingRot>East</defaultPlacingRot>
    <passability>PassThroughOnly</passability>
    <pathCost>30</pathCost>
    <constructEffect>ConstructMetal</constructEffect>
    <fillPercent>0.30</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <fertility>5.0</fertility>
    <building>
      <defaultPlantToGrow>Plant_Rice</defaultPlantToGrow>
      <sowTag>Ground</sowTag>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
    </building>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Flickable"/>
    </comps>
    <researchPrerequisites>
      <li>OEFarmExp</li>
    </researchPrerequisites>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Production</designationCategory>
  </ThingDef>

<!--=============== Artificial Ecosystem Micro ====================-->
  <DesignatorDropdownGroupDef>
	<defName>OE_ArtEcosys_Micro</defName>
  </DesignatorDropdownGroupDef>

  <ThingDef ParentName="OEArtEcosys" Name="OEArtEcosysMicro" Abstract="True">
	<designatorDropdown>OE_ArtEcosys_Micro</designatorDropdown>
    <graphicData>
	  <drawSize>(1,1)</drawSize>
    </graphicData>
	<statBases>
      <WorkToBuild>750</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <OE_Obsidian>15</OE_Obsidian>
      <OE_Mythril>5</OE_Mythril>
	  <OE_Syntherius>2</OE_Syntherius>
    </costList>
  </ThingDef>
  
<!--=============== Various ====================-->
<!--=============== Sun ====================-->
  <ThingDef ParentName="OEArtEcosysMicro">
    <defName>OE_ArtEcosysMicro_Sun</defName>
    <label>small obsidia artificial ecosystem (sun)</label>
    <description>Provides plants grow faster planted in this small artificial ecosystem due Obsidia technologies. Requires a high amount of power to work; plants will die if power is cut. Contains a built-in sun lamp to provide light for the plants.</description>
    <graphicData>
      <texPath>Things/Building/Farm/Small_Sun</texPath>
    </graphicData>
	<uiIconPath>Things/Building/Farm/Small_Sun</uiIconPath>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>250</basePowerConsumption>
      </li>
	  <li Class="CompProperties_Glower">
		<overlightRadius>3.0</overlightRadius>
		<glowRadius>3.0</glowRadius>
		<glowColor>(370,370,370,0)</glowColor>
	  </li>
    </comps>
  </ThingDef>


<Defs>
<!--=============== Player Obsidia Colonist ====================-->
  <PawnKindDef ParentName="BasePlayerPawnKind">
    <defName>OE_PlayerColonist</defName>
    <label>obsidia colonist</label>
    <defaultFactionType>OE_ObsidiaPlayerColony</defaultFactionType>
    <chemicalAddictionChance>0.06</chemicalAddictionChance>
	<apparelTags>
      <li>OEWorker</li>
    </apparelTags>
	<specificApparelRequirements>
      <li>
		<requiredTag>OEWorker</requiredTag>
      </li>
    </specificApparelRequirements>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelMoney>350~600</apparelMoney>
    <backstoryCryptosleepCommonality>1</backstoryCryptosleepCommonality>
    <techHediffsChance>0.03</techHediffsChance>
    <techHediffsMoney>50~800</techHediffsMoney>
    <techHediffsTags>
      <li>Simple</li>
      <li>ImplantEmpireCommon</li>
    </techHediffsTags>
  </PawnKindDef>


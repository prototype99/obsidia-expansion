<Defs>
<!--=============== Obsidia Civilians ====================-->
  <PawnKindDef Name="OEPawnC" Abstract="True">
    <race>Human</race>
    <defaultFactionType>ObsidiaEmpire</defaultFactionType>
	<maxGenerationAge>65</maxGenerationAge>
	<baseRecruitDifficulty>0.35</baseRecruitDifficulty>
    <chemicalAddictionChance>0.15</chemicalAddictionChance>
    <backstoryCryptosleepCommonality>0.08</backstoryCryptosleepCommonality>
    <gearHealthRange>1~1</gearHealthRange>
	<invNutrition>2.55</invNutrition>
    <biocodeWeaponChance>0.05</biocodeWeaponChance>

  <ThingDef ParentName="ODCRangedPersonaNC">
    <defName>ODC_Pistol_P</defName>
    <label>Persona Purpose</label>
    <description>Persona common Auto Pistol used bby Obsidia Drifters.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Weapons/ODC/Pistol_P</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<uiIconScale>1.2</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
	<weaponTags>
      <li>ODCLightGun</li>
    </weaponTags>
	<statBases>
      <MarketValue>990</MarketValue>

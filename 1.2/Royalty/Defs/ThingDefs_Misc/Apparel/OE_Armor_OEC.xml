<!--=============== Smoker ====================-->
  <ThingDef ParentName="OECArmorMod">
	<defName>OEC_Armor_M_Smoker</defName>
    <label>OEC Officer Armor(Fogler)</label>
    <description>Light power armor, well protects the owner without mobility restriction. Designed and modified for use by Inquisitors representing the OEC.\n\nModified with the addition of a Smokepop pack.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Apparel/Armor/OEC/Smoker/OECArmor_M</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
	  <MarketValue>4125</MarketValue>
	  <SmokepopBeltRadius>6.9</SmokepopBeltRadius>
    </statBases>
    <costList Inherit="False">
      <OEC_Armor_M>1</OEC_Armor_M>
	  <OE_ModernizationKit>1</OE_ModernizationKit>
    </costList>
    <apparel>
      <wornGraphicPath>Things/Item/Equipment/Apparel/Armor/OEC/Smoker/OECArmor_M</wornGraphicPath>
	  <tags>
		<li>OECInquisitor_Smoker</li>
      </tags>
    </apparel>
	<comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>5</maxCharges>
        <ammoDef>OE_Syntherius</ammoDef>
        <ammoCountPerCharge>1</ammoCountPerCharge>
        <baseReloadTicks>60</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>smokepop</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
    <verbs>
      <li>
        <label>pop smoke</label>
		<verbClass>Verb_Smokepop</verbClass>
		<commandIcon>UI/Abilities/Armor/Smoker</commandIcon>
        <violent>false</violent>
        <hasStandardCommand>true</hasStandardCommand>
        <targetable>false</targetable>
        <nonInterruptingSelfCast>true</nonInterruptingSelfCast>
        <onlyManualCast>True</onlyManualCast>
      </li>
    </verbs>
  </ThingDef>


<!--=============== OEC - Scepter ====================-->
  <RecipeDef>
    <defName>OE_Bond_OEC_Trophy_Scepter</defName>
    <label>Persona bond Ancient Scepter</label>
    <description>Persona bond an Ancient Scepter.</description>
    <jobString>Persona bonding a Ancient Scepter.</jobString>
	<workAmount>1000</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OEC_Trophy_Scepter</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>OE_PersonaKit</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OEC_Trophy_Scepter</li>
		<li>OE_PersonaKit</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OEC_Trophy_Scepter_P>1</OEC_Trophy_Scepter_P>
    </products>
	<recipeUsers>
      <li>OE_PersonaTable</li>
    </recipeUsers>
	<skillRequirements>
	  <Crafting>12</Crafting>
	  <Intellectual>12</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
  </RecipeDef>

